                </div>
            </div>
            <div class="col-sm-1 no-gutter">
                <button id="btnBuscar" class="btn btn-warning"><i class="fas fa-search"></i>Buscar</button>
            </div>
            <div class="col-sm-1 no-gutter">
                @if (privilegioCapacitacion != 2 && privilegioCapacitacion != 3) {
                <button id="btnAlta" class="btn btn-warning"><i class="fas fa-search"></i>Alta</button>
                }
            </div>
        </div>
        <br>
