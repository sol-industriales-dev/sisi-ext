        $('#cboAno').select2();
    });
</script>
<div class="col-sm-12">
    <div class="center" style="text-align: center;">
    </div>
    <!-- CONTROLES DE FILTRO -->
    <fieldset class="fieldset-custm">
        <legend class="legend-custm"><i class="fas fa-list"></i>Filtros Busqueda</legend>
        <br>
        <div class="row">
            <div class="col-sm-4 no-gutter">
                <div class="input-group">
