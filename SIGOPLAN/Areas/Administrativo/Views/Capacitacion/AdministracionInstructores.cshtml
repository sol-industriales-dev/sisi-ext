                    <select id="cboProyecto" class="form-control"></select>
                </div>
            </div>
            <div class="col-sm-4 no-gutter">
                <div class="input-group">
                    <span class="input-group-addon">Instructor</span>
                    <select id="cboInstructor" class="form-control"></select>
                </div>
            </div>
            <div class="col-sm-2 no-gutter">
