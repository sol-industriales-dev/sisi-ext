<div class="modal fade" id="modalAlta" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg btn-primary" style="background-color:#1A5AEA">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h3><label id="titleCurso"></label></h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-10 mrgTop">
                    </div>
                    <div class="col-sm-2 mrgTop">
                        <button type="button" class="btn btn-success" id="btnGenerarModal">
                            <i class="fas fa-plus"></i> Agregar
                        </button>
                    </div>

                    <div class="col-sm-12 mrgTop">
                        <label for="tablaEvaluadores" class="form-label">Instructores:</label>
                        <br>
                        <br>
                        <table id="tablaEvaluadores" class="table table-hover table-fixed table-bordered compact" width="100%"></table>
                    </div>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="modalAltaAgregarEditar" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header modal-bg btn-primary" style="background-color:#1A5AEA">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <div class="text-center">
                        <h3><label id="titleCurso"></label></h3>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <label for="inputClaveEmpleado" class="form-label">Clave Empleado:</label>
                            <input type="number" name="inputClaveEmpleado" id="inputClaveEmpleado" class="form-control" />
                        </div>

                        <div class="col-sm-3">
                            <label for="inputNombre" class="form-label">Nombre:</label>
                            <input type="text" name="inputNombre" id="inputNombre" class="form-control" disabled>
                        </div>

                        <div class="col-sm-3">
                            <label for="inputApellidoPaterno" class="form-label">Apellido Paterno:</label>
                            <input type="text" name="inputApellidoPaterno" id="inputApellidoPaterno" class="form-control" disabled>
                        </div>

                        <div class="col-sm-3">
                            <label for="inputApellidoMaterno" class="form-label">Apellido Materno:</label>
                            <input type="text" name="inputApellidoMaterno" id="inputApellidoMaterno" class="form-control" disabled>
                        </div>
                        <div class="col-sm-4">
                            <label for="selectGrupo" class="form-label">Grupo:</label>
                            <select id="selectGrupo" class="form-control"></select>
                        </div>
                        <div class="col-sm-4" style="margin-top: 25px; margin-bottom: 4px;">
                            <input type="checkbox" id="checkBoxEvaluador" class="regular-checkbox" />
                            <label for="checkBoxEvaluador"></label>
                            <label style="font-size: 14px;">&nbsp;Instructor</label>
                        </div>
                        <div class="col-sm-4">
                            <label for="cboTematica" class="form-label">Tematica:</label>
                            <select id="cboTematica" class="form-control">

                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label for="inputFechaInicioRol" class="form-label">Fecha Inicio Rol:</label>
                            <input type="text" name="inputFechaInicioRol" id="inputFechaInicioRol" class="form-control" />
                        </div>
                        <div class="col-sm-4">
                            <label for="inputCC" class="form-label">Proyecto:</label>
                            <input type="text" name="inputCC" id="inputCC" class="form-control" disabled />
                        </div>
                        <br>
                        <br>
                    </div>
                    <br>
                    <br>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" id="btnCancelar">
                            <i class="fas fa-undo"></i> Cancelar
                        </button>

                        <button type="button" class="btn btn-primary" id="btnGuardar">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>










