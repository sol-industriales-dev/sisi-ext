@{
ViewBag.Title = "CCAutorizante";
Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />

<style>
    .select2-container {
        width: 100% !important;
        display: block;
    }
</style>

<!-- HTML -->
<div class="row text-center margin-top">
    <h2>Relación CC-Autorizante</h2>
</div>

<fieldset class="fieldset-custm margin-top">
    <div class="row mrgTop">
        <div class="col-xs-12">
            <button type="button" class="btn btn-primary pull-right" id="botonAgregar"><i class="fas fa-plus"></i> Agregar</button>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 mrgTop">
            <table id="tablaRelacion" class="table table-hover table-fixed table-bordered" width="100%"></table>
        </div>
    </div>
</fieldset>

<div class="modal fade" id="modalRelacion">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center">
                    <h3>Relación CC-Autorizante</h3>
                </div>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 noPadLeft">
                        <label for="selectCentroCosto" class="form-label">Centro de Costo:</label>
                        <select id="selectCentroCosto" class="form-control select2"></select>
                    </div>

                    <div class="col-sm-3">
                        <label for="inputClaveEmpleado" class="form-label">Clave Empleado:</label>
                        <input type="number" name="inputClaveEmpleado" id="inputClaveEmpleado" class="form-control" />
                    </div>

                    <div class="col-sm-3 noPadLeft">
                        <label for="inputNombre" class="form-label">Nombre:</label>
                        <input type="text" name="inputNombre" id="inputNombre" class="form-control" disabled>
                    </div>

                    <div class="col-sm-3 noPadLeft">
                        <label for="inputApellidoPaterno" class="form-label">Apellido Paterno:</label>
                        <input type="text" name="inputApellidoPaterno" id="inputApellidoPaterno" class="form-control" disabled>
                    </div>

                    <div class="col-sm-3 noPadLeft">
                        <label for="inputApellidoMaterno" class="form-label">Apellido Materno:</label>
                        <input type="text" name="inputApellidoMaterno" id="inputApellidoMaterno" class="form-control" disabled>
                    </div>

                    <div class="col-sm-4">
                        <label for="selectTipoPuesto" class="form-label">Tipo Puesto:</label>
                        <select id="selectTipoPuesto" class="form-control"></select>
                    </div>

                    <!-- <div class="col-sm-4">
                        <label for="inputOrden" class="form-label">Orden:</label>
                        <input id="inputOrden" class="form-control">
                    </div> -->
                </div>
            </div>
            <div class="modal-footer margin-top">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fas fa-undo"></i> Cancelar
                </button>

                <button type="button" class="btn btn-primary" id="botonGuardar">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
<script src="~/Scripts/js/Administrativo/Seguridad/Capacitacion/RelacionCCAutorizante.js"></script>