@{
    ViewBag.Title = "CCAutorizante";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />

<style>
    .select2-container {
        width: 100% !important;
        display: block;
    }
</style>

<!-- HTML -->
<div class="row text-center margin-top">
    <h2>Relación CC-Departamento-Razón Social</h2>
</div>

<fieldset class="fieldset-custm margin-top">
    <div class="row mrgTop">
        <div class="col-xs-12">
            <button type="button" class="btn btn-primary pull-right" id="botonAgregar"><i class="fas fa-plus"></i> Agregar</button>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 mrgTop">
            <table id="tablaRelacion" class="table table-hover table-fixed table-bordered" width="100%"></table>
        </div>
    </div>
</fieldset>

<div class="modal fade" id="modalRelacion">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center">
                    <h3>Relación CC-Departamento-Razón Social</h3>
                </div>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <label for="selectDepartamentoConstruplan" class="form-label">Departamentos Construplan:</label>
                        <select id="selectDepartamentoConstruplan" class="form-control" multiple></select>
                    </div>

                    <div class="col-sm-6">
                        <label for="selectDepartamentoArrendadora" class="form-label">Departamentos Arrendadora:</label>
                        <select id="selectDepartamentoArrendadora" class="form-control" multiple></select>
                    </div>

                    <div class="col-sm-6">
                        <label for="selectRazonSocial" class="form-label">Razón Social:</label>
                        <select id="selectRazonSocial" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="modal-footer margin-top">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fas fa-undo"></i> Cancelar
                </button>

                <button type="button" class="btn btn-primary" id="botonGuardar">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalRelacionEditar">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center">
                    <h3>Relación CC-Departamento-Razón Social</h3>
                </div>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <label for="selectDepartamentoEditar" class="form-label">Departamento:</label>
                        <select id="selectDepartamentoEditar" class="form-control"></select>
                    </div>

                    <div class="col-sm-6">
                        <label for="selectRazonSocialEditar" class="form-label">Razón Social:</label>
                        <select id="selectRazonSocialEditar" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="modal-footer margin-top">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fas fa-undo"></i> Cancelar
                </button>

                <button type="button" class="btn btn-primary" id="botonGuardarEditar">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
<script src="~/Scripts/js/Administrativo/RecursosHumanos/Capacitacion/RelacionCCDepartamentoRazonSocial.js"></script>