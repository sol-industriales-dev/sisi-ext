@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
    var idEmpresa = new SIGOPLAN.Controllers.Principal.HomeController();
}

<link href='~/Content/style/datatables/datatables.min.css' rel='stylesheet' />
<link href="~/Content/style/css/Contabilidad/Sistema Contable/Cuenta/_conciliacion.css" rel="stylesheet" />

<h2 class="text-center"><i class="fas fas-table"></i> Conciliación de Centros de Costos</h2>
<fieldset class='fieldset-custm'>
    <legend class='legend-custm'><i class="fas fas-search"></i> Busqueda</legend>
    <div class='col-xs-3 col-md-3 col-lg-3'>
        <div class='input-group'>
            <span class='input-group-addon'> Centro de Costo Principal</span>
            <select class="form-control" multiple="multiple" id="cboCCPal"></select>
        </div>
    </div>
    @* <input class="text" id="idEmpresa" value="@idEmpresa.getEmpresaID()" /> *@
    <div class='col-xs-3 col-md-3 col-lg-3'>
        <div class='input-group'>
            <span class='input-group-addon'>Centro de Costo Secundaria</span>
            <select class="form-control" multiple="multiple" id="cboCCSec"></select>
        </div>
    </div>
    <div class='col-xs-3 col-md-3 col-lg-3'>
        <button id='botonBuscar' type='button' class='btn btn-default'><i class='fa fa-search'></i> Búscar</button>
        @* <button id='botonGuardar' type='button' class='btn btn-primary'><i class='fa fa-save'></i> Guardar</button>
        *@
    </div>
</fieldset>
<fieldset class='fieldset-custm'>
    <legend class='legend-custm'><i class="fas fas-table"></i> Centros de Costos</legend>
    <div class='table-responsive'>
        <button id='botonNuevo' type='button' class='btn btn-success'> Nueva
            relacion</button>
        <table id='tblConciliacionCC' class='table table-fixed table-striped'>
            <thead class='bg-table-header'></thead>
        </table>
    </div>
</fieldset>

<div class="modal fade" id="modalRelacionCC">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <h2 class="text-center"><i class="fas fas-table"></i> Conciliación de Centros de Costos</h2>
            <fieldset class='fieldset-custm'>
                <legend class='legend-custm'><i class="fas fas-search"></i> Busqueda</legend>
                <div class='col-xs-4'>
                    <div class='input-group'>
                        <span class='text'> Centro de Costo Principal</span>
                        <select class="form-control" id="CCPrincipal"></select>
                    </div>
                </div>
                <div class='col-xs-4'>
                    <div class='input-group'>
                        <span class='text'>Centro de Costo Secundaria</span>
                        <select class="form-control" id="CCSecundario"></select>
                    </div>
                </div>
            </fieldset>
            <div class="modal-footer margin-top">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fas fa-undo"></i> Cancelar
                </button>

                <button type="button" class="btn btn-primary" id="botonGuardar">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </div>

        </div>
    </div>
</div>


<script src='~/Scripts/Utilities/datatables/datatables.min.js'></script>
<script src="~/Scripts/js/Administrativo/Contabilidad/conciliacionCC.js"></script>
