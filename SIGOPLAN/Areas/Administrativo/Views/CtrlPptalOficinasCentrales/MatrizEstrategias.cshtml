@{
    ViewBag.Title = "Matriz estrategias";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href='~/Content/select2.css' rel='stylesheet' />
<link href="~/Content/style/css/Administrativo/CtrlPptalOficinasCentrales/MatrizEstrategias.css" rel="stylesheet" />

<!-- CONTAINER FLUID -->
<div class="container-fluid">
    <br><br>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><h2>MATRIZ DE ESTRATEGIAS</h2></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="pull-right">
                            <button type="button" class="btn btn-primary" id="btnFiltroBuscar"><i class="fas fa-search"></i>&nbsp;Buscar</button>
                            <button type="button" class="btn btn-primary marginRight" id="btnFiltroNuevoMatrizEstrategia"><i class="fas fa-plus"></i>&nbsp;Nuevo</button>
                        </div><br><br>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <table id="tblAF_CtrlPptalOfCe_MatrizEstrategicas" class="table table-hover table-bordered compact" width="100%"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END: CONTAINER FLUID -->

<!-- MODAL CREAR/EDITAR CONTROL IMPACTO -->
<div id='mdlCEMatrizEstrategia' class='modal fade' role='dialog' data-backdrop="static">
    <div class='modal-dialog modal-lg'>
        <div class='modal-content'>
            <div class='modal-header text-center'>
                <h1 class='modal-title'><i class='fa fa-dollar'></i><span id="lblTitleCEMatrizEstrategia"></span></h1>
            </div>
            <div class='modal-body'>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="input-group marginBottom">
                            <span class="input-group-addon">Cuenta</span>
                            <input type="text" id="txtCuenta" class="form-control" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <fieldset class='fieldset-custm marginBottom'>
                            <legend class='legend-custm'>Actividades pendientes o por realizar</legend>
                            <textarea id="txtActividades" class="inputTextArea" cols="30" rows="5"></textarea>
                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="input-group marginBottom">
                            <span class="input-group-addon">Cantidad ($)</span>
                            <input id="txtCantidad" type="text" class="form-control" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="input-group marginBottom">
                            <span class="input-group-addon">Fecha real</span>
                            <input id="txtFechaReal" type="date" class="form-control" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="input-group marginBottom">
                            <span class="input-group-addon">Responsable</span>
                            <select id="cboResponsable" class="form-control select2"></select>
                        </div>
                    </div>
                </div>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-default' data-dismiss='modal'><i class='fa fa-arrow-left'></i>&nbsp;Cerrar</button>
                <button type="button" class="btn btn-success" id="btnCEMatrizEstrategia"><span id="lblTitleBtnCEMatrizEstrategia"></span></button>
            </div>
        </div>
    </div>
</div>
<!-- END: MODAL CREAR/EDITAR CAPTURA -->

<!-- SCRIPTS -->
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/datetime-moment.js"></script>
<script src='~/Scripts/select2.js'></script>
<script src="~/Scripts/js/Administrativo/CtrlPptalOficinasCentrales/MatrizEstrategias.js"></script>
<script src="~/Scripts/Utilities/datatables/jquery.dataTables.js"></script>