                                <input type="file" id="txtArchivoAdjunto" name="attachment" style="display:none">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <label for="cboCE_TipoArchivo">Tipo de archivo:</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fas fa-user"></i></span>
                                <select id="cboCE_TipoArchivo" class="form-control select2"></select>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <button type='button' class='btn btn-success' id='btnCEArchivoAdjunto'></button>
                        </div>
                    </div>
                </div>
                <div class="row seccion">
                    <div class="col-lg-12">
                        <table id="tblArchivosAdjuntos" class="table table-hover table-bordered compact table-striped" width="100%"></table>
                    </div>
                </div>
            </div>
            <div class=' modal-footer'>
                <button type='button' class='btn btn-default' data-dismiss='modal'><i class="fas fa-undo-alt"></i>&nbsp;Cerrar</button>
