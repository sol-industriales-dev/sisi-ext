@{
    Layout = null;
    
    var usuarioSesion = (Core.DTO.RecursosHumanos.Desempeno.UsuarioDTO)Session["usuarioDesempeño"];
}

<style>
    #resultadoSeguimiento {
        background-color: deepskyblue;
        font-weight: bold;
        color: white;
        border-radius: 4px 4px;
        padding-top: 5px;
        padding-bottom: 5px;
        width: 100px;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<div class="row">
    <div class="col-sm-12">
        <div class="seccion">
            <label>Seguimiento</label>
            <select id="cboEvaMetaEvaluacion" class="form-control"></select>
            <!--<hr />-->
        </div>
        <div class="divEvaMetaForm">
            <div class="seccion">
                <label>Descripción</label>
                <p id="lblEvaMetaDescripcion"></p>
                <label>Meta Estrategica</label>
                <p id="lblEvaMetaTipo"></p>
                <!--<hr />-->
            </div>
            <div class="seccion">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h4 class="txt-bold">Resultado</h4>
                        <div id="resultadoSeguimiento"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 text-center">
                        <label>Autoevaluación</label>
                        <div class="progress">
                            <div class="progress-bar" id="progressBarAutoSeguimiento" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%; float:right;">
                                60%
                            </div>
                        </div>
                        <label>Resultado obtenido</label>
                        <p id="resultadoEvaluacionSeguimiento">100</p>
                        <label>Descripción</label>
                        <p id="descripcionEmpleado" class="text-justify">
                        </p>
                    </div>
                    <div class="col-sm-6 text-center">
                        <label>Evaluación del jefe</label>
                        <div class="progress">
                            <div class="progress-bar" id="progressBarJefeSeguimiento" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                60%
                            </div>
                        </div>
                        <label>&nbsp;</label>
                        <p>
                            &nbsp;
                        </p>
                        <label>Descripción</label>
                        <p id="descripcionJefe" class="text-justify">
                        </p>
                    </div>
                </div>
            </div>
            <div class="seccion">
                <div class="row">
                    <div class="col-sm-9"></div>
                    <div class="col-sm-3">
                        <button id="btnDescargarEvidenciasMetaFormMetaEvaluar" class="btn btn-info">
                            <i class="fa fa-download"></i> Descargar evidencias
                        </button>
                    </div>
                </div>
                <div class="row">
                    <br>
                    <div class="col-sm-12">
                        <div class="table-responsive" id="divTblSeguimiento"></div>
                    </div>
                </div>
            </div>
            @*<label>Semáforo</label>
            <div id="divEvaMetaSemaforo"></div>*@
        </div>
    </div>
</div>