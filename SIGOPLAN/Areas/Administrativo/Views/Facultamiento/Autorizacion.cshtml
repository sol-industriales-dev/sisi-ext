                                <div class="col-md-12 col-lg-12">
                                    <table id="tblMatVer" class="table table-fixed table-responsive table-striped display nowrap">
                                        <thead class="bg-table-header">
                                            <tr>
                                                <th>Mínimo</th>
                                                <th>Máximo</th>
                                                <th>Autoriza</th>
                                                <th>VoBo1</th>
                                                <th>VoBo2</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-12 col-lg-12">
                        <fieldset id="fsPuestoAnt" class='fieldset-custm'>
                            <div class='table-responsive'>
                                <table id="tblPuestoVer" class='table table-fixed table-responsive' width="100%">
                                    <thead class='bg-table-header'>
                                        <tr>
                                            <th>Puesto</th>
                                            <th>Vobo</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </fieldset>
        </div>

        <div class="col-md-6">
            

            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Facultamiento Actual:</legend>

                <div class="row form-group">
                    <div class="col-md-12 col-lg-12">
                        <div class="row">
                            <div class="col-md-3 col-lg-3">
                                <div class="input-group">
                                    <span class="input-group-addon">Fecha</span>
                                    <input type="text" id="txtFechaActual" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="col-md-4 col-lg-4">
                                <div class="input-group">
                                    <span class="input-group-addon">C.C.</span>
                                    <input id="txtCCActual" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="col-md-5 col-lg-5">
                                <div class="input-group">
                                    <span class="input-group-addon">Obra</span>
                                    <input type="text" id="txtObraActual" class="form-control" disabled />
                                </div>
                            </div>
                        </div>

                        <fieldset class="fieldset-custm">
                            <legend id="lbllegendAct" class="legend-custm">Refacciones:</legend>
                            <div class="row">
                                <div class="col-md-12 col-lg-12">
                                    <table id="tblRefacActual" class="table table-fixed table-responsive table-striped display nowrap" style="width:100%">
                                        <thead class="bg-table-header">
                                            <tr>
                                                <th>Mínimo</th>
                                                <th>Máximo</th>
                                                <th>Autoriza</th>
                                                <th>VoBo1</th>
