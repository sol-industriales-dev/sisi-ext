                        <fieldset id="fsMaterialesAct" class="fieldset-custm">
                            <legend class="legend-custm">Materiales</legend>
                            <div class="row">
                                <div class="col-md-12 col-lg-12">
                                    <table id="tblMatActual" class="table table-fixed table-responsive table-striped display nowrap">
                                        <thead class="bg-table-header">
                                            <tr>
                                                <th>Mínimo</th>
                                                <th>Máximo</th>
                                                <th>Autoriza</th>
                                                <th>VoBo1</th>
                                                <th>VoBo2</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-12 col-lg-12">
                        <fieldset id="fsPuestoActual" class='fieldset-custm'>
                            <div class='table-responsive'>
                                <table id="tblPuestoAct" class='table table-fixed table-responsive' width="100%">
                                    <thead class='bg-table-header'>
                                        <tr>
                                            <th>Puesto</th>
                                            <th>Vobo</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <label>Usuario Modificó: </label>
