@{
    ViewBag.Title = "Catálogo de Grupos y CC";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<link href="~/Content/style/datatables/datatables.min.css" rel="stylesheet" />
<link href="~/Content/style/css/Facultamientos/Catalogo.css" rel="stylesheet" />


<h1 class="text-center">Catálogo de Grupos y CC</h1>
<fieldset class="fieldset-custm">
    <legend class="legend-custm">Lista de Facultamientos</legend>
    <div class="row">
        <div class="col-md-3 col-lg-3">
            <div class="input-group extraMargen">
                <span class="input-group-addon">Agrupador</span>
                <select id="cboGrupos" class="form-control"></select>
            </div>
        </div>
        <div class="col-md-1 col-lg-1">
            <button type="button" id="btnNuevoGrupo" class="btn btn-primary extraMargen">
                <i class="fa fa-plus"></i> Nuevo Grupo
            </button>
        </div>
    </div>
    <table id="tblCC" class="table table-fixed table-hover table-responsive table-striped">
        <thead class="bg-table-header">
            <tr>
                <th>CC</th>
                <th>Descripcion</th>
                <th>Agrupador Actual</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</fieldset>
<div class="container">
    <div id="modalGrupo" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title">
                        <i class="fa fa-plus"></i> Añadir nuevo grupo
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="row container-fluid">
                        <div class="col-md-6 col-lg-6">
                            <div class="input-group">
                                <span class="input-group-addon">Nuevo Grupo</span>
                                <input type="text" id="txtGrupo" class="form-control letras" />
                            </div>
                        </div>
                        <div class="col-md-1 col-lg-1">
                            <button type="button" id="btnAgregarGrupo" class="btn btn-primary extraMargen">
                                <i class="fa fa-plus"></i> Agregar
                            </button>
                        </div>
                        <fieldset class="fieldset-custm col-md-12 col-lg-12">
                            <legend id="lblLegend" class="legend-custm">Grupos:</legend>
                            <table id="tblGrupos" class="table table-fixed table-hover table-responsive table-striped tblMonto">
                                <thead class="bg-table-header">
                                    <tr>
                                        <th>Concepto</th>
                                        <th>CC vinculados</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">
                        <i class="fa fa-arrow-left"></i>
                        Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/js/Administrativo/Facultamiento/Grupos.js"></script>