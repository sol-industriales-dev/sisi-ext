@{
    ViewBag.Title = "Facultamientos Por Empleado";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<link href="~/Content/style/datatables/datatables.min.css" rel="stylesheet" />
<link href="~/Content/style/css/Facultamientos/PorEmpleado.css" rel="stylesheet" />
<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<h1 class="text-center">Facultamientos Por Empleado</h1>
<fieldset class="fieldset-custm">
    <legend class="legend-custm"><i class="fa fa-tasks"></i> Facultamientos</legend>
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class="input-group extraMargen">
                <span class="input-group-addon">Nombre del Empleado</span>
                <input type="text" id="inputEmpleado" class="form-control letras" />
            </div>
        </div>
        <div class="col-md-3 col-lg-3">
            <div class="input-group extraMargen">
                <span class="input-group-addon">Obra</span>
                <select id="comboCC" class="form-control"></select>
            </div>
        </div>
        <div class="col-md-1 col-lg-1">
            <button id="botonBuscar" type="button" class="btn btn-primary extraMargen"><i class="fa fa-search"></i>
                Buscar</button>
        </div>
        <div class="col-md-1 col-lg-1">
            <button id="botonLimpiar" type="button" class="btn btn-primary extraMargen"><i class="fa fa-ban"></i>
                Limpiar Campos</button>
        </div>
        <div class="col-md-2 col-lg-2 col-md-offset-1 col-lg-offset-1">
            <button id="botonReporteGeneral" type="button" class="btn btn-warning extraMargen"><i class="fa fa-book"></i>
                Reporte General</button>
        </div>
    </div>
    <div class="table-responsive">
        <table id="tablaFacultamientos" class="table table-fixed table-hover table-responsive table-striped">
            <thead class="bg-table-header">
                <tr>
                    <th>C.C.</th>
                    <th>Obra</th>
                    <th>Facultamiento</th>
                    <th>Puesto</th>
                    <th>Tipo de Autorización</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</fieldset>
@Html.Partial("reportViewerView", false)
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/js/Administrativo/Facultamiento/PorEmpleado.js"></script>