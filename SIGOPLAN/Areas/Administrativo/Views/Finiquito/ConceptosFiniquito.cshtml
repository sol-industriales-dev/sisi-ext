@{
    ViewBag.Title = "ConceptosFiniquito";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Content/style/datatables/dataTables.jqueryui.css" rel="stylesheet" />
<link href="~/Content/style/datatables/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/style/css/Maquinaria/Reporte/Style-Reportes.css" rel="stylesheet" />
<link href="~/Content/style/css/Captura/Style-CapturaReportes.css" rel="stylesheet" />

<script src="~/Scripts/Utilities/datatables/jquery.dataTables.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.jqueryui.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.rowReorder.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.buttons.min.js"></script>
<script src="~/Scripts/js/Administrativo/RecursosHumanos/Finiquito/ConceptosFiniquitoJS.js"></script>

<div class="row">
    <h2 class="text-center">Conceptos Finiquito</h2>
</div>

<div class="row form-group">
    <div class="col-xs-12 col-md-12 col-lg-12">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Nuevo Concepto:</legend>
            <div class="row form-group">
                <div class="col-xs-12 col-md-12 col-lg-12">
                    <div class="col-lg-3">
                        <label> Concepto</label>
                        <input type="text" id="txtConcepto" class="form-control" />
                    </div>
                    <div class="col-lg-3">
                        <label> Detalle</label>
                        <input type="text" id="txtDetalle" class="form-control" />
                    </div>
                    <div class="col-lg-2">
                        <label> Operador</label>
                        <select id="txtOperador" class="form-control"></select>
                    </div>
                    <div class="col-lg-1">
                        <button class="btn btn-success margin-top" id="btnNuevoConcepto">
                            <span class="glyphicon glyphicon-plus"></span> Guardar
                        </button>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>

<div class="row form-group">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="divFiniquitos">
        <fieldset id="fieldTablaFiniquito" style="border: 1px solid black;">
            <div class="container-fluid">
                <div class="row" id="rowTabla">
                    <div class="widget">
                        <div class="widget-header"></div>
                        <div class="widget-content">
                            <table id="tblDataFiniquitosConceptos" style="width: 100%;">
                                <thead></thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>

<div id="dialogEditarConcepto" title="Editar Concepto" style="display: none;">
    <fieldset id="fieldEditConcepto" style="border:none;">
        <div class="col-lg-12" style="margin-bottom: 5px;">
            <div class="col-lg-12">
                <label> Concepto</label>
                <input type="text" id="txtEditConcepto" class="form-control" />
            </div>
            <div class="col-lg-12">
                <label> Detalle</label>
                <input type="text" id="txtEditDetalle" class="form-control" />
            </div>
            <div class="col-lg-12">
                <label> Operador</label>
                <select type="text" id="txtEditOperador" class="form-control"></select>
            </div>
        </div>
    </fieldset>
</div>

<div id="dialogEliminarConcepto" title="Eliminar Concepto" style="display: none;">
    <fieldset id="fieldEditConcepto" style="border:none;">
        <div class="col-lg-12" style="margin-bottom: 5px;">
            <div class="col-lg-12">
                <label> Concepto</label>
                <input type="text" id="txtElimConcepto" class="form-control" style="box-shadow: none; background-color: white !important; border-radius: 0px;" readonly />
            </div>
            <div class="col-lg-12">
                <label> Detalle</label>
                <input type="text" id="txtElimDetalle" class="form-control" style="box-shadow: none; background-color: white !important; border-radius: 0px;" readonly />
            </div>
            <div class="col-lg-12">
                <label> Operador</label>
                <select type="text" id="txtElimOperador" class="form-control" style="box-shadow: none; background-color: white !important; border-radius: 0px;" disabled></select>
            </div>
        </div>
    </fieldset>
</div>