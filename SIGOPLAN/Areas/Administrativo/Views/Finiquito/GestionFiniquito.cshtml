<script src="~/Scripts/Utilities/datatables/dataTables.rowReorder.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.buttons.min.js"></script>
<script src="~/Scripts/js/Administrativo/RecursosHumanos/Finiquito/GestionFiniquitoJS.js"></script>

<div class="row">
    <div class="col-sm-12">
        <h3 class="mb5 mt5">Gestión de Finiquitos</h3>
    </div>
</div>

<div class="contenedor">
    <div class="row">
        <div class="col-sm-12">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-lg-12">
                        <fieldset id="fieldTabsFiniquitos">
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tabFinPendientes">Pendientes</a></li>
                                <li><a data-toggle="tab" href="#tabFinAutorizados">Autorizados</a></li>
                                <li><a data-toggle="tab" href="#tabFinRechazados">Rechazados</a></li>
                            </ul>

                            <div class="tab-content">
                                <div id="tabFinPendientes" class="tab-pane fade in active">
                                    <div class="row form-group">
                                        <div class="col-xs-12 col-md-12 col-lg-12">
                                            <fieldset class="fieldset-custm">
                                                <legend class="legend-custm">Filtros búsqueda:</legend>
                                                <div class="row form-group">
                                                    <div class="col-xs-12 col-md-12 col-lg-12">
                                                        <div class="col-lg-2">
                                                            <label> Clave Empleado</label>
                                                            <input type="text" id="txtClave" class="form-control" />
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <label> Nombre</label>
                                                            <input type="text" id="txtNombre" class="form-control" />
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <label> Centro de Costos</label>
                                                            <input type="text" id="txtCC" class="form-control" />
                                                        </div>
                                                        <div class="col-lg-1">
                                                            <button class="btn btn-info margin-top" id="btnAplicarFiltros">
                                                                <span class="glyphicon glyphicon-search"></span> Buscar
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="divFiniquitos">
                                            <fieldset id="fieldTablaFiniquito" style="border: 1px solid black;">
                                                <div class="container-fluid">
                                                    <div class="row" id="rowTabla">
                                                        <div class="widget">
                                                            <div class="widget-header"></div>
                                                            <div class="widget-content">
                                                                <table class="hover" id="tblDataFiniquitos" style="width: 100%;">
                                                                    <thead></thead>
                                                                    <tbody></tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                                <div id="tabFinAutorizados" class="tab-pane fade">
                                    <div class="row form-group">
                                        <div class="col-xs-12 col-md-12 col-lg-12">
                                            <fieldset class="fieldset-custm">
                                                <legend class="legend-custm">Filtros búsqueda:</legend>
                                                <div class="row form-group">
                                                    <div class="col-xs-12 col-md-12 col-lg-12">
                                                        <div class="col-lg-2">
                                                            <label> Clave Empleado</label>
                                                            <input type="text" id="txtClave2" class="form-control" />
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <label> Nombre</label>
                                                            <input type="text" id="txtNombre2" class="form-control" />
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <label> Centro de Costos</label>
                                                            <input type="text" id="txtCC2" class="form-control" />
                                                        </div>
                                                        <div class="col-lg-1">
                                                            <button class="btn btn-info margin-top" id="btnAplicarFiltros2">
                                                                <span class="glyphicon glyphicon-search"></span> Buscar
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="divFiniquitos2">
                                            <fieldset id="fieldTablaFiniquito2" style="border: 1px solid black;">
                                                <div class="container-fluid">
                                                    <div class="row" id="rowTabla2">
                                                        <div class="widget">
                                                            <div class="widget-header"></div>
                                                            <div class="widget-content">
                                                                <table class="hover" id="tblDataFiniquitosAut" style="width: 100%;">
                                                                    <thead></thead>
                                                                    <tbody></tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                                <div id="tabFinRechazados" class="tab-pane fade">
                                    <div class="row form-group">
                                        <div class="col-xs-12 col-md-12 col-lg-12">
                                            <fieldset class="fieldset-custm">
                                                <legend class="legend-custm">Filtros búsqueda:</legend>
                                                <div class="row form-group">
                                                    <div class="col-xs-12 col-md-12 col-lg-12">
                                                        <div class="col-lg-2">
                                                            <label> Clave Empleado</label>
                                                            <input type="text" id="txtClave3" class="form-control" />
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <label> Nombre</label>
                                                            <input type="text" id="txtNombre3" class="form-control" />
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <label> Centro de Costos</label>
                                                            <input type="text" id="txtCC3" class="form-control" />
                                                        </div>
                                                        <div class="col-lg-1">
                                                            <button class="btn btn-info margin-top" id="btnAplicarFiltros3">
                                                                <span class="glyphicon glyphicon-search"></span> Buscar
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>

                                    <div class="row form-group">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="divFiniquitos3">
                                            <fieldset id="fieldTablaFiniquito3" style="border: 1px solid black;">
                                                <div class="container-fluid">
                                                    <div class="row" id="rowTabla3">
                                                        <div class="widget">
                                                            <div class="widget-header"></div>
                                                            <div class="widget-content">
                                                                <table class="hover" id="tblDataFiniquitosRech" style="width: 100%;">
                                                                    <thead></thead>
                                                                    <tbody></tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <label id="usrLog" hidden>@ViewBag.Permiso</label>
                <label id="verModal" hidden>@ViewBag.VerModal</label>
                <label id="verFormato" hidden>@ViewBag.VerFormato</label>
            </div>
        </div>
    </div>
</div>

<div id="dialogVerFiniquito" title="Detalle Finiquito" style="display:none;overflow:visible;">
    <fieldset>
        <div class="col-md-12">
            <fieldset class="fieldset-custm" style="margin-bottom: 10px;">
                <legend class="legend-custm">Datos generales</legend>

                <div class="col-lg-3" style="padding-left: 0px;">
                    <label>Número de Empleado:</label>
                    <input type="number" class="form-control col-lg-3" id="txtIgNumeroEmpleado" readonly />
                </div>
                <div class="col-lg-5">
                    <label>Nombre de Empleado:</label>
                    <input type="text" class="form-control col-lg-3" id="lblIgNombre" readonly />
                </div>
                <div class="col-lg-2">
                    <label>Fecha Ingreso:</label>
                    <input type="text" class="form-control col-lg-3" id="lblIgIngreso" readonly />
                </div>
                <div class="col-lg-2" style="padding-right: 0px;">
                    <label>Fecha Egreso:</label>
                    <input type="text" class="form-control col-lg-3" id="lblIgEgreso" readonly />
                </div>
                <div class="col-lg-4" style="padding-left: 0px;">
                    <label>Sueldo Mensual:</label>
                    <input type="text" class="form-control col-lg-3" id="lblIgSueldoMensual" readonly />
                </div>
                <div class="col-lg-4">
                    <label>Puesto:</label>
                    <input type="text" class="form-control col-lg-3" id="lblIgPuesto" readonly />
                </div>
                <div class="col-lg-4" style="padding-right: 0px;">
                    <label>Centro de Costos:</label>
                    <input type="text" class="form-control col-lg-3" id="lblIgCentro" readonly />
                </div>
            </fieldset>

            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Detalle de Finiquito</legend>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style=" padding-left: 0px; padding-right: 0px;">
                    <div id="divTabla" class="table-responsive" style="border: hidden; overflow: hidden; -webkit-print-color-adjust: exact !important; margin-top: 10px;">
                        <table id="tblDataDetalleFin" class="table  text-center">
                            <thead class="bg-table-header">
                                <tr>
                                    <th data-column-id="Concepto" data-formatter="Concepto" data-header-align="center" class="text-center col-lg-4">Concepto</th>
                                    <th data-column-id="Detalle" data-formatter="Detalle" data-header-align="center" class="text-center col-lg-5"></th>
                                    <th data-column-id="Resultado" data-formatter="Resultado" data-header-align="center" class="text-center col-lg-2">Resultado</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <td style="border: none;">
                                        <div class="col-lg-12">
                                            <input type="text" class="form-control col-lg-3" id="" value="" style="border: none; box-shadow: none; background-color: white;" readonly />
                                        </div>
                                    </td>
                                    <td class="text-right" style="border: none; font-weight: bold;">
                                        <label style="margin-top: 5px;">TOTAL =</label>
                                    </td>
                                    <td style="border: none;">
                                        <div class="col-lg-12">
                                            <input type="text" id="inputTotalFiniquito" class="form-control text-right" value="$0.00" style="border: none; border-top: 1px solid black; border-radius: 0px; border-bottom: double; box-shadow: none; background-color: white; font-weight: bold;" readonly />
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </fieldset>
        </div>
    </fieldset>
</div>

<div id="dialogAutFiniquito" title="Autorización de Finiquito" style="display: none;">
    <fieldset id="fieldTablaAut" style="border:none;">
        <div class="col-lg-12" style="margin-bottom: 5px;">
            <table id="tblDataAut" style="width: 100%; margin-top:10px; margin-bottom:10px;">
                <thead>
                    <tr>
                        <th class="col-md-1 text-center">N°</th>
                        <th class="col-md-4 text-center">Autoriza</th>
                        <th class="col-md-3 text-center">Puesto</th>
                        <th class="col-md-2 text-center">Estado</th>
                        <th class="col-md-2 text-center">Autorización</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </fieldset>
</div>

@Html.Partial("reportViewerView", false)