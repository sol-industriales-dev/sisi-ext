                            <tr>
                                <td class="col-lg-3">Jefe Inmediato:</td>
                                <td><label class="col-lg-12" id="lblIgJefe"></label></td>
                            </tr>
                            <tr>
                                <td class="col-lg-3">Registro Patronal:</td>
                                <td><label class="col-lg-12" id="lblIgRegistro"></label></td>
                            </tr>
                            <tr>
                                <td class="col-lg-3">Departamento:</td>
                                <td><label class="col-lg-12" id="lblIgDepartamento"></label></td>
                            </tr>
                        </tbody>

                    </table>
                </div>

                <div class="col-sm-6">
                    <div id="divTablaSalariosGenerales" @(!permisoVerSueldos ? "style=display:none;" : "")>
