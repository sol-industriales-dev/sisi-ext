                                    <th class="text-center"><label id="lblTblIgNomina">Nómina</label></th>
                                    <th class="text-center"><label>Mensual</label></th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>Sueldo base:</td>
                                    <td class="text-center"><label class="col-lg-12" id="lblIgSueldoNomina"></label></td>
                                    <td class="text-center"><label class="col-lg-12" id="lblIgSueldoMensual"></label></td>
                                </tr>
                                <tr>
                                    <td>Complemento:</td>
                                    <td class="text-center"><label class="col-lg-12" id="lblIgComplementoNomina"></label></td>
                                    <td class="text-center"><label class="col-lg-12" id="lblIgComplementoMensual"></label></td>
                                </tr>
