@{
    ViewBag.Title = "Formato de Cambio";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
    bool esEditar = ViewBag.esEditarPuestos;
    int empresaActual = ViewBag.Empresa;

    var permisoVerSueldos = (bool)ViewBag.permisoVerSueldos;
    
}
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/style/css/Style-Reportes.css")">
<script src="~/Scripts/js/Administrativo/RecursosHumanos/FormatoCambio/FormatoCambioJS.js"></script>
<link href="~/Content/style/css/Captura/Horometro.css" rel="stylesheet" />

@if (empresaActual == 1)
{
    <input type="text" id="empresaActual" value="1" style="display: none;">
}
else if(empresaActual == 2)
{
    <input type="text" id="empresaActual" value="2" style="display: none;">
}
else if(empresaActual == 3)
{
    <input type="text" id="empresaActual" value="3" style="display: none;">
}
else if(empresaActual == 6)
{
    <input type="text" id="empresaActual" value="6" style="display: none;">
}

