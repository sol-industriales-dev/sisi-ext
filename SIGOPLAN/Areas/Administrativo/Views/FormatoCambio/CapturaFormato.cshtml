    <div class="row">
        <h1 class="text-center">Formato de Cambio</h1>
        <h2 class="text-center" id="hFolio"></h2>
    </div>

    <div id="divInfoUsuario" class="row">
        <div class="col-lg-12">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Datos generales</legend>


                <div class="col-md-6">

