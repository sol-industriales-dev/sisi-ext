@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href='~/Content/style/datatables/datatables.min.css' rel='stylesheet' />
<link href='~/Content/select2.css' rel='stylesheet' />

<style>
    h3 {
        text-align: center;
    }

    /*TABLAS*/
    table.dataTable {
        width: 100% !important;
    }
    table.dataTable tbody tr td, table thead tr th, table.dataTable, .dataTables_scrollBody {
        border: 0px solid #ffffff !important;
    }
    table.dataTable thead {
        font-size: 15px;
        background-color: #3556ae;
        color: white;
    }

    /*MODALES*/
    .modal-xl {
        width: 80%;
    }
    .modal-header {
        color: white;
        background: linear-gradient(40deg, #45cafc, #303f9f);
        border: none;
    }
    .modal-header .titleHeader {
        font-size: x-large;
        font-weight: bold;
    }
    .modal-header .modal-title {
        font-weight: bold;
    }
    .modal-header .modal-subtitle {
        margin-top: 0px;
        margin-bottom: 0px;
    }

    /*SELECT2*/
    .select2-container {
        width: 100% !important;
    }
</style>

<div class="col-sm-12">
    <!-- TITULO -->
    <div class="center">
        <h3>Agrupaciones Contratistas</h3><br>
    </div>

    <!-- FILTROS -->
    <fieldset class='fieldset-custm'>
        <legend class='legend-custm'>Filtros</legend>
            <div class="row">
                <div class="col-lg-6">
                    <div class="input-group">
                        <span class="input-group-addon">Agrupación:</span>
                        <select id="cboAgrupaciones" class="form-control select2"></select>
                    </div>
                </div>
                <div class="col-lg-6">
                    <button class="btn btn-primary" id="btnLimpiar"><i class="fa fa-brush"></i>&nbsp;Limpiar</button>
                    <button class="btn btn-primary" id="btnBuscar"><i class="fas fa-search"></i>&nbsp;Buscar</button>
                    <button data-toggle="modal" data-target="#mdlCrearEditarAgrupacion" class="btn btn-primary" id="btnCrearNombreAgrupacion"><i class="fas fa-plus"></i>&nbsp;Nuevo</button>
                </div>
            </div>
    </fieldset><br>

    <!-- TABLA AGRUPACIONES CONTRATISTAS -->
    <fieldset class='fieldset-custm'>
        <div class="row"><br>
            <div class="col-lg-12 table-responsive ">
                <table id="tblAgrupacionContratistas" class="hover stripe order-column"></table>
            </div>
        </div>
    </fieldset>

    <!-- MODAL CREAR/EDITAR NOMBRE AGRUPACION -->
    <div id="mdlCrearEditarNombreAgrupacion" class="modal fade" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h1 class="modal-title"><i class="fa fa-dollar"></i><span id="lblCrearEditarNombreAgrupacion"></span></h1>
                </div>
                <div class="modal-body">
                    <div class="seccion">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="input-group">
                                    <span class="input-group-addon">Nombre agrupación:</span>
                                    <input id="txtCrearEditarNombreAgrupacion" placeholder="Ingresar nombre de la agrupación." class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fas fa-undo"></i>&nbsp;Regresar</button>
                    <button type="button" id="btnCrearEditarNombreAgrupacion" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp;Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL LISTADO CONTRATISTAS -->
    <div id="mdlCrearContratistas" class="modal fade" role="dialog">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h1 class="modal-title"><i class="fa fa-dollar"></i>Empleados</h1>
                </div>
                <div class="modal-body">
                    <div class="seccion">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="input-group">
                                    <span class="input-group-addon">Empleados:</span>
                                    <select id="cboCrearContratistaEnAgrupacion" class="form-control select2"></select>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <button id="btnCancelarCrearContratistaEnAgrupacion" class="btn btn-default"><i class="fas fa-undo"></i>&nbsp;Cancelar</button>
                                <button id="btnCrearContratistaEnAgrupacion" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp;Guardar</button>
                            </div>
                        </div><br>
                        <div class="row">
                            <div class="col-lg-12 table-responsive ">
                                <table id="tblContratistas" class="hover stripe order-column"></table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fas fa-undo"></i>&nbsp;Regresar</button>
                    @* <button type="button" id="btnCrearContratistaEnAgrupacion" class="btn btn-primary"><i class="fas fa-save"></i>&nbsp;Guardar</button> *@
                </div>
            </div>
        </div>
    </div>
</div>

<script src='~/Scripts/select2.js'></script>
<script src='~/Scripts/Utilities/datatables/datatables.min.js'></script>
<script src="~/Scripts/js/Administrativo/Seguridad/IndicadoresSeguridad/AgrupacionContratistas.js"></script>