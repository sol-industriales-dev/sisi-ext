@{
    ViewBag.Title = "AltasRH";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<script src="~/Scripts/Utilities/datatables/datatables.js"></script>
<script src="~/Scripts/js/Administrativo/RecursosHumanos/Layout/IncidenciasRHJs.js"></script>
<div class="container-fluid">
    <div class="row">
        <h2 class="text-center">Layout de Incidencias</h2>
    </div>
    <div class="row form-group">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Lista Incidencias:</legend>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-3 form-group">
                            <label>Centro Costos:</label>
                            <select class="form-control no-padding" multiple="multiple" id="cboCC"></select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3">
                            <div class="col-lg-6 no-padding">
                                <label for="fechaIni">Fecha Inicio:</label>
                                <input type="text" id="fechaIni" class="form-control" />
                            </div>
                            <div class="col-lg-6 no-padding-right">
                                <label for="fechaFin">Fecha Fin:</label>
                                <input type="text" id="fechaFin" class="form-control" />
                            </div>
                        </div>
                        <div class="col-lg-4 form-group">
                            <div>
                                <button type="button" class="btn btn-info margin-top pull-left modal-margin-rigth" id="btnBuscar">
                                    <span class="glyphicon glyphicon-search"></span> Buscar
                                </button>
                            </div>
                            <div>
                                <button type="button" class="btn btn-info margin-top pull-left " id="btnExportar">
                                    <span class="glyphicon glyphicon-save-file"></span> Exportar
                                </button>
                            </div>
                        </div>
                        <div class="col-lg-1 form-group">
                            <button type="button" class="btn btn-info margin-top " id="btnSeleccionar">
                                <span class="glyphicon glyphicon-check"></span> Seleccionar Todos
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div id="divGridContainer" class="scroll divPadding">
                                <table id="tblEmpleadosNomina" class="table table-condensed table-hover table-striped text-center" style="height:370px; max-height: 370px;">
                                    <thead class="bg-table-header">
                                        <tr>
                                            <th data-column-id="EMP_CC" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">CC</th>
                                            <th data-column-id="EMP_CLAVE" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Cve. Empleado</th>
                                            <th data-column-id="EMP_NOM" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Empleado</th>
                                            <th data-column-id="EMP_FALTAS" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Faltas</th>
                                            <th data-column-id="seleccion" data-formatter="seleccion" data-align="center" data-sortable="false" data-width="6%">Seleccione</th>
                                        </tr>
                                    </thead>

                                </table>
                        </div>

                    </div>
                </div>

            </fieldset>
        </div>
    </div>

</div>
