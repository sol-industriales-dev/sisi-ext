@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href='~/Content/select2.css' rel='stylesheet' />
<link href="~/Content/style/css/Seguridad/MedioAmbiente/Estilo.css" rel="stylesheet" />

<!-- CONTAINER FLUID -->
<div class="container-fluid">
    <br><br>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h2>DASHBOARD</h2>
                </div>
                <div class="panel-body">
                    <!-- FILTROS -->
                    <div class="row">
                        <div class="col-lg-12">
                            <fieldset class='fieldset-custm'>
                                <legend class='legend-custm'>Filtros</legend>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <span class="input-group-addon">División</span>
                                        <select id="selectDivision" class="form-control" multiple></select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group">
                                        <span class="input-group-addon">Linea de Negocio</span>
                                        <select id="selectLineaNegocio" class="form-control" multiple></select>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="input-group">
                                        <span class="input-group-addon">Agrupación</span>
                                        <select class="form-control" id="cboFiltroAgrupacion"></select>
                                    </div>
                                </div>
                                <div class="col-lg-4" style="margin-top: 5px;">
                                    <div class="input-group">
                                        <span class="input-group-addon">Mes</span>
                                        <input id="txtMesInicio" class="form-control date-picker">
                                        <span class="input-group-addon"></span>
                                        <input id="txtMesFinal" class="form-control date-picker">
                                    </div>
                                </div>
                                <div class="col-lg-2" style="margin-top: 5px;">
                                    <button type="button" class="btn btn-primary" id="btnFiltroBuscar"><i class="fas fa-search"></i>&nbsp;Buscar</button>
                                </div>
                            </fieldset>
                        </div>
                    </div><br>
                    <!-- END: FILTROS -->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="btn-group btn-group-justified marginBottom" role="group" aria-label="...">
                                <div class="btn-group" role="group">
                                    <button id="btnGraficaIndice" class="btn btn-primary">Indice</button>
                                </div>
                                <div class="btn-group" role="group">
                                    <button id="btnGraficaAcumulado" class="btn btn-primary">Acumulado</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- DASHBOARD BARRAS INDICE -->
                    <div id="divGraficaBarraIndice">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading text-center">
                                        <h5></h5>
                                    </div>
                                    <div class="panel-body">
                                        <div id="divGraficaBarrasIndice"></div>
                                        <div id="divGraficaBarrasAcumulado"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END: DASHBOARD BARRAS -->

                    @* <!-- DASHBOARD BARRAS ACUMULADO -->
                    <div class="divGraficaBarraAcumulado">
                    <div class="row">
                    <div class="col-sm-12">
                    <div class="panel panel-default">
                    <div class="panel-heading text-center"><h5></h5></div>
                    <div class="panel-body">
                    </div>
                    </div>
                    </div>
                    </div>
                    </div>
                    <!-- END: DASHBOARD BARRAS --> *@

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- CONSUMO DE ENERGÍA ELECTRICA -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h5>CONSUMO DE ENERGÍA ELECTRICA</h5>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div id="divGraficaConsumoEnergiaElectrica"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END: CONSUMO DE ENERGÍA ELECTRICA -->

        <!-- GENERACIÓN DE ENERGÍA ELECTRICA -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h5>GENERACIÓN DE ENERGÍA ELECTRICA</h5>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div id="divGraficaGeneracionEnergiaElectrica"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END: GENERACIÓN DE ENERGÍA ELECTRICA -->
    </div>

    <div class="row">
        <!-- CONSUMO DE COMBUSTIBLES -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h5>CONSUMO DE COMBUSTIBLES</h5>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div id="divGraficaConsumoCombustible"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END: CONSUMO DE COMBUSTIBLES -->

        <!-- GENERACIÓN GEI -->
        <!-- <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h5>GENERACIÓN GEI</h5>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div id="divGraficaGeneracionGEI"></div>
                    </div>
                </div>
            </div>
        </div> -->
        <!-- END: GENERACIÓN GEI -->
    <!-- </div> -->

  
        <!-- CONSUMO DE AGUA -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center">
                    <h5>CONSUMO DE AGUA</h5>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div id="divGraficaConsumoAgua"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- CONSUMO DE AGUA -->
   

</div>
