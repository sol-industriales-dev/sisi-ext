@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";

    ViewBag.Title = "Raya";

    var baseController = new SIGOPLAN.Controllers.BaseController();
}

<link href="~/Content/style/Dropzone/basic.min.css" rel="stylesheet" />
<link href="~/Content/style/Dropzone/dropzone.min.css" rel="stylesheet" />
<link href="~/Content/style/datatables/datatables.min.css" rel="stylesheet" />
<link href="~/Content/style/css/Contabilidad/Nomina/Raya.css" rel="stylesheet" />
<link href="~/Content/select2.css" rel="stylesheet" />

<style>
    .DTFC_Cloned tbody tr td:last-child {
    border-right: 0px solid black;
}

</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="text-center">@baseController.getEmpresaNombre()</h1>
            <h2 class="text-center">CARGA DE DOCUMENTOS SUA</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div id="panelGeneral" class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="input-group">
                                <div class="input-group-addon">Tipo</div>
                                <select id="cboTipoNomina" class="form-control">
                                    <option value="1">Nomina Semanal</option>
                                    <option value="4">Nomina Quincenal</option>
                                    <option value="10">Aguinaldo</option>
                                </select>
                            </div>
                        </div> 
                        <div class="col-sm-6">
                            <div class="input-group">
                                <div class="input-group-addon">Período</div>
                                <select id="cboxPeriodoFiltro" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <div class="input-group-addon">Tipo Documento</div>
                                <select id="cboxTipoRayaFiltro" class="form-control"></select>
                            </div>
                        </div>
                        @*<div class="col-sm-3">
                            <div class="input-group">
                                <div class="input-group-addon">Clasificación CC</div>
                                <select id="cboxClasificacionCCFiltro" class="form-control"></select>
                            </div>
                        </div>*@
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-4" style="display:none;">
                            <input type="file" class="form-control" id="inputArchivoRaya" autocomplete="off" />
                        </div>
                        <div class="col-sm-4">
                            <button id="btnArchivoRaya" class="btn btn-danger btn-block"><i class="fas fa-file"></i>  Archivo &#8594; <b>Ninguno Seleccionado</b></button>
                            @*<span id="spanArchivoRaya">Ningún Archivo</span>*@
                        </div>
                        <div class="col-sm-4">
                            <button id="btnConsultarRaya" class="btn btn-success btn-block"><i class="fas fa-search"></i> Consultar Documento SUA</button>
                        </div>
                        <div class="col-sm-4">
                            <button id="btnCargarRaya" class="btn btn-primary btn-block"><i class="fas fa-file-upload"></i> Procesar Documento SUA</button>
                        </div>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="table-responsive">
                                <table id="tblRayaTotales" class="hover stripe order-column compact nowrap" style="width:100%">
                                    <tfoot>
                                        <tr>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th>TOTALES: </th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th> 
                                            <th></th> 
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="table-responsive">
                                <table id="tblRaya" class="hover stripe order-column compact  nowrap" style="width:100%"></table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel-footer">

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Utilities/Dropzone/dropzone.min.js"></script>
