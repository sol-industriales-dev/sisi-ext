@{
ViewBag.Title = "PolizaNomina";
Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<link href="~/Content/style/datatables/datatables.min.css" rel="stylesheet" />
<link href="~/Content/style/css/Contabilidad/Propuesta/PolizaNomina.css" rel="stylesheet" />
<h1 class="text-center">Pólizas Nómina</h1>

<fieldset class="fieldset-custm">
    <legend class="legend-custm"><i class="fas fa-calendar-week"></i> Periodo</legend>
    <div class="row">
        <div class="margin-top col-md-2 col-lg-2">
            <label>Fecha inicial: </label>
            <input class="text-center" type="text" id="fechaInicial">
        </div>
        <div class="margin-top col-md-2 col-lg-2">
            <label>Fecha final: </label>
            <input class="text-center" type="text" id="fechaFinal">
        </div>
        <div class="margin-top col-md-2 col-lg-2">
            <button class="btn btn-primary" type="button" id="botonBuscar">
                <i class="fas fa-search"></i> Buscar
            </button>
        </div>
    </div>
</fieldset>

<fieldset class="fieldset-custm margin-top">
    <legend class="legend-custm"><i class="fas fa-table"></i> Pólizas</legend>

    <div class='table-responsive'>
        <table id='tablaPolizas' class='table table-fixed table-responsive' width="99%">
            <thead class='bg-table-header'>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th class="text-center">Fecha</th>
                <th class="text-center">Concepto</th>
                <th class="text-center">Cuenta</th>
                <th class="text-center">Poliza</th>
                <th class="text-center" colspan = "2">Tipo Nomina</th>
            </tr>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th class="text-center">CC</th>
                <th class="text-center">Descripición</th>
                <th class="text-center">Monto</th>
                <th class="text-center">IVA</th>
                <th class="text-center">Retencion</th>
                <th class="text-center">Total</th>
            </tr>
            </thead>
        </table>
    </div>
</fieldset>

<button class="btn btn-primary btn-lg" type="button" id="botonGuardar">
    <i class="fas fa-save"></i> Guardar cambios
</button>



<script src="~/Scripts/Utilities/datatables/jquery.dataTables.js"></script>
<script src="~/Scripts/js/Administrativo/Contabilidad/Propuesta/PolizaNomina.js"></script>