@{
    ViewBag.Title = "Solicitudes";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<link href='~/Content/style/datatables/datatables.min.css' rel='stylesheet' />
<link href='~/Content/select2.css' rel='stylesheet' />
<link href='~/Content/style/css/RecursosHumanos/Reclutamientos/Solicitudes.css' rel='stylesheet' />

<!-- CONTAINER FLUID -->
<div class="container-fluid">
    <!-- ARCHIVOS -->
    <br><br>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><h2>ARCHIVOS</h2></div>
                <div class="panel-body">
                    <!-- FILTROS -->
                        <div class="pull-right">
                            <button type="button" class="btn btn-primary" id="btnNuevo">Nuevo</button>
                        </div>
                    <!-- END: FILTROS -->
                </div>
                <!-- LISTADO DE ARCHIVOS -->
                <div class="row">
                    <div class="col-sm-12">
                        @* <div class="table-responsive"> *@
                            <table id="tblArchivos" class="table table-hover table-sm table-bordered compact" style="width:100%;"></table>
                        @* </div> *@
                    </div>
                </div>
                <!-- END: LISTADO DE ARCHIVOS -->
            </div>
        </div>
    </div>
    <!-- END: ARCHIVOS -->
</div>
<!-- END: CONTAINER FLUID -->

<!-- MODALES -->

<!-- CREAR/EDITAR SOLICITUD -->
<div id='mdlCrearEditarArchivo' class='modal fade' role='dialog'>
    <div class='modal-dialog modal-lg'>
        <div class='modal-content'>
            <div class='modal-header text-center'>
                <h1 class='modal-title'><i class='fa fa-dollar'></i><span id="spanTitleCrearEditarArchivo"></span></h1>
            </div>
            <div class='modal-body'>
                <div class="row marginBottom">
                    <div class="col-sm-12">
                        <div class="input-group marginBottom">
                            <span class="input-group-addon">Descripcion</span>
                            <input type="text" class="form-control" id="txtCrearEditarDescripcion" autocomplete="off" />
                        </div>
                    </div>

                </div>
                
            <div class='modal-footer'>
                <button type='button' class='btn btn-success' id="btnCrearEditarArchivo"><span id="spanBtnCrearEditarArchivo"></span></button>
                <button type='button' class='btn btn-default' data-dismiss='modal'>Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- END: CREAR/EDITAR SOLICITUD -->

<!-- END: MODALES -->

<!-- JS -->
<script src="~/Scripts/js/Administrativo/RecursosHumanos/Reclutamientos/Archivos.js"></script>
<script src='~/Scripts/Utilities/datatables/datatables.min.js'></script>
<script src='~/Scripts/select2.js'></script>
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>