@{
    ViewBag.Title = "Correos";
    Layout = "~/Views/Shared/LayoutPageExt.cshtml";
}

<!-- CSS -->
<link href='~/Content/style/datatables/datatables.min.css' rel='stylesheet' />
<link href='~/Content/select2.css' rel='stylesheet' />
<link href='~/Content/style/css/RecursosHumanos/Reclutamientos/CatCorreos.css' rel='stylesheet' />

<div class="row">
    <div class="col-sm-12">
        <h3 class="mb5 mt5">CORREOS</h3>
    </div>
</div>

<div class="contenedor">
    <div class="row">
        <div class="col-sm-12 pull-right">
            <button type="button" class="btn btn-success" id="btnFiltroBuscar">Buscar</button>
            <button type="button" class="btn btn-primary" id="btnFiltroNuevoCorreo">Nuevo</button>
        </div>
    </div>
</div>

<div class="contenedor mt20">
    <div class="row">
        <div class="col-sm-12">
            <table id="tblRH_REC_CatCorreos" class="table table-hover table-sm table-bordered compact" style="width:100%;"></table>
        </div>
    </div>
</div>

<!-- CREAR/EDITAR CORREO -->
<div id='mdlCrearEditarCorreo' class='modal fade' role='dialog'>
    <div class='modal-dialog modal-lg'>
        <div class='modal-content'>
            <div class='modal-header text-center'>
                <h1 class='modal-title'><i class='fa fa-dollar'></i><span id="spanTitleCECorreo"></span></h1>
            </div>
            <div class='modal-body'>
                <div class="row marginBottom">
                    <div class="col-sm-6">
                        <div class="input-group marginBottom">
                            <span class="input-group-addon">Nombre</span>
                            <input type="text" id="txtCECorreoNombre" class="form-control" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group marginBottom">
                            <span class="input-group-addon">Correo</span>
                            <input type="text" id="txtCECorreo" class="form-control" autocomplete="off">
                        </div>
                    </div>
                </div>
                
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-success' id="btnCECorreo"><span id="spanBtnCECorreo"></span></button>
                <button type='button' class='btn btn-default' data-dismiss='modal'>Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- END: CREAR/EDITAR SOLICITUD -->

<!-- JS -->
<script src="~/Scripts/js/Administrativo/RecursosHumanos/Reclutamientos/CatCorreos.js"></script>
<script src='~/Scripts/Utilities/datatables/datatables.min.js'></script>
<script src='~/Scripts/select2.js'></script>