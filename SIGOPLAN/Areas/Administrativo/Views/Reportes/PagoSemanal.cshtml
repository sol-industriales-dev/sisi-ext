@{
    ViewBag.Title = "PagoSemanal";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<link href="~/Content/style/datatables/datatables.min.css" rel="stylesheet" />
<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<div class="container-fluid">
    <h2 class="text-center" style=" margin-top: 0;margin-bottom: 0;">
        Reporte de Pagos Semanales
    </h2>
    <fieldset id="fsBusqueda" class="fieldset-custm col-lg-10">
        <legend class="legend-custm">Búsqueda:</legend>
        <div class="col-lg-2">
            <label>Factoraje:</label>
            <select class="form-control" id="cboFactoraje"><option value="">Todos</option><option value="V">Vencido</option><option value="N">Normal</option></select>
        </div>
        <div class="col-lg-2">
            <label>IF:</label>
            <select class="form-control" id="cboBancos"><option value="">Todos</option><option value="3217">BANORTE</option><option value="6544">BANAMEX</option><option value="32046">SCOTIABANK</option><option value="1097745">MONEX</option></select>
        </div>
        <div class="col-lg-2">
            <label>Tipo búsqueda:</label>
            <select class="form-control" id="cboTipoBusqueda"><option value="0" selected>Por Semana y pago factura</option><option value="1">Solo por pago factura</option><option value="2">Por fecha y pago factura</option></select>
        </div>
        <div class="col-lg-2">
            <label>Pago Facutra:</label>
            <select class="form-control" id="cboTipoFactura"><option value="">Todos</option><option value="S">Pagado</option><option value="N">No Pagado</option></select>
        </div>
        <div class="col-lg-2">
            <label>Vencimiento:</label>
            <input class="form-control" id="dpFechaVencimiento" />
        </div>
        <div class="col-lg-2">
            <label>Moneda:</label>
            <select class="form-control" id="cboMoneda"><option value="" selected>Todos</option><option value="1">Pesos</option><option value="2">Dolares</option></select>
        </div>
        <div class="col-lg-1 col-md-2 col-sm-2 margin-top">
            <button class="btn btn-primary" id="btnBuscar"><span class="glyphicon glyphicon-search"> Buscar</span></button>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 margin-top" id="divBtnPrint" hidden>
            <button type="button" class="btn btn-primary" id="btnPrint"><span class="glyphicon glyphicon-print"> Reporte</span></button>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 margin-top" id="divBtnExcel" hidden>
            <button id="btnExcelPagos" type="button" class="btn btn-success"><i class="fas fa-file-excel"></i> Excel</button>
            <button type='button' class='btn btn-primary' id="btnExcel"><i class="fas fa-piggy-bank"></i> Bancos</span></button>
        </div>
    </fieldset>
    <fieldset id="fsTotal" class="fieldset-custm col-lg-2 text-center">
        <legend class="legend-custm text-left">Cuadro:</legend>
        <button type='button' id="btnMdlCuadro" class='btn btn-primary margin-top'><i class="fa fa-dollar"></i> Totales</button>
        <div class="margin-top"></div>
    </fieldset>
        <div class="" id="ListaResumenSemanal">
            <div class="row form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <fieldset class="fieldset-custm">
                        <legend class="legend-custm">Lista de Resumenes:</legend>
                        <table id="tblResumenSemanal" class="table table-condensed table-hover table-striped text-center">
                            <thead class="bg-table-header">
                                <tr>
                                    <th data-searchable="true" data-column-id="banco" data-align="center">Banco</th>
                                    <th data-searchable="true" data-column-id="factoraje" data-align="center">Factoraje</th>
                                    <th data-searchable="true" data-column-id="pagado" data-align="center">Pagado</th>
                                    <th data-searchable="true" data-column-id="proveedor" data-align="center">Proveedor</th>
                                    <th data-searchable="false" data-column-id="saldoFactura" data-align="center">Saldo</th>
                                    <th data-searchable="true" data-column-id="moneda" data-align="center">Moneda</th>
                                    <th data-searchable="false" data-column-id="fechaVencimientoS" data-align="center">Fecha Vencimiento</th>
                                </tr>
                            </thead>
                        </table>
                    </fieldset>
                </div>
            </div>
        </div>
</div>
@Html.Partial("_mdlTotal")
@Html.Partial("_mdlInteresesNafin")
@Html.Partial("reportViewerView", false)
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/js/Administrativo/Contabilidad/Reportes/PagoSemanalJS.js"></script>