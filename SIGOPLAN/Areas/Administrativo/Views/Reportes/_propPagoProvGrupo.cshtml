<link href="~/Content/style/css/Contabilidad/_propPagoProvGrupo.css" rel="stylesheet" />
<fieldset class='fieldset-custm'>
    <legend class='legend-custm'>
        <label><input type="checkbox" id="chbGiroGrupo" checked="checked"> Giro</label>
    </legend>
    <div id="fldGiroGrupo">
        <div class='col-md-3 col-lg-3'>
            <div class='input-group'>
                <span class='input-group-addon'> Grupo</span>
                <select id='selGiroPadre' class='form-control'></select>
            </div>
        </div>
        <div class='col-md-4 col-lg-4'>
            <div class='input-group'>
                <span class='input-group-addon'>Descripción</span>
                <input type="text" id='txtGiroDesc' class='form-control'/>
            </div>
        </div>
        <div class='col-md-5 col-lg-5'>
            <label><input type="checkbox" id="chbGiroEstatus" checked="checked"> Estatus</label>
            <button id='btnGiroGrupoGuardar' type='button' class='btn btn-primary'><i class='fa fa-save'></i> Guardar Giro</button>
            <button id='btnGiroGrupoLimpiar' type='button' class='btn btn-default'><i class='fa fa-brush'></i> Limpiar</button>
        </div>
        <div class="col-md-12 col-lg-12">
            <div class='table-responsive'>
                <table id='tblGrupoGiro' class='table table-fixed table-responsive' width="100%">
                    <thead class='bg-table-header'>
                        <th>Estado</th>
                        <th>Descripción</th>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</fieldset>
<script src="~/Scripts/js/Administrativo/Contabilidad/Reportes/_propPagoProvGrupo.js"></script>