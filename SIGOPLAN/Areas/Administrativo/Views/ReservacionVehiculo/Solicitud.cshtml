
@{
    ViewBag.Title = "Solicitud";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />

<link href="~/Content/style/css/ReservacionVehiculo/solicitud.css" rel="stylesheet" />

<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script src="~/Scripts/js/Administrativo/ReservacionVehiculo/Solicitud.js"></script>
<!-- <script src="~/Scripts/select2.js"></script> -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>



<div class="row">
    <div class="col-md-12">
         <h1 class="text-center">Solicitud de vehiculo</h1>
    </div>
</div>

 <br/>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <fieldset class="fieldset-custm" style="margin-top: 5px; border-radius: 0px !important;">
             <legend class="legend-custm"> Datos generales</legend>
             <form>
                <div class="form-group">
                    <label for="selAutSolicita">Usuario</label>
                    <input class="form-control" id="selAutSolicita" placeholder="*">
                </div>                           
                <div class="form-group"> 
                    <label for="inputMotivo"> Motivo </label>
                    <input type="text" class="form-control" id="inputMotivo" placeholder="Motivo">                         
                </div>
                <div class="form-group">
                    <label for="inputJustificacion">Justificación </label>
                    <textarea class="form-control" rows="4" id="inputJustificacion" placeholder="Justificación"></textarea>
                </div>
                <div class="form-group">
                   <label for="inputFecha">Fecha y Hora Salida</label>
                   <input type="text" class="form-control" id="inputFecha" />                                             
                </div>
                <div class="form-group">
                    <label for="inputFechaEntrega">Fecha y Hora Entrega</label>
                    <input type="text" class="form-control" id="inputFechaEntrega" />
                </div>
                <div class="form-group">
                    <label for="inputVigencia">Fecha de vencimiento de licencia</label>
                    <input type="text" class="form-control" id="inputVigencia" />
                </div>

                <div class="text-center">
                    <button type="button" class="btn btn-primary" id="btnSolicitar">Solicitar</button>                 
                </div>
            </form>
        </fieldset>
        
    </div>

    <div class="col-md-4" >
        <br/>
        <div class="panel panel-primary">
            <div class="panel-heading">Requisitos para solicitud de vehiculo</div>
            <div class="panel-body">
                <ul>
                    <li>El solicitante deberá contar con licencia de conducir vigente</li>
                    <li>Los periodos de reservación del vehículo no deberán exceder 5 horas.</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalSolicitud" role="dialog">
    <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header modal-bg">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <div class="text-center">
                        <h3><label> Solicitud autorizada</label></h3>
                    </div>
                </div>
                <div class="modal-body"> 
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <label> Ya existe una solicitud en el mismo rango de fechas. </label>
                        </div>
                        <div class="col-md-6 col-md-offset-3">
                            <label> ¿Desea reemplazar esta solicitud? </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label for="spanUsuario">Usuario</label>
                            <span class="form-control" id="spanUsuarioAuth"></select>
                        </div>
                    </div> 

                    <div class="row">
                        <div class="col-md-12">
                            <label for="spanMotivo">Motivo</label>
                            <span class="form-control" id="spanMotivoAuth"></select>
                        </div>              
                    </div> 

                    <div class="row">
                        <div class="col-md-12">
                            <label for="inputJustificacion">Justificacion</label>
                            <textarea class="form-control" rows="4" id="inputJustificacionAuth" readonly></textarea>
                        </div>              
                    </div> 

                    <div class="row">
                        <div class="col-md-12">
                            <label for="spanFecha">Fecha y hora salida</label>
                            <span class="form-control" id="spanFechaAuth"></select>
                        </div>              
                    </div> 

                     <div class="row">
                        <div class="col-md-12">
                            <label for="spanFecha">Fecha y hora entrega</label>
                            <span class="form-control" id="spanFechaEntregaAuth"></select>
                        </div>              
                    </div> 
                </div>
                <div class="modal-footer">   
                    <a id="btnReemplezarSolicitud" class="btn btn-primary"> Reemplazar </a>                               
                    <a data-dismiss="modal" id="btnCerrarSolicitud" class="btn btn-default btn-sm"><span class="glyphicon"></span>Cerrar</a>
                </div>
            </div>
     </div> 
</div>