@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href='~/Content/style/datatables/datatables.min.css' rel='stylesheet' />
<link href='~/Content/select2.css' rel='stylesheet' />
<link href='~/Content/style/css/RecursosHumanos/Tabuladores/General.css' rel='stylesheet' />
<!-- END: CSS -->

<!-- CONTAINER -->
<div class='container-fluid'>
    <div class="row">
        <div class="col-sm-12 seccion">
            @Html.Partial("_MenuTabuladores")
        </div>
    </div>
    <div class='row'>
        <div class='col-sm-12 text-center'>
            <h2>LINEA DE NEGOCIOS</h2>
        </div>
    </div>
    <div class='row'>
        <div class='col-sm-12'>
            <!-- PANEL FILTROS -->
            <div id='panelFiltro' class='panel panel-default panel-principal'>
                <div class='panel-heading'>
                    <h4 class='text-center'>FILTROS DE BÚSQUEDA</h4>
                </div>
                <div class='panel-body'>
                    <div class='row'>
                        <div class="col-lg-12">
                            <div class="pull-right">
                                @* <button class="btn btn-primary" id="btnFiltroBuscar"><i class="fas fa-search"></i>&nbsp;Buscar</button> *@
                                <button class="btn btn-primary" id="btnFiltroNuevo"><i class='fas fa-plus'></i>&nbsp;Nuevo</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END: PANEL FILTROS -->
            <!-- BODY -->
            <div id='panelGraficas' class='panel panel-default panel-principal'>
                <div class='panel-heading'></div>
                <div class='panel-body'>
                    <div class='row'>
                        <div class="col-lg-12">
                            <table class="table" id="tblLineaNegocios"></table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END: BODY -->
        </div>
    </div>
</div>
<!-- END: CONTAINER -->

<!-- MODAL CREAR/EDITAR LINEA DE NEGOCIO -->
<div id='mdlCELineaNegocio' class='modal fade' role='dialog' data-backdrop='static'>
    <div class='modal-dialog modal-md'>
        <div class='modal-content'>
            <div class='modal-header text-center'>
                <h4 class='modal-title'></h4>
            </div>
            <div class='modal-body'>
                <div class='seccion'>
                    <div class='row'>
                        <div class='col-lg-8'>
                            <label for="txtCE_LineaNegocio">Línea de negocio:</label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class="fas fa-user-tag"></i></span>
                                <input type='text' id='txtCE_LineaNegocio' class='form-control' autocomplete="off">
                            </div>
                        </div>
                        <div class='col-lg-4'>
                            <label for='txtCE_LineaNegocioAbreviacion'>Abreviación</label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class='fas fa-plus'></i></span>
                                <input type='text' id='txtCE_LineaNegocioAbreviacion' class='form-control'>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-default' data-dismiss='modal'><i class='fas fa-undo-alt'></i>&nbsp;Cerrar</button>
                <button type='button' class='btn btn-success' id='btnCELineaNegocio'></button>
            </div>
        </div>
    </div>
</div>
<!-- END: MODAL CREAR/EDITAR LINEA DE NEGOCIO -->

<!-- MODAL RELACIONAR CC A LA LINEA DE NEGOCIO -->
<div id='mdlCELineaNegocioRelCC' class='modal fade' role='dialog' data-backdrop='static'>
    <div class='modal-dialog modal-lg'>
        <div class='modal-content'>
            <div class='modal-header text-center'>
                <h4 class='modal-title'></h4>
            </div>
            <div class='modal-body'>
                <div class='seccion'>
                    <div class='row'>
                        <div class='col-lg-10'>
                            <label for="cboCE_CC">CC:</label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class="fas fa-user-tag"></i></span>
                                <select id='cboCE_CC' class='form-control select2' multiple></select>
                            </div>
                        </div><br>
                        <div class="col-lg-2">
                            <button type="button" class="btn btn-primary" id="btnCELineaNegocioRelCC"><i class='fas fa-save'></i>&nbsp;Guardar</button>
                        </div>
                    </div>
                </div>
                <div class="seccion">
                    <div class="row">
                        <div class='col-lg-12'>
                            <table class="table" id="tblLineaNegociosRelCC" style="width: 100%"></table>
                        </div>
                    </div>
                </div>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-default' data-dismiss='modal'><i class='fas fa-undo-alt'></i>&nbsp;Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- END: MODAL RELACIONAR CC A LA LINEA DE NEGOCIO -->

<!-- JS -->
<script src='~/Scripts/js/Administrativo/RecursosHumanos/Tabuladores/LineaNegocio.js'></script>
<script src='~/Scripts/js/Administrativo/RecursosHumanos/Tabuladores/_MenuTabuladores.js'></script>
<script src='~/Scripts/Utilities/datatables/datatables.min.js'></script>
<script src='~/Scripts/select2.js'></script>
<!-- END: JS -->