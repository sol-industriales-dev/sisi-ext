<!-- CONTAINER -->
<div class='container-fluid'>
    <div class="row">
        <div class="col-sm-12 seccion">
            @Html.Partial("_MenuTabuladores")
        </div>
    </div>
    <div class='row'>
        <div class='col-sm-12 text-center'>
            <h2>MODIFICACIÓN</h2>
        </div>
    </div>
    <div class='row'>
        <div class='col-sm-12'>
            <!-- PANEL FILTROS -->
            <div id='panelFiltro' class='panel panel-default panel-principal'>
                <div class='panel-heading'>
                    <h4 class='text-center'>FILTRO DE BÚSQUEDA</h4>
                </div>
                <div class='panel-body'>
                    <div class='row'>
                        <div class='col-lg-3'>
                            <label for='cboFiltroTipoModificacion'>Tipo modificación</label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class='fas fa-plus'></i></span>
                                <select id='cboFiltroTipoModificacion' class='form-control select2'></select>
                            </div>
                        </div>
                        <div class='col-lg-4'>
                            <label for='cboFiltroLineaNegocio'>Línea de negocio</label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class='fas fa-plus'></i></span>
                                <select id='cboFiltroLineaNegocio' class='form-control' multiple></select>
                            </div>
                        </div>
                        <div class='col-lg-2'>
                            <label for='txtFiltroFechaRegistro'>Fecha registro&nbsp;<i class="fas fa-question-circle" title="Campo no modificable, solo es informativo."></i></label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class='fas fa-plus'></i></span>
                                <input type='text' id='txtFiltroFechaRegistro' class='form-control' readonly>
                            </div>
                        </div><br>
                        <div class="col-lg-3">
                            <button class="btn btn-primary" id="btnFiltroBuscar" style="margin-top: 5px;"><i class="fas fa-search"></i>&nbsp;Buscar</button>
                            <button class="btn btn-success" id="btnFiltroCalcular" style="margin-top: 5px;"><i class="fas fa-calculator"></i>&nbsp;Calcular</button>
                            <button class="btn btn-success" id="btnFiltroGuardar" style="margin-top: 5px;"><i class='fas fa-save'></i>&nbsp;Guardar</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class='col-lg-2'>
                            <label for='cboFiltroAreaDepartamento'>Área / Departamento</label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class='fas fa-plus'></i></span>
                                <select id='cboFiltroAreaDepartamento' class='form-control' multiple></select>
                            </div>
                        </div>
                        <div class='col-lg-4'>
                            <label for='cboFiltroCC'>CC</label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class='fas fa-plus'></i></span>
                                <select id='cboFiltroCC' class='form-control' multiple></select>
                            </div>
                        </div>
                        <div class='col-lg-4'>
                            <label for='cboFiltroPuesto'>Puesto</label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class='fas fa-plus'></i></span>
                                <select id='cboFiltroPuesto' class='form-control' multiple></select>
                            </div>
                        </div>
                        <div class='col-lg-2'>
                            <label for='txtFiltroFechaAplicaCambio'>Fecha aplica cambio</label>
                            <div class='input-group'>
                                <span class='input-group-addon'><i class='fas fa-plus'></i></span>
                                <input type='date' id='txtFiltroFechaAplicaCambio' class='form-control'>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END: PANEL FILTROS -->

            <!-- BODY -->
            <div id='panelGraficas' class='panel panel-default panel-principal'>
                <div class='panel-heading'></div>
                <div class='panel-body'>
