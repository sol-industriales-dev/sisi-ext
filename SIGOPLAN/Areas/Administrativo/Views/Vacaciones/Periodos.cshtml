<!-- MODAL  -->
<div id='mdlCEPeriodo' class='modal fade' role='dialog'>
    <div class='modal-dialog modal-lg'>
        <div class='modal-content'>
            <div class='modal-header text-center'>
                <h1 id = "titleCEPeriodo" class='modal-title'><i class='fa fa-dollar'></i></h1>
            </div>
            <div class='modal-body'>
                <div class="row">
					<div class="col-sm-10">
						<div class="input-group">   
							<span class="input-group-addon">Descripcion</span>
							<input type ="text" class="form-control" id="txtCEPeriodoDesc">
						</div>
					</div>
                    <div class="col-sm-2">
						<input type="checkbox" id="chkCEPeriodoEstado" data-toggle="toggle" data-on="Disponible" 
                            data-off="NO Disponible" data-onstyle="success" data-offstyle="danger" data-width="150" checked="checked">
					</div>
                    
				</div>
				<br>
				<div class="row">
					<div class="col-sm-6">
						<div class="input-group">   
							<span class="input-group-addon">Fecha Inicial</span>
							<input type ="date" class="form-control" id="txtCEPeriodoFechaini">
						</div>
					</div>
					<div class="col-sm-6">
						<div class="input-group">   
							<span class="input-group-addon">Fecha Final</span>
							<input type ="date" class="form-control" id="txtCEPeriodoFechafin">
						</div>
					</div>
				</div>
            </div>
            <div class='modal-footer'>
				<button type='button' class='btn btn-primary' data-dismiss='modal' id="btnCEPeriodoActualizar"><i class='fa fa-save'></i>&nbsp;<span id="btnTxtCEPeriodo">Guardar</span></button>
                <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Cerrar Ventana"><button type='button' class='btn btn-default' data-dismiss='modal'><i class='fa fa-arrow-left'></i>&nbsp;Cerrar</button></span>
            </div>
        </div>
    </div>
</div>
<!-- END: MODAL ACTOS -->

