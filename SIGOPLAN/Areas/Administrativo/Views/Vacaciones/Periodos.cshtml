    <!-- PERIODOS -->
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><h2>PERIODOS</h2></div>
                <div class="panel-body">
                    <!-- FILTROS -->
                    <div class="row">
                        <div class="col-sm-3">
                            
                        </div>
                        <div class="col-sm-3">
                            
                        </div>
                        <div class="pull-right">
							<div class="col-sm-12 margin-right">
								<!-- <button type="button" class="btn btn-primary" id="btnFiltroBuscar">Buscar</button> -->
                                
