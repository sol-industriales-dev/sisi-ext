<div class="row">
    <div class="col-sm-12">
        <h3 class="mb5 mt5">Reporte de Ausencias</h3>
    </div>
</div>

<div class="contenedor">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>CC</label>
                <select class="form-control" id="cboVacacionCC"></select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group" id="divCECboPermisosingoce">
                <label>Motivo de ausencia</label>
                <select class="form-control" id="cboFiltroTipoPermiso">
                    <option value="">--Seleccione--</option>
                    <!-- <option value="7">Vacaciones</option> -->
                    <option value="0">Permiso paternidad</option>
                    <option value="1">Permiso de matrimonio</option>
                    <option value="2">Permiso sindical</option>
                    <option value="3">Permiso por fallecimiento</option>
                    @* <option value="4">Permiso por lactancia</option> *@
                    <option value="5">Permiso médico</option>
                    <option value="7">Vacaciones</option>
                    <option value="8">Permiso SIN goce de sueldo</option>
                    <option value="9">Permiso de comision de trabajo</option>
                    <option value="10">Home office</option>
                    <option value="11">Tiempo x tiempo</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">
            <div class="form-group" id="divCECboPermisosingoce">
                <label>Fecha Inicial</label>
                <input type="date" id="dateFiltroIni" class="form-control" />
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group" id="divCECboPermisosingoce">
                <label>Fecha Final</label>
                <input type="date" id="dateFiltroFin" class="form-control" />
            </div>
        </div>
        <div class="col-lg-3 pull-right">
            <button type="button" class="btn btn-default mt25" id="btnFiltroBuscar">Buscar</button>
            <button type="button" class="btn btn-primary mt25" id="btnFiltroExportar">Excel</button>
        </div>
    </div>
</div>

<div class="contenedor mt10">
    <div class="row">
        <div class="col-sm-12">
            <table id="tblReporte" class="table table-hover table-sm table-bordered compact" style="width:100%;"></table>
        </div>
    </div>
</div>

