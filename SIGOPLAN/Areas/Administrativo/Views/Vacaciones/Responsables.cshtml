                <!-- END: CANT DÍAS VACACIONES MATRIMONIO -->

            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-primary' data-dismiss='modal' id="btnCEVacacionActualizar"><span id="btnTxtCEVacacion"></span></button>
                <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Cerrar Ventana">
                    <button type='button' class='btn btn-default' data-dismiss='modal'><i class='fa fa-arrow-left'></i>&nbsp;Cerrar</button>
                </span>
            </div>
        </div>
    </div>
</div>
