@{
    ViewBag.Title = "Revision";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<link href="~/Content/style/datatables/datatables.min.css" rel="stylesheet" />
<link href="~/Content/style/css/Seguridad/Revision.css" rel="stylesheet" />
<h1 class="text-center">Revisión de vehículos</h1>
<fieldset class="fieldset-custm">
    <legend class="legend-custm"><i class="fa fa-search"></i>Búsqueda</legend>
    <div class="row">
        <div class="col-md-2 col-lg-3">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">CC</span>
                <select id="selBusCC" class="form-control"></select>
            </div>
        </div>
        <div class="col-md-2 col-lg-3">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">Económico</span>
                <select id="selBusEco" class="form-control"></select>
            </div>
        </div>
        <div class="col-md-2 col-lg-2">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">Mes</span>
                <input type="text" id="dtBusMes" class="form-control" />
            </div>
        </div>
        <div class="col-md-2 col-lg-1">
            <button id="btnBuscar" type="button" class="btn btn-primary"><i class="fa fa-search"></i> Buscar</button>
        </div>
    </div>
</fieldset>
<fieldset class="fieldset-custm">
    <legend class="legend-custm"><i class="fa fa-car"></i>Vehículos</legend>
    <div class="row">
        <div class="col-md-2 col-lg-1">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mdlCaptura"><i class="fa fa-plus"></i> Nuevo</button>
        </div>
    </div>
    <div class="table-responsive">
        <table id="tblVehiculo" class="table table-fixed table-striped">
            <thead class="bg-table-header">
                <tr>
                    <th>Económico</th>
                    <th>Fecha</th>
                    <th>Responsable</th>
                    <th>Kilometraje</th>
                    <th>Preventivo</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</fieldset>
<div id="mdlCaptura" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" style="width:100%;">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title">
                    <i class="fa fa-table"></i>
                    Captura
                </h4>
            </div>
            <div class="modal-body">
                <div class="row container-fluid">
                    <div class="col-lg-offset-3 col-md-2 col-lg-3">
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon3">CC</span>
                            <select id="selCC" class="form-control val"></select>
                        </div>
                    </div>
                    <div class="col-md-2 col-lg-2">
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon3">Fecha</span>
                            <input type="text" id="dtFecha" class="form-control" />
                        </div>
                    </div>
                    <table class="table table-fixed">
                        <tbody>
                            <tr>
                                <td>Económico</td>
                                <td><select id="selEconomico" class="form-control val"></select></td>
                                <td>Kilometraje</td>
                                <td>
                                    <div class="input-group">
                                        <input type="text" id="txtKm" class="form-control numero text-right val" />
                                        <span class="input-group-addon" id="basic-addon3">km</span>
                                    </div>
                                </td>
                                <td>Nombre Responsable</td>
                                <td><input type="text" id="txtResponsable" class="form-control val" /></td>
                            </tr>
                            <tr>
                                <td>Tipo licencia</td>
                                <td><select id="selTipoLic" class="form-control val"></select></td>
                                <td>Número licencia</td>
                                <td><input type="text" id="txtNumLic" class="form-control numero val" /></td>
                                <td>Vigencia licencia</td>
                                <td><input type="text" id="dtVigenciaLic" class="form-control val" /></td>
                            </tr>
                            <tr>
                                <td>¿Requiere servicio Preventivo?</td>
                                <td>
                                    <div class="radioBtn btn-group">
                                        <a class="btn btn-primary  active" data-toggle="radPreventivo" data-title="true">Si</a>
                                        <a class="btn btn-primary  notActive" data-toggle="radPreventivo" data-title="false">No</a>
                                    </div>
                                </td>
                                <td>Requerimientos</td>
                                <td><textarea id="txtRequerimientos" class="form-control"></textarea></td>
                                <td>Notas</td>
                                <td><textarea id="txtNotas" class="form-control"></textarea></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="table-responsive">
                        <table id="tblPartes" class="table table-fixed table-bordered" width="100%">
                            <thead class="advice">
                                <tr>
                                    <th class="text-center"></th>
                                    <th class="text-center">Partes</th>
                                    <th class="text-center" id="txtAnterior"></th>
                                    <th class="text-center" id="txtActual"></th>
                                    <th class="text-center">Observaciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal"><i class="fa fa-arrow-left"></i> regresar</button>
                <button type="button" id="btnGuardar" class="btn btn-success"><i class="fa fa-photo"></i> Fotos</button>
                <button type="button" id="btnGuardar" class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
                <button type="button" id="btnPrint" class="btn btn-primary"><i class="fa fa-print"></i> Imprimir</button>
            </div>
        </div>
    </div>
</div>
@Html.Partial("reportViewerView", false)
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/js/Administrativo/Vehiculo/Revision.js"></script>