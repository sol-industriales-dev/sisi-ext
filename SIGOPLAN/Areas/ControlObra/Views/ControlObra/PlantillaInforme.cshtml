<div id="modalPlantilla" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Nueva Plantilla</h4>
            </div>
            <div class="modal-body">
				<div class="form-group text-center">
					<button class="btn btn-sm btn-success addDiapositiva">Agregar</button>
					<button class="btn btn-sm btn-danger removeDiapositiva">Eliminar</button>
				</div>

				<div class="form-group tituloDiapositiva">
                    <div class="form-line">
                    	<input type="text" class="form-control tituloDiapositiva" placeholder="Titulo diapositiva">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-sm btn-success" id="btnGuardarDiapositiva" disabled>Guardar</button>
            </div>
        </div>

    </div>
</div>

