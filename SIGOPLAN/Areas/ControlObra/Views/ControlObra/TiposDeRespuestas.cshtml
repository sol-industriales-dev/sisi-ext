    ViewBag.Title = "Catalogo tipos de respuesta";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<center><h2>Catalogo de Tipos de Respuestas</h2></center>

<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />

<link href='~/Content/style/datatables/datatables.min.css' rel='stylesheet' />
<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<link href="~/Content/style/css/ControlObra/ControlObra2.css" rel="stylesheet" />
<link href="~/Content/style/css/Administrativo/Gestor.css" rel="stylesheet" />
<link href="~/Content/select2.css" rel="stylesheet" />
<link href="~/Content/style/css/Subcontratistas/Estilo.css" rel="stylesheet" />
<script src="~/Scripts/moment.min.js"></script>


<div class="container-fluid">
    <fieldset class='fieldset-custm'>
        <legend class='legend-custm'>Filtros : </legend>
        <div class='col-md-6 col-lg-6'>
            @* <div class='input-group'>
                    <span class='input-group-addon'>Centros de costo</span>
                    <input type='text' id='cmbCC' class='form-control'>
                </div> *@
        </div>
        <div class='col-md-4 col-lg-4'>
        </div>
        <div class='col-md-2 col-lg-2'>
            <button type="button" id="btnNuevo" class="btn btn-primary">Nuevo</button>
            <button type="button" class="btn btn-primary">Buscar</button>
        </div>
    </fieldset>

    <fieldset class='fieldset-custm'>
        <legend class='legend-custm'>Resultados : </legend>
        <div class='table-responsive'>
            <table id='tblTiposDeRespuestas' class='table table-hover table-fixed table-bordered compact dataTable no-footer'>
                <thead class='bg-table-header'>
                </thead>
            </table>
        </div>
    </fieldset>
</div>


<div id='mdlNuevoRiesgo' class='modal fade' role='dialog'>
    <div class='modal-dialog modal-lg'>
        <div class='modal-content'>
            <div class='modal-header text-center'>
                <h1 class='modal-title' id="titulo"><i class='fa fa-dollar'></i></h1>
            </div>
            <div class='modal-body'>
                <div class="row">
                    <div class='col-lg-12'>
                        <input data-width="200" id='checkAmenazaOportunidad' type="checkbox" data-toggle="toggle" data-on="Amenaza" data-off="Oportunidad" >
                    </div>
                </div>
                <br>
                <div class='row'>
                    <div class='col-md-12 col-lg-12'>
                        <div class='input-group'>
                            <span class='input-group-addon'>Respuesta</span>
                            <input type='text' id='inpRespuesta' class='form-control'>
                        </div>
                    </div>
                </div>
                <br>
                <div class='row'>
                    <div class='col-md-12 col-lg-12'>
                        <div class='input-group'>
                            <span class='input-group-addon'>Respuesta</span>
                            <textarea type='text' id='inpRespuestaDesc' class='form-control'></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-success' id="btnSave"><i class='fa fa-save'></i> Guardar</button>
                <button type='button' class='btn btn-warning' data-dismiss='modal'><i class='fa fa-arrow-left'></i> regresar</button>
            </div>
        </div>
    </div>
</div>


<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script src='~/Scripts/Utilities/datatables/datatables.min.js'></script>
