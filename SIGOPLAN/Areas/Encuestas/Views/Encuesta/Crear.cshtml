
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/style/starrr.css")">
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/style/css/Encuestas/Crear.css")">
<script src="@Url.Content("~/Scripts/starrr.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/js/Encuestas/Crear.js")" type="text/javascript"></script>

<div class="row form-group">
    <div class="col-lg-12">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Datos Generales de Encuesta:</legend>
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group">
                        <span class="input-group-addon">Titulo:</span>
                        <input id="txtTitulo" class="form-control" placeholder="Titulo"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group">
                        <span class="input-group-addon">Descripción:</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <textarea id="txtDescripcion" class="form-control" placeholder="Descripción"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <fieldset class="fieldset-custm">
                        <legend class="legend-custm" style="font-size: 14px;">Tipo de Encuesta:</legend>
                        <form>
                            <input type="radio" value="1" name="tipoEncuesta" id="radioSatClienteInterno" />
                            <label for="radioSatClienteInterno" style="font-weight: normal; margin-right: 5px;">Satisfacción de Cliente Interno</label>

                            <input type="radio" value="2" name="tipoEncuesta" id="radioSatClienteExterno" />
                            <label for="radioSatClienteExterno" style="font-weight: normal; margin-right: 5px;">Satisfacción de Cliente Externo</label>

                            <input type="radio" value="0" name="tipoEncuesta" id="radioSatOtros" />
                            <label for="radioSatOtros" style="font-weight: normal; margin-right: 5px;">Otros</label>
                        </form>
                    </fieldset>
                </div>
                <div class="col-lg-6">
                    <fieldset class="fieldset-custm">
                        <legend class="legend-custm">Departamento:</legend>
                        <select class="form-control" id="cboDept"></select>
                    </fieldset>
                </div>
            </div>
            @*<div class="row">
                <div class="col-lg-12">
                    <button id="btnCrear" class="btn btn-default pull-right">Crear</button>
                </div>
            </div>*@
        </fieldset>
    </div>
</div>
<div class="row form-group hideActualizar">
    <div class="col-lg-12">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Agregar Pregunta:</legend>
            <div class="row">
                <div class="col-lg-12">
                    <div class="input-group">
                        <span class="input-group-addon">Pregunta:</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <textarea id="txtPregunta" class="form-control" placeholder="Pregunta"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2">
                    <div class="input-group">
                        <span class="input-group-addon">Tipo de Pregunta:</span>
                        <select class="form-control" id="selectTipoPregunta">
                            <option value="">--Seleccione--</option>
                            <option value="2">Calidad</option>
                            <option value="1">Tiempo</option>
                            <option value="3">Atención</option>
                            <option value="4">Otro</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-10">
                    <button id="btnAgregar" class="btn btn-default pull-right">Agregar</button>
                </div>
            </div>
        </fieldset>
    </div>
</div>
<div class="row form-group hideActualizar">
    <div class="col-lg-12">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Vista Previa de Encuesta:</legend>
            <div class="Preguntas">

            </div>
        </fieldset>
    </div>
</div>
<div class="row">
    <div class="col-md-12"><button id="btnActualizar" class="btn btn-default pull-right hideActualizar">Guardar</button></div>
</div>
