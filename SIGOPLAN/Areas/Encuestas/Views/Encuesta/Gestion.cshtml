                                <tr>
                                    <th data-column-id="tipo" data-width="50px">Acción</th>
                                    <th data-column-id="titulo" data-width="25%">Titulo</th>
                                    <th data-column-id="departamento" data-width="25%">Departamento</th>
                                    <th data-column-id="fecha" data-width="25%">Fecha</th>
                                    <th data-column-id="btnVer" data-formatter="Editresguardo" data-sortable="false" data-width="25px">Ver</th>
                                </tr>
                            </thead>
                        </table>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="tabRechazada">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <fieldset class="fieldset-custm">
                        <legend class="legend-custm">Encuestas Rechazadas:</legend>
                        <table id="tblRechazada" class="table table-condensed table-hover table-striped text-center">
