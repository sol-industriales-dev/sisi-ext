<div class="container-fluid">
    <div class="row">
        <h2 class="text-center">Gestión de cambios de encuestas</h2>
    </div>
    <ul class="nav nav-tabs">
        <li class="active"><a id="tabTitle1" data-toggle="tab" href="#tabPendiente">Pendientes</a></li>
        <li><a id="tabTitle2" data-toggle="tab" href="#tabAutorizada">Autorizadas</a></li>
        <li><a id="tabTitle3" data-toggle="tab" href="#tabRechazada">Rechazadas</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="tabPendiente">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <fieldset class="fieldset-custm">
                        <legend class="legend-custm">Encuestas Pendientes:</legend>
                        <table id="tblPendiente" class="table table-condensed table-hover table-striped text-center">
                            <thead class="bg-table-header">
                                <tr>
                                    <th data-column-id="tipo" data-width="50px">Acción</th>
                                    <th data-column-id="titulo" data-width="25%">Titulo</th>
                                    <th data-column-id="departamento" data-width="25%">Departamento</th>
                                    <th data-column-id="fecha" data-width="25%">Fecha</th>
                                    <th data-column-id="btnVer" data-formatter="Editresguardo" data-sortable="false" data-width="25px">Ver</th>
                                    <th data-column-id="btnAceptar" data-formatter="SubirArchivo" data-sortable="false" data-width="25px">Autorizar</th>
                                    <th data-column-id="btnRechazar" data-formatter="SubirArchivo" data-sortable="false" data-width="25px">Rechazar</th>
                                </tr>
                            </thead>
                        </table>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="tabAutorizada">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group">
                    <fieldset class="fieldset-custm">
                        <legend class="legend-custm">Encuestas Pendientes:</legend>
                        <table id="tblAutorizada" class="table table-condensed table-hover table-striped text-center">
