@{
    ViewBag.Title = "ABC de Almacén";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href='~/Content/select2.css' rel='stylesheet' />

<style>
    .buttons-excel {
        float: right !important;
        margin-bottom: 5px;
    }

    .dt-buttons {
        display: inline;
    }

    .mrgTop {
        margin-top: 5px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="text-center">ABC de Almacén</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <fieldset id="fieldsetFiltros" class="fieldset-custm">
                <legend class="legend-custm">
                    Filtros:
                    <button id="btnQuitarFiltros" class="btn btn-xs btn-danger pull-right mrgTop"
                            style="margin-left: 5px;">
                        <i class="fa fa-times"></i>
                    </button>
                </legend>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">Almacén</span>
                                    <input id="inputFiltroAlmacen" class="form-control" data-column-index='0'>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">Desc. de Almacén</span>
                                    <input id="inputFiltroAlmacenDesc" class="form-control" data-column-index='1'>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">Dirección</span>
                                    <input id="inputFiltroDireccion" class="form-control" data-column-index='2'>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">Responsable</span>
                                    <input id="inputFiltroResponsable" class="form-control" data-column-index='3'>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 mrgTop">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">Teléfono</span>
                                    <input id="inputFiltroTelefono" class="form-control" data-column-index='4'>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">Valida Almacén_CC</span>
                                    <input id="inputFiltroValidaAlmacen" class="form-control" data-column-index='5'>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">P. terminado</span>
                                    <input id="inputFiltroPTerminado" class="form-control" data-column-index='6'>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="input-group">
                                    <span class="input-group-addon">M. prima</span>
                                    <input id="inputFiltroMPrima" class="form-control" data-column-index='7'>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

    <div class="row mrgTop">
        <div id="divTablaAlmacen" class="col-sm-12">
            <button id="btnNuevoAlmacen" class="btn btn-success"><i class="fa fa-plus"></i> Nuevo Almacén</button>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive">
                <table id="tblAlmacen" class="hover stripe order-column" style="width: 100%;"></table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li role="presentation" class="active"><a href="#tabDatosGenerales" aria-controls="tabDatosGenerales" role="tab" data-toggle="tab">Datos generales</a></li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="tabDatosGenerales">
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="input-group">
                                <span class="input-group-addon">Almacén</span>
                                <input id="inputTabDGAlmacen" class="form-control" type="number" />
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <span class="input-group-addon">Validar C.C</span>
                                <select class="form-control" id="inputTabDGValidarCC">
                                    <option value="S">Si Validar</option>
                                    <option value="N">No Validar</option>
                                    <option value="G">Sugiere</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                                    <div class="input-group">
                                        <span class="input-group-addon">CC</span>
                                        <select id="inputTabDGCC" class="form-control" ></select>
                                    </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <span class="input-group-addon">Descripción</span>
                                <input id="inputTabDGDescripcion" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row mrgTop">
                        <div class="col-sm-3">
                            <div class="input-group">
                                <span class="input-group-addon">Dirección</span>
                                <input id="inputTabDGDireccion" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <span class="input-group-addon">Responsable</span>
                                <input id="inputTabDGResponsable" class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="input-group">
                                <span class="input-group-addon">Teléfono</span>
                                <input id="inputTabDGTelefono" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-2">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="inputTabDGPTerminado"> Producto terminado
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="inputTabDGMPrima"> Materia prima
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="inputTabDGPAlmacenVirtual"> Almacén virtual
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-2 pull-right">
                            <button id="btnGuardarAlmacen" class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src='~/Scripts/select2.js'></script>

<script src="~/Scripts/moment-with-locales.min.js"></script>
<script src="~/Scripts/sweetalert.min.js"></script>
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.6.2/js/dataTables.buttons.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.html5.min.js" type="text/javascript"></script>

<script src="~/Scripts/js/Enkontrol/Almacen/ABCAlmacen.js"></script>