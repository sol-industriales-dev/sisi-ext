            <div class="col-lg-12 table-responsive table-bordered">
                <br />
                <table id="tblAl_AreaAlmacen" class="table-bordered hover stripe order-column"></table>
            </div>
        </div>
    </fieldset><br><br>
    <!-- END: LISTADO -->
</div>


