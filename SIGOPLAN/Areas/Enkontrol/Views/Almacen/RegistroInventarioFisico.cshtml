@{
ViewBag.Title = "RegistroInventarioFisico";
Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Content/style/datatables/dataTables.jqueryui.css" rel="stylesheet" />
<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<link href="~/Content/style/css/Enkontrol/Almacen/InventarioFisico.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <h2 class="text-center">Captura de Inventario Físico</h2>
    </div>

    <div class="row">
        <div class="col-md-12">
            <fieldset class="fieldset-custm">
                <div class="row">
                    <div class="col-sm-12 noPadRight">
                        <div class="col-sm-7 mrgTop noPadLeft">
                            <div class="input-group">
                                <span class="input-group-addon">Almacén</span>
                                <input id="inputAlmacenNum" class="form-control width30">
                                <input id="inputAlmacenDesc" class="form-control width70" disabled>
                            </div>
                        </div>
                        <div class="col-sm-3 mrgTop noPadLeft noPadRight">
                            <div class="input-group">
                                <span class="input-group-addon">Fecha</span>
                                <input id="inputFecha" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-3 mrgTop">
                            <div class="input-group">
                                <span class="input-group-addon">Insumos con Existencias</span>
                                <select id="selectExistentes" class="form-control">
                                    <option value="1">SÍ</option>
                                    <option value="0">NO</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-5 mrgTop noPadLeft noPadRight">
                            <button id="botonProcesar" class="btn btn-primary" disabled><i class="fa fa-arrow-right"></i>&nbsp;Procesar</button>
                            <button id="botonImprimir" class="btn btn-default" disabled><i class="fa fa-print"></i>&nbsp;Imprimir</button>
                            <button id="botonCongelar" class="btn btn-info" disabled><i class="fa fa-snowflake"></i>&nbsp;Congelar</button>
                            <button id="botonGuardar" class="btn btn-success" disabled><i class="fa fa-save"></i>&nbsp;Guardar</button>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2 mrgTop noPadLeft">
            <div class="input-group">
                <span class="input-group-addon">Insumo</span>
                <input id="inputFiltroInsumo" class="form-control" data-column-index='1'>
            </div>
        </div>
        <div class="col-lg-3 mrgTop noPadLeft">
            <div class="input-group">
                <span class="input-group-addon">Desc. de Insumo</span>
                <input id="inputFiltroInsumoDesc" class="form-control" data-column-index='2'>
            </div>
        </div>
        <div class="col-lg-1 mrgTop noPadLeft">
            <button id="botonQuitarFiltros" class="btn btn-xs btn-danger"><i class="fa fa-times"></i></button>
        </div>
        <div class="col-md-12 mrgTop">
            <div class="row">
                <div class="col-sm-12">
                    <table id="tablaExistencias" class="table-bordered compact hover mrgTop" style="width: 100%; display: none;"></table>
                </div>
                <div class="col-sm-12">
                    <div id="divTablaInsumosBotones" style="display: none;">
                        <button id="botonAgregarRenglon" class="btn btn-xs btn-success"><i class="fa fa-plus"></i>&nbsp;Agregar Renglón</button>
                    </div>

                    <div id="divTablaInsumosTabla" class="mrgTop">
                        <table id="tablaInsumos" class="table-bordered compact hover" style="width: 100%;"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("reportViewerView", false)

<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js" type="text/javascript"></script>
