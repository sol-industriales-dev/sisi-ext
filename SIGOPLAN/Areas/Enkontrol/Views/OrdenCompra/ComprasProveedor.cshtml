<style>
    #tablaCompras,
    .dataTables_scrollHead {
        font-size: 11px;
    }

    .select2-selection {
        height: 34px !important;
    }

    .select2-selection__rendered {
        line-height: 34px !important;
    }
</style>

<label id="labelRequisicionesPendientes"></label>

<h2 class="text-center">Compras por Proveedor</h2>

<fieldset class="fieldset-custm">
    <legend class="legend-custm">Filtros</legend>
    <div class="col-md-12 col-lg-12 admin noPadLeft" style="display: inline-flex;">
        <div class="col-md-4 col-lg-4 noPadLeft noPadRight">
            <div class="input-group" style="margin-right: 5px;">
                <span class="input-group-addon">CC</span>
                <select id="selectCC" class="form-control select2"></select>
            </div>
        </div>
        <div class="col-sm-4 col-lg-4 noPadLeft noPadRight">
            <div class="input-group" style="margin-right: 5px;">
                <span class="input-group-addon">Fecha</span>
                <input id="inputFechaInicio" class="form-control">
                <span class="input-group-addon"></span>
                <input id="inputFechaFin" class="form-control">
            </div>
        </div>
        <div class="col-md-4 col-lg-4 noPadLeft noPadRight">
            <div class="input-group" style="margin-right: 5px;">
                <span class="input-group-addon">Proveedor</span>
                <select id="selectProveedor" class="form-control select2"></select>
            </div>
        </div>
        <div id="divAreaCuenta" class="col-md-3 col-lg-3 noPadLeft noPadRight">
            <div class="input-group" style="margin-right: 5px;">
                <span class="input-group-addon">Área-Cuenta</span>
                <select id="selectAreaCuenta" class="form-control select2"></select>
            </div>
        </div>
        <div class="col-md-2 col-lg-2 noPadLeft noPadRight">
            <button id="botonBuscar" type="button" class="btn btn-primary">
                <i class="fas fa-search"></i> Buscar
            </button>
        </div>
    </div>
</fieldset>
<fieldset class="fieldset-custm">
    <legend class="legend-custm">Compras</legend>

    <div class="table-responsive">
        <table id="tablaCompras" class="table-bordered compact" style="width: 100%;"></table>
    </div>
</fieldset>

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
<script src="~/Scripts/js/Enkontrol/Compras/OrdenCompra/ComprasProveedor.js"></script>