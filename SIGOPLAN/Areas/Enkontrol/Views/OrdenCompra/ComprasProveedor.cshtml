<script src="~/Scripts/datetime-moment.js"></script>

<style>
    #tablaCompras,
    .dataTables_scrollHead {
        font-size: 11px;
    }

    .select2-selection {
        height: 34px !important;
    }

    .select2-selection__rendered {
        line-height: 34px !important;
    }
    table thead {
        background-color: #007bff !important;
        color: white;
    }

    .modal-bg {
        background-color: #007bff !important;
        color: white;
    }
</style>

<label id="labelRequisicionesPendientes"></label>

<div class="row">
    <div class="col-sm-12">
        <h3 class="mt5 mb5">Compras por Proveedor</h3>
    </div>
</div>

<div class="contenedor">
    <div class="row">
        <div class="col-md-3 col-lg-3">
            <div class="form-group">
                <label>CC</label>
                <select id="selectCC" class="form-control select2"></select>
            </div>
        </div>
        <div class="col-sm-2 col-lg-2">
            <div class="form-group">
                <label>Fecha Inicial</label>
                <input id="inputFechaInicio" class="form-control">
            </div>
        </div>

        <div class="col-sm-2 col-lg-2">
            <div class="form-group">
                <label>Fecha Fin</label>
                <input id="inputFechaFin" class="form-control">
            </div>
        </div>

        <div class="col-md-4 col-lg-4">
            <div class="form-group">
                <label>Proveedor</label>
                <select id="selectProveedor" class="form-control select2"></select>
            </div>
        </div>
        <div id="divAreaCuenta" class="col-md-1 col-lg-1">
            <div class="form-group">
                <label>Área-Cuenta</label>
                <select id="selectAreaCuenta" class="form-control select2"></select>
            </div>
        </div>
        <div class="col-md-1 col-lg-1 mt20">
            <button id="botonBuscar" type="button" class="btn btn-primary">
                <i class="fas fa-search"></i> Buscar
            </button>
        </div>
    </div>
</div>

<div class="contenedor mt10">
    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive">
                <table id="tablaCompras" class="table-bordered compact" style="width: 100%;"></table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
<script src="~/Scripts/js/Enkontrol/Compras/OrdenCompra/ComprasProveedor.js"></script>