@{
    ViewBag.Title = "Asignacion";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
    var Menu = new SIGOPLAN.Controllers.BaseController();
    var usuario = Menu.getUsuario();
    var nombreCompleto = usuario.nombre + " " + usuario.apellidoPaterno + " " + usuario.apellidoMaterno;
    var baseController = new SIGOPLAN.Controllers.BaseController();
