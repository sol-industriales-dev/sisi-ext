<h2 class="text-center"> Asignación de Resguardos</h2>

<fieldset id="fieldsetInfo" class="fieldset-custm">
    <legend class="legend-custm"></legend>

    <div class="col-md-3 col-lg-3 noPadLeft mrgTop">
        <div class="input-group">
            <span class="input-group-addon">Centro Costo:</span>
            <select id="selectCC" class="form-control"></select>
        </div>
    </div>
    <div class="col-md-3 col-lg-3 noPadLeft mrgTop">
        <div class="input-group">
            <span class="input-group-addon">Almacén:</span>
            <select id="selectAlmacen" class="form-control"></select>
        </div>
    </div>
    <div class="col-md-3 col-lg-3 noPadLeft mrgTop">
        <div class="input-group">
            <span class="input-group-addon">Almacén Resguardo:</span>
            <select id="selectAlmacenResguardo" class="form-control" disabled></select>
        </div>
    </div>
    <div class="col-md-3 col-lg-3 noPadLeft noPadRight mrgTop">
        <div class="input-group">
            <span class="input-group-addon">Fecha Resguardo:</span>
            <input id="inputFechaResguardo" class="form-control" disabled />
        </div>
    </div>
    <div class="col-md-3 col-lg-3 noPadLeft mrgTop">
        <div class="input-group">
            <span class="input-group-addon">Folio:</span>
