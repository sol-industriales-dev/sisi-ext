@{List<Core.Entity.Kubrix.tblK_CatAvance> lst = new SIGOPLAN.Areas.Kubrix.Controllers.BaseDatosController().lstArchivos();}
<table id="tblArchivo" class="table table-fixed table-responsive table-striped">
    <thead class="bg-table-header">
        <tr>
            <th>Año</th>
            <th>Mes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{if (lst.Count == 0)
        {
            <tr>
                <td colspan="3" class="text-center">No hay datos disponible</td>
            </tr>
        }
        foreach (var x in lst)
        {
            <tr>
                <td>@x.fecha.Year</td>
                <td>@x.fecha.Month</td>
                <td><button value="@x.id" class="btn btn-primary"><i class="fa fa-calculator"></i> cargar</button></td>
            </tr>
        }}
    </tbody>
</table>
