<div class="modal fade" id="mdlRevisionAC">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center">
                    <h3><label id="labelTituloRevisionAC"><i class="fa fa-photo"></i> Revisión</label></h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="divCuadrillaAC" class="col-lg-12" style="padding-left: 0px; padding-right: 0px;">
                            <div class="container-fluid" style="padding-left: 0px; padding-right: 0px;">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding-left: 0px; padding-right: 0px;">
                                    <fieldset id="fieldBusquedaAC" class="fieldset-custm" style="border-radius: 0px !important;">
                                        <div class="input-group col-md-12">
                                            <div class="col-lg-4">
                                                <label>Equipo:</label>
                                                <input class="form-control" id="selectEquipo" readonly />
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Tonelaje:</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control text-right" id="inputTonelaje"
                                                           readonly />
                                                    <span class="input-group-addon">Toneladas</span>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Area:</label>
                                                <input class="form-control" id="selectArea" readonly />
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Periodo:</label>
                                                <input class="form-control" id="selectPeriodo" readonly />
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Técnico:</label>
                                                <input class="form-control" id="selTecnico" readonly />
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Ayudantes:</label>
                                                <input class="form-control" id="selAyudante" readonly />
                                            </div>
