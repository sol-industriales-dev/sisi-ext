<div class="container-fluid" >
    <div class="row">
        <h2 id="txtEncabezado" class="text-center">REPORTE DIARIO</h2>
    </div>

    <div class="row form-group">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding-left: 1px; padding-right: 1px;">
            <fieldset id="fieldFechaRep" class="fieldset-custm" style="border-radius: 0px !important;">
                <div  style="padding-left: 5px; padding-right: 5px;">

                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding-left: 0px; padding-right: 0px;">
                            <div class="row">
                                 <div class="col-lg-12" style="padding-left: 0px; padding-right: 0px;">
                                    <fieldset id="fieldFechaReporte">
                                        <div class="col-lg-3" style="padding-left: 27px;">
                                            <div class="input-group" style="margin-top: 5px;">
                                                <span class="input-group-addon" style="border-radius: 0px; background-color: #81bd72; color: #fff; font-weight: bold; border: 1px solid black;">Fecha:</span>
                                                <input class="form-control" id="dtPckrFechaReporte" style="border-radius: 0px; border-left: 0px;" />
                                            </div>
                                        </div>
                                        <div class="col-lg-2" style="padding-left: 0px;">
                                            <button id="btnPrint" class="btn btn-primary" style="margin-top: 5px; display: none;"><span class="glyphicon glyphicon-print"></span> Reporte</button>
                                        </div>
                                        <div class="col-lg-7" style="padding-right: 15px;">
                                            <table id="tblSemaforoInfo" class="table pull-right">
                                                <thead class="bg-table-header">
                                                    <tr>
                                                        <th class="text-center" colspan="3">Semáforo de Avance</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td style="padding: 3px; text-align: center;">
                                                            <div class="circulo" circulotipo="1"></div>
                                                            <span>Realizado</span>
                                                        </td>
                                                        <td style="padding: 3px; text-align: center;">
                                                            <div class="circulo" circulotipo="2"></div>
                                                            <span>Pendiente</span>
                                                        </td>
                                                        <td style="padding: 3px; text-align: center;">
                                                            <div class="circulo" circulotipo="3"></div>
                                                            <span>No se realizó</span>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12" style="padding-left: 0px; padding-right: 0px;">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <fieldset id="fieldTablaReporteActividades" class="fieldset-custm" style="margin-top: 5px; max-height: calc(100vh - 224px);">
                                        <legend class="legend-custm"></legend>
                                            <div class="circle"></div>

                                            <table class="table text-center" style="margin-top: 5px; margin-bottom: 0px;">
                                                <thead>
                                                    <tr>
                                                        <th id="headerFecha" class="text-center" style="border: 2px solid black; background-color: #ddd;">FECHA</th>
                                                    </tr>
                                                </thead>
                                            </table>

                                            <table id="tblReporteActividades" class="table text-center" style="margin-top: 5px; margin-bottom: 0px;">
                                                <thead class="bg-table-header">
                                                    <tr>
                                                        <th class="text-center col-lg-1">ACCIONES</th>
                                                        <th class="text-center col-lg-1">CUADRILLA</th>
                                                        <th class="text-center col-lg-2">ACTIVIDAD</th>
                                                        <th class="text-center col-lg-1">EQUIPO</th>
                                                        <th class="text-center col-lg-1">ÚLTIMO MANTENIMIENTO</th>
                                                        <th class="text-center col-lg-1">SIGUIENTE MANTENIMIENTO</th>
                                                        <th class="text-center col-lg-1">ÁREA EJECUCIÓN</th>
                                                        <th class="text-center col-lg-4">DESCRIPCIÓN DE ACTIVIDAD</th>
                                                        <th class="text-center col-lg-1">SEMÁFORO</th>
                                                        <th class="text-center col-lg-1">REPROGRAMACIÓN</th>
                                                        <th class="text-center col-lg-3">FECHA REPROGRAMACIÓN</th>
                                                        <th class="text-center col-lg-3">ESTATUS</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                                <tfoot></tfoot>
                                            </table>

                                            @*<table id="tblReporteActividades" class="table" style="margin-bottom: 0px;">
                                                    <thead></thead>
                                                    <tbody></tbody>
                                                </table>*@
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
           
                </div>
            </fieldset>
        </div>
    </div>
</div>

