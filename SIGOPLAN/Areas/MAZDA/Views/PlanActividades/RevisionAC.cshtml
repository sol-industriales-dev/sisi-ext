@{
    ViewBag.Title = "CapturaActividad";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Content/style/datatables/dataTables.jqueryui.css" rel="stylesheet" />
<link href="~/Content/style/datatables/buttons.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/style/css/MAZDA/RevisionAC.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row">
        <h2 id="txtEncabezado" class="text-center">Revisión Aires Acondicionados</h2>
    </div>
    <div class="row form-group">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="divPlanAct">
            <fieldset id="fieldPlanAct" class="fieldset-custm" style="border-radius: 0px !important;">
                <div class="container-fluid">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="padding-left: 0px; padding-right: 0px;">
                        <fieldset id="fieldBusquedaCuadrilla" class="fieldset-custm">
                            <legend class="legend-custm">Capturar</legend>
                            <div class="input-group col-md-12">
                                <div class="col-lg-2">
                                    <label>Equipo:</label>
                                    <select class="form-control" id="selectEquipo"></select>
                                </div>
                                <div class="col-lg-2">
                                    <label>Tonelaje:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control text-right" id="inputTonelaje" />
                                        <span class="input-group-addon">Toneladas</span>
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <label>Area:</label>
                                    <select class="form-control" id="selectArea"></select>
                                </div>
                                <div class="col-lg-2">
                                    <label>Periodo:</label>
                                    <select class="form-control" id="selectPeriodo"></select>
                                </div>
                                <div class="col-lg-2">
                                    <label>Técnico:</label>
                                    <select class="form-control" id="selTecnico"></select>
                                </div>
                                <div class="col-lg-2">
                                    <label>Ayudantes:</label>
                                    <select class="form-control" id="selAyudante"></select>
                                </div>
                                <div class="col-lg-3 margin-top">
                                    <button class="btn btn-default" id="btnLimpiar"><span class="fa fa-eraser"></span> Limpiar</button>
                                    <button class="btn btn-primary" id="btnShowMdl"><span class="glyphicon glyphicon-floppy-save"></span> Guardar Revisión</button>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <fieldset class="fieldset-custm" style="margin-top: 5px;">
                                <legend class="legend-custm"></legend>
                                <table class="table text-center" style="margin-top: 5px; margin-bottom: 0px;">
                                    <thead>
                                        <tr>
                                            <th data-column-id="" data-formatter="" data-header-align="center" class="text-center" style="border: 2px solid black; background-color: #ddd;">ACTIVIDADES DE MANTENIMIENTO DE AIRES ACONDICIONADOS</th>
                                        </tr>
                                    </thead>
                                </table>
                                <table id="tblCondensador" class="table text-center" style="margin-bottom: 0px;">
                                    <thead class="bg-table-header">
                                        <tr>
                                            <th class="text-center col-lg-7" rowspan="2">CONDENSADOR</th>
                                            <th class="text-center col-lg-1">SE REALIZO</th>
                                            <th class="text-center col-lg-4" rowspan="2">OBSERVACIONES</th>
                                        </tr>
                                        <tr>
                                            <th data-header-align="center" class="text-center">SI <span class="glyphicon glyphicon-ok"></span> NO <span class="glyphicon glyphicon-remove"></span></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                    <tfoot></tfoot>
                                </table>
                                <table id="tblEvaporador" class="table text-center" style="margin-top: 5px; margin-bottom: 10px;">
                                    <thead class="bg-table-header">
                                        <tr>
                                            <th data-header-align="center" class="text-center col-lg-7" rowspan="2">EVAPORADOR</th>
                                            <th data-header-align="center" class="text-center col-lg-1">SE REALIZO</th>
                                            <th data-header-align="center" class="text-center col-lg-4" rowspan="2">OBSERVACIONES</th>
                                        </tr>
                                        <tr>
                                            <th data-header-align="center" class="text-center">SI <span class="glyphicon glyphicon-ok"></span> NO <span class="glyphicon glyphicon-remove"></span></th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                    <tfoot></tfoot>
                                </table>
                                <label>Observaciones:</label>
                                <textarea class="form-control" style="border-radius: 0px; height: 100px;"></textarea>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>
<div class="modal fade" id="mdlEvidencia">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center">
                    <h3><label><i class="fa fa-photo"></i> Evidencia</label></h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12" id="divGaleria"></div>
                </div>
                <div class="modal-footer">
                    <div class="col-lg-2">
                        <div class="custom-file-upload">
                            <label for="inputEvidencias" class="custom-file-upload">
                                <i class="fa fa-photo"></i> Evidencia
                            </label>
                            <input type="file" id="inputEvidencias" accept="image/*" multiple>
                        </div>
                    </div>
                    <button class="btn btn-primary" id="btnGuardar"><span class="glyphicon glyphicon-floppy-save"></span> Guardar Revisión</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Utilities/datatables/jquery.dataTables.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.jqueryui.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.rowReorder.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.buttons.min.js"></script>
<script src="~/Scripts/js/MAZDA/RevisionAC.js"></script>
