@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="~/Content/style/css/Subcontratistas/UsuariosExpedientes.css" rel="stylesheet" />
<link href='~/Content/style/datatables/datatables.min.css' rel='stylesheet' />
<link href="~/Content/select2.css" rel="stylesheet" />

<!-- CONTAINER FLUID -->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 text-center">
            <br>
            <h2>CATÁLOGO USUARIOS EXPEDIENTES</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <!-- PANEL FILTROS -->
            <div id="panelFiltro" class="panel panel-default panel-principal">
                <div class="panel-heading">
                    <h4 class="text-center">FILTRO DE BÚSQUEDA</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class='col-lg-4'>
                            <div class='input-group'>
                                <span class='input-group-addon'>Proyecto</span>
                                <select type='text' id='cboProyecto2' class='form-control select2'></select>
                            </div>
                        </div>
                        <div class='col-lg-4'>
                            <div class='input-group'>
                                <span class='input-group-addon'>Contrato</span>
                                <select type='text' id='cboContrato2' class='form-control select2'></select>
                            </div>
                        </div>
                        <div class='col-lg-4'>
                            <div class='input-group'>
                                <span class='input-group-addon'>Subcontratistas</span>
                                <select type='text' id='cboSubcontratista' class='form-control select2'></select>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button id="btnAgregar" class="btn btn-primary pull-right"><i class="fa fa-plus"></i>&nbsp;Nuevo</button>
                            <button id="btnBuscar" class="btn btn-primary pull-right"><i class="fa fa-search"></i>&nbsp;Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END: PANEL FILTROS -->

            <!-- BODY -->
            <div id="panelGraficas" class="panel panel-default panel-principal">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table id='tblUsuarios' class='table table-hover table-bordered table-striped compact'></table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END: BODY -->
        </div>
    </div>
</div>
<!-- END: CONTAINER FLUID -->

<!-- MODAL NUEVO EVALUADOR -->
<div id='mdlAgregarEditar' class='modal fade' role='dialog' data-backdrop="static">
    <div class='modal-dialog modal-lg'>
        <div class='modal-content'>
            <div class='modal-header text-center'>
                <h4 class='modal-title'><i class='fa fa-dollar'></i><span id="lblTextoTitulo" for=""></span></h4>
            </div>
            <div class='modal-body'>
                <div class="row">
                    <div class='col-lg-6'>
                        <label>Prestador de servicio</label>
                        <select type='text' id='dboPrestadorDeServicio' class='form-control select2'></select>
                    </div>
                    <div class='col-lg-6'>
                        <label>Proyecto</label>
                        <select type='text' id='cbocc3' class='form-control select2'></select>
                    </div>
                </div>
                <div class="row">
                    <div class='col-lg-6'>
                        <label>Contrato</label>
                        <select type='text' id='cboContrato3' class='form-control select2'></select>
                    </div>
                    <div class='col-lg-6'>
                        <label>Nombre completo</label>
                        <input type='text' id='inpNombreCompleto' class='form-control' autocomplete="off">
                    </div>
                </div>
                <div class="row">
                    <div class='col-lg-4'>
                        <label>Usuario</label>
                        <input type='text' id='inpUsuario' class='form-control'>
                    </div>
                    <div class='col-lg-4'>
                        <label>Contraseña</label>
                        <input type='password' id='inpPassword' class='form-control'>
                    </div>
                    <div class='col-lg-4'>
                        <label>Correo</label>
                        <input type='text' id='inpCorreo' class='form-control'>
                    </div>
                </div>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-default' data-dismiss='modal'><i class='fa fa-arrow-left'></i>&nbsp;Cerrar</button>
                <button type="button" class="btn btn-success" id="btnGuardar"><i class='fa fa-save'></i>&nbsp;Guardar</button>
            </div>
        </div>
    </div>
</div>
<!-- END: MODAL NUEVO EVALUADOR -->

<script src="~/Scripts/moment-with-locales.js"></script>
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/select2.js"></script>
<script src="~/Scripts/js/SubContratistas/Evaluacion/AltaDeUsuariosExpediente.js"></script>