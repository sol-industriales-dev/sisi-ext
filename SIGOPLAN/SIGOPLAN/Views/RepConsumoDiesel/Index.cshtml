
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<script src="~/Scripts/js/Maquinaria/Reporte/RepConsumoDiesel.js"></script>
<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />


<div class="container-fluid">
    <div class="row">
        <h2 class="text-center">Consumo de Diesel Maquinaria</h2>
    </div>
    <div class="row form-group">
        <div class="col-lg-12">
            <fieldset class="fieldset-custm fielset-Filtros">
                <legend class="legend-custm">Filtros:</legend>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <label>Centro Costos:</label>
                    <input type="number" class="form-control" id="cboCC" />
                    @*<select class="form-control no-padding" multiple="multiple" id="cboCC"></select>*@
                </div>
                <div class="col-xs-12 col-sm-12 col-md-2 col-lg-1">
                    <button type="button" class="btn btn-info margin-top" id="btnBuscar">
                        <span class="glyphicon glyphicon-search"></span> Buscar
                    </button>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-2 col-lg-1">
                    <button type="button" class="btn btn-info margin-top" id="btnImprimir" style="display:none;" >
                        <span class="glyphicon glyphicon-print"></span> Imprimir
                    </button>
                </div>
            </fieldset>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-lg-12">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Consumo por centro de costo:</legend>
                <div class="row">
                    <div class="col-lg-9">
                        <table id="divConsumoTabla" class="table table-condensed table-hover table-striped text-center">
                            <thead class="bg-table-header">
                                <tr>
                                    <th data-column-id="economico" data-align="center" data-header-align="center" data-width="25%">EQUIPO</th>
                                    <th data-column-id="descripcion" data-align="center" data-header-align="center" data-width="25%">DESCRIPCION</th>
                                    <th data-column-id="consumo" data-align="center" data-header-align="center" data-width="25%">CONSUMO (LT)</th>
                                    <th data-column-id="importe" data-align="center" data-header-align="center" data-width="25%">IMPORTE</th>
                                    <th data-column-id="importeKontrol" data-align="center" data-header-align="center" data-width="25%">IMPORTE ENKONTROL</th>
                                    
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="col-lg-3">
                        <div class="col-lg-12">
                            <label>TOTAL CONSUMIDO</label>
                            <input type="text" class="form-control" id="txtTotalConsumo" disabled />
                        </div>
                        <div class="col-lg-12">
                            <label>TOTAL ENKONTROL- CONTABILIDAD</label>
                            <input type="text" class="form-control" id="txtTotalEnkontrol" disabled />
                        </div>
                        <div class="col-lg-12">
                            <label>TOTAL DIESEL CONTRATISTAS</label>
                            <input type="text" class="form-control" id="txtTotalContratistas" disabled />
                        </div>
                        <div class="col-lg-12">
                            <label>TOTAL A PROVISIONAR</label>
                            <input type="text" class="form-control" id="txtTotalProvisionar" disabled />
                        </div>


                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>

@Html.Partial("reportViewerView", false)

