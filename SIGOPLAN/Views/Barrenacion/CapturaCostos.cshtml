<!-- Razor -->
@{
    ViewBag.Title = "CapturaCostos";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Content/style/datatables/dataTables.jqueryui.css" rel="stylesheet" />

<div class="row text-center titulo">
    <h2>Captura de Costos <i class="fas fa-calendar-day"></i></h2>
</div>

<fieldset class="fieldset-custm">
    <legend class="legend-custm"><label>Filtros:</label></legend>

    <div class="row">

        <div class="col-xs-12 col-md-3 col-lg-3">
            <div class="input-group">
                <span class="input-group-addon">Area Cuenta</span>
                <select name="" id="comboAC" class="form-control"></select>
            </div>
        </div>
        <div class="col-xs-12 col-md-3 col-lg-3">
            <div class="input-group">
                <span class="input-group-addon">Año:</span>
                <select id="comboYear" class="form-control" multiple>
                </select>
            </div>
        </div>
        <div class="col-xs-12 col-md-3 col-lg-3">
            <div class="input-group">
                <span class="input-group-addon">Mes:</span>
                <select id="comboYear" class="form-control" multiple></select>
            </div>
        </div>
        <div class="col-md-2 col-lg-3 pull-right">
            <div class="col-lg-6">
                <button id="botonBuscar" class="btn btn-primary">
                    <i class="fas fa-search"></i> Buscar
                </button>
            </div>
        </div>
    </div>
</fieldset>

<fieldset class="fieldset-custm">
    <legend class="legend-custm"><label>Capturas:</label></legend>
    <div class="col-md-12 col-lg-12">
        <table id="tablaCapturas" class="table table-fixed table-hover table-responsive table-striped">
            <thead class="bg-table-header">
        </table>
    </div>
</fieldset>


<script src="~/Scripts/Utilities/datatables/jquery.dataTables.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.jqueryui.js"></script>
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/datetime-moment.js"></script>