<!-- Razor -->
@{
    ViewBag.Title = "Catalógo Piezas";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Content/style/datatables/dataTables.jqueryui.css" rel="stylesheet" />

<!-- HTML -->
<div class="row text-center margin-top">
    <h2>Catálogo de Banco <i class="fas fa-vihara"></i></h2>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-9 col-lg-9">
            <div class="input-group">
                <span class="input-group-addon">Area Cuenta:</span>
                <select id="comboAreaCuenta" class="form-control"></select>
            </div>
        </div>
        <div class="col-md-9 col-lg-3">
            <div class="pull-right">
                <button class="form-control btn btn-primary" id="botonNuevoBanco">Nuevo</button>
            </div>
        </div>
    </div>
    <div class="row">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm"><label>Bancos:</label></legend>
            <div class="col-md-12 col-lg-12 margin-top">
                <table id="tablaBancos" class=" table table-fixed table-hover table-responsive table-striped">
                    <thead class="bg-table-header">
                </table>
            </div>
        </fieldset>
    </div>
</div>

<!-- Modal para agregar Banco -->
<div class="modal fade" id="modalNuevoBanco" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="text-center">
                    <h3>Agregar nuevo Banco</h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3">
                        <div class="input-group">
                            <span class="input-group-addon">Banco</span>
                            <input id="inputBanco" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-9 col-lg-9">
                        <div class="input-group">
                            <span class="input-group-addon">Descripción</span>
                            <input id="inputDescripcion" type="text" class="form-control inputDescripcion">
                        </div>
                    </div>
                    <div class="col-md-9 col-lg-9">
                        <div class="input-group">
                            <span class="input-group-addon">Area Cuenta</span>
                            <select id="comboAC" class="form-control"></select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button id="botonAgregarBanco" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para eliminar insumo -->
<div class="modal fade" id="modalEliminarBanco" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="text-center">
                    <h3>Eliminar Banco</h3>
                </div>
            </div>
            <div class="modal-body">
                <p>
                    ¿Está seguro que desea eliminar el Banco?
                </p>
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default">
                    <i class="fas fa-times"></i> No
                </button>
                <button id="botonEliminarBanco" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Si
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Scripts -->
<script src="~/Scripts/Utilities/datatables/jquery.dataTables.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.jqueryui.js"></script>
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/js/Maquinaria/Barrenacion/CatalogoBanco.js"></script>