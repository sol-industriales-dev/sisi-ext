            <div class="col-md-3 col-lg-3 text-center">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Broca
                            <button tipopieza=1 class="btn btn-primary pull-right">
                                <i class="fas fa-plus-square"></i>
                            </button>
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div id="itemsBroca" class="list-group">
                        </div>
                    </div>
                    <div class="panel-footer">
                        Insumos asignados: <span id="spanBroca" class="label label-primary">0</span>
                    </div>
                </div>
            </div>

            <!-- Martillo -->
            <div class="col-md-3 col-lg-3 text-center">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            Martillo
                            <button tipopieza=2 class="btn btn-primary pull-right">
