<link href="~/Content/style/css/Maquinaria/Barrenacion/InsumosRotaria.css" rel="stylesheet" />

<div class="row text-center">
    <h2>Barrenación</h2>
    <h2>Insumos por rotaria <i class="fas fa-tools"></i></h2>
</div>

<div class="col-md-12 col-lg-12">
    <table id="tablaEquipos" class="table table-fixed table-hover table-responsive table-striped">
        <thead class="bg-table-header">
    </table>
</div>

<div class="modal fade" id="modalPiezas" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
