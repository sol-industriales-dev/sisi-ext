
@{
    ViewBag.Title = "CapturaIndicadores";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<link href='~/Content/style/datatables/datatables.min.css' rel='stylesheet' />



<style>

    table.dataTable {
        width: 100% !important;
    }

    table.dataTable tbody tr td,
    table thead tr th,
    table.dataTable,
    .dataTables_scrollBody {
        border: 0px solid #ffffff !important;
    }

    table.dataTable thead {
        font-size: 15px;
        background-color: #3556ae;
        color: white;
    }

    /*MODALES*/
    .modal-xl {
        width: 80%;
    }
        .form-control-width-small {
            width: 57.6px !important;
        }

        .form-control-width-extra-small {
            width: 38.4px !important;
        }

        .form-group-inline {
            display: inline-block;
        }

        .asd {
	        padding-right: 10px;
            border: 1px solid #3F4;
            display: inline-block;
         }

         .Fields {
            background-color: #ffff00;           
            
        }


</style>

<div class="col-sm-12">
        <div class="row">            
            <div class="text-center">
                <h4>Configuración por centro de costo</h4>
            </div>      
        </div>
      <br>
      <fieldset class='fieldset-custm text-center'>
          <legend class='legend-custm'>Datos</legend>
           <div class="row"> 
            <div class="col-sm-1 pull-right">                        
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mdlNuevo"><i class="fas fa-plus"></i>&nbsp;Nuevo</button>                
            </div>
             <div class="col-sm-1 pull-right">
                <button type="button" id="btnGuardarTabla" class="btn btn-primary"><i class="fas fa-save"></i> Guardar</button>
            </div>   
        </div>    
      </fieldset>
        
</div>

<div id="mdlNuevo" class="modal fade" role="dialog">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h1 class="modal-title"><i class="fa fa-dollar"></i>Nuevos porcentajes</h1>
                    </div>
                    <div class="modal-body">
                        <!-- SECCION DE CONTROLES -->
                        <div class="seccion">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <label for="cboObra">Obra: </label>
                                        <select class="form-control" id="cboObra" style="width: 100%;"></select>
                                    </div>
                                    <div class=" col-lg-6">
                                        <label for="cboMoneda">Tipo de moneda: </label>
                                        <select id="cboMoneda" class="form-control" style="width: 70%;">
                                             <option value="">--Seleccione--</option>
                                            <option value="true">DLLS</option>
                                            <option value="false">MXN</option>
                                        </select>
                                    </div> 
                                    <div class=" col-lg-6">
                                        <label for="cboManoObra">Mano de obra: </label>
                                        <select id="cboManoObra" class="form-control" style="width: 70%;">
                                            <option value="">--Seleccione--</option>
                                            <option value="true">Con mano de obra</option>
                                            <option value="false">Sin mano de obra</option>
                                        </select>
                                    </div>                                     
                                    <div class=" col-lg-6">
                                        <label for="txtAxuliar">% De Eq. Auxiliar y otros: </label>
                                        <input type="text" id="txtAxuliar" class="form-control" style="width: 70%;"></select>
                                    </div>
                                    <div class=" col-lg-6">
                                        <label for="txtIndirectos">% De Indirectos matriz: </label>
                                        <input type="text" id="txtIndirectos" class="form-control" style="width: 70%;"></select>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">                            
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fas fa-undo"></i> Regresar</button>
                            <button type="button" id="btnGuardar" class="btn btn-primary"><i class="fas fa-save"></i> Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
</div>
   
    
<fieldset class='fieldset-custm'>
    <legend class='legend-custm'>Tabla</legend>
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table id="tblCaratulaIndicadores" class="table-bordered"></table>
                </div>
            </div>  
            <br>
                             
</fieldset>     

               
  
<script src="~/Scripts/js/Maquinaria/_Caratulas/CaratulaIndicadoresJS.js"></script>
