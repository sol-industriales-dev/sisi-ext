@{
    ViewBag.Title = "Almacén";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<script src="~/Scripts/js/Maquinaria/Catalogo/Almacen.js"></script>
<div class="row">
    <h2 class="text-center">Catálogo de Almacenes</h2>
</div>
<div class="row form-group">
    <div class="col-lg-12">
        <fieldset class="fieldset-custm fielset-Filtros">
            <legend class="legend-custm">Filtros:</legend>
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                <label>Descripción:</label>
                <input class="form-control" id="txtFiltroDescripcion" type="text" />
            </div>
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                <label>Dirección:</label>
                <input class="form-control" id="txtFiltroDireccion" type="text" />
            </div>
            <div class="col-lg-2 hidden">
                <label>Estatus:</label>
                <select class="form-control" id="cboEstatus">
                    <option>ACTIVO</option>
                    <option>INACTIVO</option>
                </select>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                <button type="button" class="btn btn-info margin-top" id="btnBuscar_Almacen">
                    <span class="glyphicon glyphicon-search"></span> Buscar
                </button>
            </div>
        </fieldset>
    </div>
    @*<div class="col-lg-2 text-center">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Almacén:</legend>
                <button type="button" class="btn btn-success margin-top" id="btnNuevo">
                    <span class="glyphicon glyphicon-plus"></span> Asignar
                </button>
            </fieldset>
        </div>*@
</div>
<div class="row form-group">
    <div class="col-lg-12">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Resultados Busqueda:</legend>

            <table id="grid_Almacen" class="table table-condensed table-hover table-striped text-center">
                <thead class="bg-table-header">
                    <tr>
                        @*<th data-column-id="update" data-formatter="update" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Modificar</th>
                            <th data-column-id="delete" data-formatter="delete" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Deshabilitar</th>*@
                        <th data-column-id="descripcion" data-align="center" data-header-align="center" data-sortable="false">Descripción</th>
                        <th data-column-id="direccion" data-align="center" data-header-align="center" data-sortable="false">Dirección</th>
                        @*<th data-column-id="estatus" data-align="center" data-header-align="center">Estatus</th>*@
                    </tr>
                </thead>
            </table>

        </fieldset>
    </div>
</div>

<div class="modal fade" id="modalAlmacen" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h3><label id="title-modal"></label></h3>
                </div>
            </div>
            <div class="modal-body text-center modal-content-tamaño">
                <div class="container-fluid">
                    <form id="frmAlmacen">
                        <div class="row">
                            <fieldset class="fieldset-custm">
                                <legend class="legend-custm">Datos Almacén:</legend>
                                <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                    <label>Descripción:</label>
                                    <input class="form-control" id="txtModaldescripcion" />
                                </div>
                                <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                    <label>Centro Costos</label>
                                    <input class="form-control" id="txtModalCentroCostos" />
                                </div>
                                <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                    <label>Localización</label>
                                    <input class="form-control" id="txtModalLocalizacion" />
                                </div>
                            </fieldset>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-lg-12">
                            <div>
                                <button type="button" class="btn btn-primary margin-top modal-margin-rigth pull-right" id="btnModalGuardar">
                                    <span class="glyphicon glyphicon-floppy-disk"></span> Guardar
                                </button>
                            </div>
                            <div>
                                <button type="button" class="btn btn-default margin-top modal-margin-rigth pull-right" id="btnModalGuardar" data-dismiss="modal">
                                    <span class="glyphicon glyphicon-arrow-left"></span> Cancelar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
              
            </div>
        </div>
    </div>
</div>


