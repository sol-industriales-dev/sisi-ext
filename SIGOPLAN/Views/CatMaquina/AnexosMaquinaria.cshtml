<link href="~/Content/style/css/Catalogos/AnexosMaquinariaStyle.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row text-center">
        <h2>CONSULTA DE DOCUMENTOS ECONOMICO</h2>
    </div>
    <div class="row form-group">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Consulta de Documentos:</legend>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 ">
                            <label>AC:</label>
                            <select id="cboFiltroCentroCostos" class=" form-control" multiple></select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                            <label>Tipo:</label>
                            <select id="cboTipoMaquinaria" class=" form-control"></select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                            <label>Grupo:</label>
                            <select id="cboGrupo" class=" form-control"></select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                            <label>No Económico:</label>
                            <select id="cboEconomicoFiltro" class=" form-control"></select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="col-md-4 col-lg-3 col-sm-12 col-xs-12">
                            <button type="button" class="btn btn-primary margin-top" id="btnBuscar">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                            @if (Base.getAction("PermisoCargaArchivos"))
                            {
                                <button type="button" class="btn btn-primary margin-top" id="btnAgregar">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            }

                        </div>
                        <div class="col-lg-3">
                            <label>Activos</label>
                            <div class="Activo" style="left:15px;"></div>

                        </div>
                        <div class="col-lg-3">
                            <label>Pendientes</label>
                            <div class="Pendiente" style="left: 15px;"></div>
                        </div>
                        <div class="col-lg-3">
                            <label>No Aplica</label>
                            <div class="NoAplica" style="left: 15px;"></div>
                        </div>
                    </div>
                </div>


            </fieldset>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Lista Solicitudes</legend>
                <table id="tblSolcitudesAprobadas" class="display" cellspacing="0" width="100%">
                    <thead class="bg-table-header">
                        <tr>
                            <th>no Económico</th>
                            <th>Factura</th>
                            <th>Pedimento</th>
                            <th>Póliza de Seguros</th>
                            <th>
                                Tarjeta de Circulación
                            </th>
                            <th>Permiso especial de carga</th>
                            <th>Certificación</th>
                            <th>Cuadro Comparativo</th>
                            <th>Contratos</th>
                            <th>Factura</th>
                            <th>Pedimento</th>
                            <th>Póliza de Seguros</th>
                            <th>
                                Tarjeta de Circulación
                            </th>
                            <th>Permiso especial de carga</th>
                            <th>Certificación</th>
                            <th>Cuadro Comparativo</th>
                            <th>Contratos</th>
                            <th>Ansul</th>
                        </tr>
                    </thead>
                </table>
            </fieldset>
        </div>
    </div>
</div>

<div class="modal fade" id="modalAnexoSimple" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h3><label>Cargar nuevo archivo</label></h3>
                </div>
            </div>
            <div class="modal-body modal-content-tamaño">
                <div class="container-fluid">
                    <div class="col-lg-10">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Archivo:</label>
                                <input type="file" id="updSingleAnexo" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Tipo Documento:</label>
                                <select id="cboTipoDocumentoSingle" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-primary margin-top" id="btnAddSingle">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalActualizarArchivo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h3><label>Actualizar archivo</label></h3>
                </div>
            </div>
            <div class="modal-body modal-content-tamaño">
                <div class="container-fluid">
                    <div class="col-lg-10">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Archivo:</label>
                                <input type="file" id="inputActualizarArchivo" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Tipo Documento:</label>
                                <select id="selectTipoDocumentoActualizar" class="form-control"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-primary margin-top" id="botonActualizarArchivo">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalAnexoMultiple" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h3><label>Cargar nuevo archivo</label></h3>
                </div>
            </div>
            <div class="modal-body modal-content-tamaño">
                <div class="container-fluid">
                    <div class="col-lg-12">
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <label>No Económico:</label>
                            <select id="cboEconomico" class=" form-control"></select>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Factura:</label>
                                <input type="file" id="updFactura" data-tipo="1" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Pedimento:</label>
                                <input type="file" id="updPedimento" data-tipo="2" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Poliza:</label>
                                <input type="file" id="updPoliza" data-tipo="3" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Tarjeta Circulacion:</label>
                                <input type="file" id="updTarjetaCirculacion" data-tipo="4" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Permiso Carga:</label>
                                <input type="file" id="updPermisoCarga" data-tipo="5" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Certificacion:</label>
                                <input type="file" id="updCertificacion" data-tipo="6" style="width:300px;" required="" multiple="">
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Cuadro Comparativo:</label>
                                <input type="file" id="updCuadroComparativo" data-tipo="7" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Contratos:</label>
                                <input type="file" id="updContratos" data-tipo="8" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                            <div class="col-lg-4">
                            <div class="form-group">
                                <label>Ansul:</label>
                                <input type="file" id="updAnsul" data-tipo="9" style="width:300px;" required="" multiple="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="col-lg-4">
                            <button type="button" class="btn btn-primary margin-top" id="btnGuardarData">
                                <span class="glyphicon glyphicon-floppy-disk"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Action("_menuClick", "Mouse")
@Html.Action("_visorGrid", "Visor")