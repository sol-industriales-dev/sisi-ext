@{
    ViewBag.Title = "Maquinaria";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="~/Content/style/css/Catalogos/Style-Maquinaria.css" rel="stylesheet" />
<link href="~/Content/style/Sytle-Wizard.css" rel="stylesheet" />

<script src="~/Scripts/Utilities/wizardjs.js"></script>
@*<script src="~/Scripts/js/Catalogo/Maquinaria.js"></script>*@
<script src="~/Scripts/js/Maquinaria/Catalogo/Maquina.js"></script>

<div class="row">
    <h2 class="text-center">Catálogo de Maquinaria</h2>
</div>
<div class="row form-group">
    <div class="col-lg-10">
        <fieldset class="fieldset-custm fielset-Filtros">
            <legend class="legend-custm">Filtros:</legend>
            <div class="col-xs-12 col-sm-2 col-md-4 col-lg-4">
                <label>Tipo:</label>
                <select class="form-control" id="demoTipoFiltro"></select>
            </div>
            <div class="col-xs-12 col-sm-3 col-md-4 col-lg-4">
                <label>Grupo:</label>
                <select class="form-control" id="demoGrupoFiltro"></select>
            </div>
            <div class="col-xs-12 col-sm-2 col-md-4 col-lg-4">
                <label>No. Economico:</label>
                <input type="text" id="txtFiltroNoEconomico" class="form-control" />
            </div>

            <div class="col-xs-12 col-sm-2 col-md-4 col-lg-4">
                <label>Descripción:</label>
                <input class="form-control" id="txtFiltroDescripcion" type="text" />
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label>Estatus:</label>
                <select class="form-control" id="cboFiltroEstatusMaquina">
                    <option value="1">ACTIVO</option>
                    <option value="0">INACTIVO</option>
                </select>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <button type="button" class="btn btn-info margin-top pull-right" id="btnBuscar_Maquina">
                    <span class="glyphicon glyphicon-search"></span> Buscar
                </button>
            </div>
        </fieldset>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Maquinaria:</legend>
            <button type="button" class="btn btn-success margin-top" id="btnNuevo_Maquina">
                <span class="glyphicon glyphicon-plus"></span> Nueva
            </button>
        </fieldset>
    </div>
</div>


<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Resultados Búsqueda:</legend>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <table id="grid-basic" class="table table-condensed table-hover table-striped text-center">
                    <thead class="bg-table-header">
                        <tr>
                            <th data-column-id="update" data-formatter="update" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Modificar</th>
                            <th data-column-id="delete" data-formatter="delete" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Deshabilitar</th>
                            <th data-column-id="tipo" data-align="center" data-header-align="center">Tipo</th>
                            <th data-column-id="grupo" data-align="center" data-header-align="center">Grupo</th>
                            <th data-column-id="noEco" data-align="center" data-header-align="center">No Economico</th>
                            <th data-column-id="descripcion" data-align="center" data-header-align="center">Descripción</th>
                            <th data-column-id="modelo" data-align="center" data-header-align="center">Modelo</th>

                        </tr>
                    </thead>

                </table>
            </div>

        </fieldset>
    </div>

</div>


<div class="modal fade" id="modalAltaMaquinaria" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h3><label id="title-modal"></label></h3>
                </div>
            </div>
            <div class="modal-body text-center modal-content-tamaño">
                <div class="container-fluid">
                    <div class="stepwizard">
                        <div class="stepwizard-row setup-panel">
                            <div class="stepwizard-step">
                                <a href="#step-1" type="button" class="btn btn-circle btn-default btn-primary">1</a>
                                <p>Paso 1</p>
                            </div>
                            <div class="stepwizard-step">
                                <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                                <p>Paso 2</p>
                            </div>
                            @*<div class="stepwizard-step">
                                    <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                                    <p>Paso 3</p>
                                </div>*@
                            <div class="stepwizard-step">
                                <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                                <p>Finalizar</p>
                            </div>
                        </div>
                    </div>
                    <form id="frmMaquinaria">
                        <div class="setup-content" id="step-1">

                            <div class="row form-group">
                                <fieldset class="fieldset-custm">
                                    <legend class="legend-custm">Datos Maquinaria:</legend>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="col-xs-2 col-xs-2 col-md-3 col-lg-2 form-group">
                                                <label>Equipo Rentado:</label>
                                                <select class="form-control" id="slTipoRenta">
                                                    <option value="0">No</option>
                                                    <option value="1">Si</option>
                                                </select>
                                            </div>
                                            <div class="col-xs-3 col-xs-2 col-md-2 col-lg-2 form-group">
                                                <label>Tipo:</label>
                                                <select class="form-control" id="slTipoM">
                                                    <option value="0">Seleccione:</option>
                                                    <option value="1">Equipo Mayor</option>
                                                    <option value="2">Equipo Menor</option>
                                                    <option value="3">Transporte</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Grupo:</label>
                                        <select class="form-control" id="slGrupoM">
                                            <option value="0">Seleccione:</option>
                                            <option value="2" data-maquina="1">CAMION FUERA DE CARRETERA</option>
                                            <option value="3" data-maquina="1">CARGADOR FRONTAL</option>
                                            <option value="4" data-maquina="1">CAMION ARTICULADO</option>
                                            <option value="5" data-maquina="2">CARGADOR</option>
                                            <option value="6" data-maquina="2">BAILARINA</option>
                                            <option value="7" data-maquina="2">CAMAROTE</option>
                                            <option value="8" data-maquina="3">ORQUESTA</option>
                                            <option value="9" data-maquina="3">CAJA SECA</option>
                                            <option value="1" data-maquina="3">PICK UP</option>
                                        </select>
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-2">
                                        <label>No. ECO:</label>
                                        <input type="text" id="txtnoEco" class="form-control" disabled>
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3">
                                        <label>Descripción:</label>
                                        <input type="text" id="txtDes" class="form-control">
                                    </div>
                                </fieldset>
                            </div>
                            <div class="row form-group">
                                <fieldset class="fieldset-custm">
                                    <legend class="legend-custm">Detalle Maquinaria:</legend>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Modelo:</label>
                                        <select class="form-control" id="slModelo">
                                            <option>Seleccione una opción</option>
                                            <option data-modelo="4">740B</option>
                                            <option data-modelo="2">775G</option>
                                            <option data-modelo="2">777F</option>
                                            <option data-modelo="3">928H</option>
                                            <option data-modelo="3">992K</option>
                                            <option data-modelo="3">950H</option>
                                        </select>
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Marca:</label>
                                        <input type="text" id="txtMarca" class="form-control">
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Año:</label>
                                        <select class="form-control" id="slAnio">
                                            <option>Seleccione una opción</option>
                                            <option>2010</option>
                                            <option>2011</option>
                                            <option>2012</option>
                                            <option>2013</option>
                                            <option>2014</option>
                                            <option>2015</option>
                                            <option>2016</option>
                                        </select>
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>No Serie:</label>
                                        <input type="text" id="txtNoSerie" class="form-control">
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Aseguradora:</label>
                                        <select class="form-control" id="slAseguradoras">
                                            <option>Seleccione una opción</option>
                                            <option>Aba Seguros</option>
                                            <option>Mapfre</option>
                                            <option>GNP</option>
                                            <option>AXA</option>
                                        </select>
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>No. Póliza:</label>
                                        <input type="text" id="txtNoPoliza" class="form-control">
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Vigencia Póliza:</label>
                                        <input type="text" id="txtVigencia" class="form-control">
                                    </div>


                                    @* Preguntar si se deben de poner datos especiales si es una maquina rentada*@
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <div class="hidden" id="divIsTP">
                                            <label>Placa:</label>
                                            <input type="text" id="txtPlaca" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3">
                                        <div class="hidden" id="divIsTP1">
                                            <label>Tipo encierro:</label>
                                            <select class="form-control" id="slTipoEncierro">
                                                <option>Seleccione una opción</option>
                                                <option>Libre</option>
                                                <option>Fin de semana</option>
                                                <option>Diario</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-xs-6 col-md-6 col-lg-12">
                                        <div>
                                            <button class="btn btn-primary nextBtn btn-lg pull-right margin-top modal-margin-rigth" type="button">Siguiente</button>
                                        </div>
                                        <div>
                                            <button class="btn btn-default btn-lg pull-right margin-top modal-margin-rigth reset" type="button" data-dismiss="modal">Cancelar</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>

                        </div>
                        <div class="setup-content" id="step-2">
                            <div class="row form-group">
                                <fieldset class="fieldset-custm">
                                    <legend class="legend-custm">Detalle Maquina</legend>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Tipo Combustible:</label>
                                        <select class="form-control" id="slTipoComb">
                                            <option>Seleccione una opción</option>
                                            <option>Disel</option>
                                            <option>Gasolina</option>
                                            <option>GAS</option>
                                        </select>
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Capacidad Tanque:</label>
                                        <input type="number" min="0" id="txtCapTanque" class="form-control">
                                    </div>


                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Capacidad Carga:</label>
                                        <input type="number" min="0" value="0" id="txtCapCarga" class="form-control">
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Unidad Carga:</label>
                                        <select class="form-control" id="slUniCarga">
                                            <option>Seleccione una opción</option>
                                            <option>Mestros Cubicos:</option>
                                            <option>Toneladas</option>
                                        </select>
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Proovedor:</label>
                                        <input type="text" id="txtProveedor" class="form-control">
                                    </div>

                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Fecha Adquisicion:</label>
                                        <input type="date" id="txtFechaAdquiere" class="form-control">
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Horometro Aquisicion:</label>
                                        <input type="number" min="0" value="0" id="txtHorasOpDia" class="form-control">
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Horometro Actual:</label>
                                        <input type="number" min="0" value="0" id="txtHorasOpDia" class="form-control">
                                    </div>
                                </fieldset>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-xs-12 col-md-12 col-lg-12 form-group">
                                    <div>
                                        <button class="btn btn-primary nextBtn btn-lg pull-right margin-top" type="button">Siguiente</button>
                                    </div>
                                    <div>
                                        <button class="btn btn-default btn-lg pull-right margin-top modal-margin-rigth reset" type="button" data-dismiss="modal">Cancelar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="setup-content" id="step-4">
                            <div class="row form-group">
                                <fieldset class="fieldset-custm" id="fieldComfirmacion">
                                    <legend class="legend-custm">Detalles Generales:</legend>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Tipo Maquinaria:</label>
                                        <input id="txtTipoComponente" class="form-control" disabled />
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Grupo Maquinaria:</label>
                                        <input id="txtTipoMaquinaria" class="form-control" disabled />
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>No Economico:</label>
                                        <input id="txtNumEconomico" class="form-control" disabled />
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Descripción:</label>
                                        <input id="txtDesc" class="form-control" disabled />
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>Modelo:</label>
                                        <input id="txtModelo" class="form-control" disabled />
                                    </div>
                                    <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3 form-group">
                                        <label>No. Serie:</label>
                                        <input id="txtNumSerie" class="form-control" disabled />
                                    </div>

                                    <div class="col-xs-12 col-xs-12 col-md-12 col-lg-12">
                                        <div>
                                            <button class="btn btn-primary nextBtn btn-lg pull-right margin-top" type="button" id="btnGuardar">
                                                <span class="glyphicon glyphicon-floppy-disk"></span> Guardar
                                            </button>
                                            <div>
                                                <button class="btn btn-default btn-lg pull-right margin-top modal-margin-rigth reset" type="button" data-dismiss="modal">Cancelar</button>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
