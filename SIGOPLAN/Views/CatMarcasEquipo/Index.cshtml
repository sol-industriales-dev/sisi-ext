@{
    ViewBag.Title = "Cátalogo Marca Equipos";
    Layout = "~/Views/Shared/LayoutPageExt.cshtml";
}
<script src="~/Scripts/js/Maquinaria/Catalogo/MarcasEquipo.js"></script>

<div class="row">
    <div class="col-sm-12">
        <h3 class="mbt mt5">Catálogo Marcas de Equipos</h3>
    </div>
</div>

<div class="contenedor">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <label>Grupo Maquinaria:</label>
            <select class="form-control" id="cboFiltroGrupoEquipo" title="Seleccione Grupo"></select>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <label>Descripción:</label>
            <input class="form-control" id="txtFiltroDescripcionMarcaEquipo" type="text" />
        </div>

        <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
            <label>Estatus:</label>
            <select class="form-control" id="cboFiltroEstatusMarcaEquipo">
                <option value="1">ACTIVO</option>
                <option value="0">INACTIVO</option>
            </select>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
            <button type="button" class="btn btn-info margin-top" id="btnBuscar_MarcaEquipo">
                <span class="glyphicon glyphicon-search"></span> Buscar
            </button>

            <button type="button" class="btn btn-success margin-top" id="btnNuevo_MarcaEquipo">
                <span class="glyphicon glyphicon-plus"></span> Nuevo
            </button>
        </div>
    </div>
</div>

<div class="contenedor mt10">
    <div class="row">
        <div class="col-lg-12" id="divFilstroBusqueda">
            <table id="grid_MarcaEquipo" class="table table-condensed table-hover table-striped text-center">
                <thead class="bg-table-header">
                    <tr>
                        <th data-column-id="update" data-formatter="update" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Modificar</th>
                        <th data-column-id="delete" data-formatter="delete" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Deshabilitar</th>
                        <th data-column-id="id" data-align="center" data-header-align="center" data-sortable="false">Id</th>
                        <th data-column-id="grupo" data-align="center" data-header-align="center" data-sortable="false">Grupo</th>
                        <th data-column-id="descripcion" data-align="center" data-header-align="center">Descripción</th>
                        <th data-column-id="estatus" data-align="center" data-header-align="center">Estatus</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalMarcaEquipo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <div class="text-center">
                    <h3><label id="title-modal"></label></h3>
                </div>
            </div>
            <div class="modal-body text-center modal-content-tamaño">
                <div class="container-fluid">
                    <form id="frmMarcaEquipo">
                        <div class="row">
                            <fieldset class="fieldset-custm">
                                <legend class="legend-custm">Datos Marcas de equipo:</legend>
                                <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 text-left">
                                        <label>Grupo Maquinaria:</label>
                                        <select class="form-control" id="cboModalGrupo" title="Seleccionar Grupo"></select>
                                    </div>
                                <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 form-group text-left">
                                    <label>Descripción:</label>
                                    <input class="form-control" type="text" id="txtModaldescripcionMarcaEquipo" />
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 form-group text-left">
                                    <label>Estatus:</label>
                                    <select class="form-control" id="cboModalEstatusMarcaEquipo">
                                        <option value="1">ACTIVO</option>
                                        <option value="0">INACTIVO</option>
                                    </select>
                                </div>
                            </fieldset>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-xs-6 col-sm-12 col-md-12 col-lg-12 form-group">
                            <div>
                                <button type="button" class="btn btn-primary margin-top modal-margin-rigth pull-right" id="btnModalGuardar_MarcaEquipo">
                                    <span class="glyphicon glyphicon-floppy-disk"></span> Guardar
                                </button>
                            </div>
                            <div>
                                <button type="button" class="btn btn-default margin-top modal-margin-rigth pull-right" id="btnModalCancelar_MarcaEquipo" data-dismiss="modal">
                                    <span class="glyphicon glyphicon-arrow-left"></span> Cancelar
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>