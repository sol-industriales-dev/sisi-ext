@{
    ViewBag.Title = "ReporteCapturaDiesel";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
    var idEmpresa = new SIGOPLAN.Controllers.Principal.HomeController();
}

<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<script src="~/Scripts/js/Maquinaria/Captura/Diarias/ReporteCapturaCombustibleJS.js"></script>

<div class="container-fluid">
    <div class="row text-center">
        <h2> Reporte de Captura de Diésel.</h2>
    </div>
    <div class="row form-group">
        <div class="col-xs-12 col-md-12 col-lg-12">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Filtros búsqueda:</legend>
                <div class="row form-group">
                    <div class="col-xs-12 col-md-12 col-lg-12">
                        <div>
                            <div class="col-xs-12 col-md-12 col-lg-3">
                                <label> CC</label>
                                <select class="form-control" id="txtCCFiltro"></select>
                            </div>
                            <div class="col-xs-6 col-md-4 col-lg-2">
                                <label>NO Economicos:</label>
                                <select id="cboEconomicos" class=" form-control"></select>
                            </div>
                            <div class="col-xs-6 col-md-4 col-lg-2">
                                <label>Turno:</label>
                                <select id="cboTurno" class=" form-control">
                                    <option value="0">Todos</option>
                                    <option value="1">Turno 1</option>
                                    <option value="2">Turno 2 </option>
                                    <option value="3">Turno 3 </option>
                                </select>
                            </div>
                            <div class="col-xs-12 col-md-4 col-lg-3">
                                <div class="col-xs-6 col-md-6 col-lg-6">
                                    <label for="fechaIni">Fecha Inicio:</label>
                                    <input type="text" id="fechaIni" class="form-control" />
                                </div>
                                <div class="col-xs-6 col-md-6 col-lg-6">
                                    <label for="fechaFin">Fecha Fin:</label>
                                    <input type="text" id="fechaFin" class="form-control" />
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6 col-lg-2 col-lg-4 form-group">
                                <div class="col-lg-6">
                                    <button type="button" class="btn btn-info margin-top" id="btnAplicarFiltros">
                                        <span class="glyphicon glyphicon-search"></span> Buscar
                                    </button>
                                </div>
                                <div class="col-lg-6">
                                    <button type="button" class="btn btn-info margin-top" id="btnReporte">
                                        <span class="glyphicon glyphicon-print"></span> Imprimir
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-lg-2 pull-right">
            <label>Total de Litros:</label>
            <input type="text" id="tbTotalLitros" class="form-control" disabled="" style="margin-right: 30px;">
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="divFilstroBusqueda">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Resultados Búsqueda:</legend>

                <table id="gridResultado" class="table table-condensed table-hover table-striped text-center">
                    <thead class="bg-table-header">
                        <tr>
                            <th data-column-id="Fecha" data-align="center" data-header-align="center">Fecha</th>
                            <th data-column-id="Economico" data-formatter="economico" data-align="center"
                                data-header-align="center" data-sortable="false">Economico</th>
                            <th data-column-id="Litros" data-formatter="horometro" data-align="center"
                                data-header-align="center" data-sortable="false">@(idEmpresa.getEmpresaID()
                                == 6 ?
                                "Galones" : "Litros")</th>
                            <th data-column-id="Turno" data-formatter="turno" data-align="center"
                                data-header-align="center" data-sortable="false">Turno</th>
                            <th data-column-id="CC" data-formatter="turno" data-align="center"
                                data-header-align="center" data-sortable="false">Centro Costos</th>
                        </tr>
                    </thead>
                </table>
            </fieldset>
        </div>
    </div>
</div>


@Html.Partial("reportViewerView", false)