                            <input type="text" class="form-control" autocomplete="off" id="inputFechaPolizaPQ">
                        </div>
                    </div>
                    <div class="col-sm-3 pull-right">
                        <div class="input-group pull-right">
                            <span class="input-group-addon">Tipo cambio</span>
                            <input type="text" class="form-control" autocomplete="off" id="inputTipoCambioPolizaPQ" disabled>
                        </div>
                    </div>
                    @*<div class="col-sm-3 pull-right">
                        <div class="input-group pull-right">
                            <span class="input-group-addon">Fecha tipo cambio</span>
                            <input type="text" class="form-control" autocomplete="off" id="inputFechaTipoCambioPolizaPQ">
                        </div>
                    </div>*@
                </div>
                <br />
                <div class="row" id="divRenovacion">
                    <div class="col-sm-3">
                        <div class="input-group">
                            <span class="input-group-addon">Fecha firma</span>
                            <input type="text" class="form-control" autocomplete="off" id="inputFechaFirmaPolizaPQ">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <span class="input-group-addon">Fecha vencimiento</span>
                            <input type="text" class="form-control" autocomplete="off" id="inputFechaVencimientoPolizaPQ">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <span class="input-group-addon">% Interes</span>
                            <input type="text" class="form-control" id="inputInteresPolizaPQ" autocomplete="off" />
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <span class="input-group-addon">Archivo</span>
                            <input type="file" class="form-control" id="inputArchivoRenovacionPQ" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <table id="tblPoliza" class="hover stripe order-column compact" style="width:100%;"></table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-sm-2 pull-left">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                    </div>
                    <div class="col-sm-3 pull-right">
                        <button class="btn btn-primary pull-right" id="btnGuardarPoliza"><i class="fas fa-save"></i> Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

