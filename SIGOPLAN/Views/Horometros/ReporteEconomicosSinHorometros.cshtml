@{
Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<link href="~/Content/select2.css" rel="stylesheet" />
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Content/style/datatables/dataTables.jqueryui.css" rel="stylesheet" />

<style>
    #tablaResultados thead tr th {
        color: #f5f5f5;
        background: #de8531 !important;
    }
</style>

<div class="container-fluid">
    <div class="row text-center">
        <h2> Reporte Económicos Sin Horómetros</h2>
    </div>
    <div class="row form-group">
        <div class="col-xs-12 col-md-12 col-lg-12">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Filtros búsqueda:</legend>
                <div class="row form-group">
                    <div class="col-xs-12 col-md-12 col-lg-12">
                        <div class="col-xs-12 col-md-12 col-lg-3">
                            <label> CC</label>
                            <select class="form-control" id="selectCentroCosto"></select>
                        </div>
                        <div class="col-xs-6 col-md-4 col-lg-2">
                            <label>NO Económicos:</label>
                            <select id="selectEconomico" class=" form-control"></select>
                        </div>
                        <div class="col-xs-12 col-md-4 col-lg-3">
                            <label>Fecha Inicio:</label>
                            <input type="text" id="inputFechaInicio" class="form-control">
                        </div>
                        <div class="col-xs-12 col-md-6 col-lg-2 col-lg-2 form-group">
                            <div class="col-lg-6">
                                <button type="button" class="btn btn-info margin-top" id="botonBuscar"><span class="glyphicon glyphicon-search"></span> Buscar</button>
                            </div>
                            <div class="col-lg-6">
                                <button type="button" class="btn btn-info margin-top" id="botonImprimir" style="display: none;"><span class="glyphicon glyphicon-print"></span> Imprimir</button>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Resultados Búsqueda:</legend>
                <table id="tablaResultados" class="table compact table-bordered"></table>
            </fieldset>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/Utilities/datatables/jquery.dataTables.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.jqueryui.js"></script>
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/js/Maquinaria/Captura/Diarias/ReporteEconomicosSinHorometros.js"></script>

@Html.Partial("reportViewerView", false)