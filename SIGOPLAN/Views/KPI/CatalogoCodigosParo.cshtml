<!-- Razor -->
@{
    ViewBag.Title = "Catalogo Codigos Paros";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Content/style/datatables/dataTables.jqueryui.css" rel="stylesheet" />

<!-- HTML -->
<div class="row text-center margin-top">
    <h2>Catalogo Código de Paros <i class="far fa-list-alt"></i></h2>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class="input-group">
                <span class="input-group-addon">Código:</span>
                <input class="form-control" id="inputCodigoFiltro" />
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="input-group">
                <span class="input-group-addon">Area Cuenta:</span>
                <select class="form-control" id="comboACFiltro"></select>
            </div>
        </div>
        <div class="col-md-9 col-lg-3">
            <div class="pull-right">
                <button type="button" class="btn btn-primary" id="btnBuscar">
                    <i class="fas fa-search"></i> Buscar
                </button>
            </div>
            <div class="pull-right">
                <button class="form-control btn btn-primary" id="btnNuevo">
                    <i class="fas fa-plus-square"></i>
                    Nuevo
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm"><label>Codigos de Paro:</label></legend>
            <div class="col-md-12 col-lg-12 margin-top">
                <table id="tablaCodigosParo" class=" table table-fixed table-hover table-responsive table-striped">
                    <thead class="bg-table-header">
                </table>
            </div>
        </fieldset>
    </div>
</div>

<!-- Modal para agregar Código de Paro -->
<div class="modal fade" id="modalCodigoParo" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="text-center">
                    <h3><label id="lblTituloAccionCatalogoParo"></label></h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3 col-lg-4">
                        <div class="input-group">
                            <span class="input-group-addon">Código Paro:</span>
                            <input id="inputCodigoModal" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-addon">Tipo Paro:</span>
                            <select id="cboTipoParoModal" class="form-control">

                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4">
                        <div class="input-group">
                            <span class="input-group-addon">Estatus:</span>
                            <select id="cboEstatusModal" class="form-control">
                                <option value="true">Activo</option>
                                <option value="false">Inactivo</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-9 col-lg-8">
                        <div class="input-group">
                            <span class="input-group-addon">Descripción:</span>
                            <textarea id="inputDescripcionModal" type="text" class="form-control inputDescripcion"></textarea>
                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4">
                        <div class="input-group">
                            <span class="input-group-addon">AC:</span>
                            <select id="comboAC" class="form-control"></select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button id="btnGuardar" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Elimiar Código -->
<div class="modal fade" id="modalElimiarCodigoParo" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="text-center">
                    <h3>Eliminar Código de Paro</h3>
                </div>
            </div>
            <div class="modal-body">
                <p>
                    ¿Está seguro que desea elimiar el registro seleccionado <label id="lblCodigoSeleccionado"></label>?
                </p>
            </div>  

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default">
                    <i class="fas fa-times"></i> No
                </button>
                <button id="btnEliminarCodigoParo" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Si
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Scripts -->

<script src="~/Scripts/Utilities/datatables/jquery.dataTables.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.jqueryui.js"></script>
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/js/Maquinaria/KPI/CatalogoCodigosParo.js"></script>