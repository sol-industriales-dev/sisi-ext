@{
    ViewBag.Title = "GraficaMaquinasRentadas";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<style>
    .alineado-group > .row > .col-lg-4 {
        display: inline-block;
        float:none;
    }

    .left {
        float: left;
    }

    .center {
        overflow: hidden;
        white-space: nowrap;
    }

    .right {
        float: right;
    }
</style>
<script src="~/Scripts/js/Maquinaria/Reporte/RepDetMaquinariaRentada.js"></script>
<div class="container-fluid">

    <div class="row form-group">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Filtro:</legend>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-2">
                <label>Centro Costos:</label>
                <select class="form-control no-padding" id="cboCC"></select>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 form-group">
                <label>Fecha de corte:</label>
                <input type="text" class="form-control" id="txtFechaCorte" value="" />
            </div>
            <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 form-group">
                <label>Maquina:</label>
                <select class="form-control no-padding" id="cboMaquinas" multiple></select>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-2 col-lg-1 form-group" style="display:none;">
                <button type="button" class="btn btn-info margin-top" id="btnBuscar">
                    <span class="glyphicon glyphicon-search"></span> Buscar
                </button>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-2 col-lg-1">
                <button type="button" class="btn btn-info margin-top" id="btnImprimir" style="display:none;">
                    <span class="glyphicon glyphicon-print"></span> Imprimir
                </button>
            </div>

        </fieldset>
    </div>

    <div class="row form-group">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Reporte:</legend>
            <div class="col-lg-12 form-group">
                <fieldset class="fieldset-custm">
                    <legend class="legend-custm">Grafica:</legend>

                    <canvas id="myChart" height="200" width="590"></canvas>

                </fieldset>
            </div>

            <div class="col-lg-12 form-group">
                <fieldset class="fieldset-custm">
                    <legend class="legend-custm">Acumulado:</legend>
                    <div class="left">
                        <button id="left-button" class="btn btn-secondary">
                            <span class="glyphicon glyphicon-arrow-left"></span> Izquierda
                        </button>
                    </div>
                    <div class="right">
                        <button id="right-button" class="btn btn-secondary">
                            <span class="glyphicon glyphicon-arrow-right"></span> Derecha
                        </button>
                    </div>
                    <div class="container alineado-group">
                        <div class="row text-center center" id="divAcomulado"></div>
                    </div>
                </fieldset>
            </div>
        </fieldset>
    </div>

</div>
