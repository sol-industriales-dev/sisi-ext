<h2 class="text-center">Catálogo de Actividades Taller por Modelo</h2>




        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9" style="padding-left:0;">
            <fieldset class="fieldset-custm fielset-Filtros">
                <legend class="legend-custm">Filtros:</legend>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                    <label>Calendario:</label>
                    <select class="form-control" id="cboCalendarioEstatus"></select>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
                    <label>tipo:</label>
                    <select class="form-control" id="cboTipoParo">
                        <option selected>Todos</option>
                        <option value="0">Programado</option>
                        <option value="3">Falla</option>
                    </select>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
                    <label>Estatus:</label>
                    <select class="form-control" id="cboEstatusTaller">
                        <option>Todos</option>
                        <option value="0">Sin ejecutar</option>
                        <option value="1" selected>En taller</option>
                        <option value="2">Terminado</option>
                    </select>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
                    <button type="button" class="btn btn-info margin-top" id="btnBuscarEstatus">
                        <span class="glyphicon glyphicon-search"></span> Cargar
                    </button>
                </div>
            </fieldset>
        </div>
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3" style="padding-right:0;">
            <fieldset class="fieldset-custm fielset-Filtros">
                <legend class="legend-custm">ACOTACIONES:</legend>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <span class="dot" style="background-color:#5cb85c;vertical-align: middle;margin-bottom: 5px;"></span><b>&nbsp;&nbsp;&nbsp;OVERHAUL GENERAL</b>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <span class="dot" style="background-color:#204d74;vertical-align: middle;margin-bottom: 5px;"></span><b>&nbsp;&nbsp;&nbsp;CAMBIO DE MOTOR</b>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <span class="dot" style="background-color:#ff1919;vertical-align: middle;margin-bottom: 5px;"></span><b>&nbsp;&nbsp;&nbsp;FALLO</b>
                </div>
            </fieldset>
        </div>

    <div class="row form-group">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <fieldset class="fieldset-custm">
                <legend class="legend-custm">Overhaul:</legend>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 tabla">
                    <table id="gridEstatusTaller" class="table table hover row-border compact">
                        <thead class="bg-table-header"></thead>
                    </table>
                </div>
            </fieldset>
        </div>
    </div>

