<h2 class="text-center">Presupuesto</h2>

<fieldset class="fieldset-custm">
    <legend class="legend-custm"></legend>
    <div id="avance" class="tab-pane">
        <div class="row form-group">
            <div class="col-lg-12">
                <fieldset class="fieldset-custm fielset-Filtros">
                    <legend class="legend-custm">Filtros</legend>
                    <div class="col-md-12 col-lg-12 bloqueSeparar">
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
                            <label>Año:</label>
                            <select class="form-control" id="cboAnioAvance"></select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
                            <label>Modelo:</label>
                            <select class="form-control" id="cboModeloAvance"></select>
                        </div>              
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
                            <label>Subconjunto:</label>
                            <select class="form-control" id="cboSubconjunto" style="width: 100%;"></select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
                            <label>No. Componente</label>
                            <input id="txtComponenteAvance" class="form-control" autocomplete="off">
                        </div>
                        <div class="col-lg-2">
                            <button type='button' class="btn btn-primary" id="btnBuscar"><i class="glyphicon glyphicon-search"></i> Buscar</button>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="row form-group">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                @*<fieldset class="fieldset-custm">
                    <legend class="legend-custm">Avance General de Presupuesto</legend>
