                        <table id="tblAvanceGeneral" class="table table-hover table-striped text-center" aria-busy="false"></table>
                    </div>
                </fieldset>*@

                <fieldset class="fieldset-custm">
                    <legend class="legend-custm">Avance Presupuesto</legend>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
                        <table id="tblAvance" class="table table-hover table-striped text-center" aria-busy="false"></table>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</fieldset>





