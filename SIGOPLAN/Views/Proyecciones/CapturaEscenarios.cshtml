
@{
    ViewBag.Title = "CapturaEscenarios";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<link href="~/Content/style/css/Proyecciones/catEscenarios.css" rel="stylesheet" />
<script src="~/Scripts/js/Administrativo/Proyecciones/CatEscenariosJS.js"></script>
<div class="container-fluid">
    <div class="row">
        <h2 class="text-center">Catalogó de Escenarios</h2>
    </div>
    <div class="row">
        <fieldset class="fieldset-custm fielset-Filtros">
            <legend class="legend-custm">Filtros:</legend>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <label>Escenarios:</label>
                <select class="form-control" id="cboEscenariosPrincipalesFiltro" title="Seleccione Escenario:"></select>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-5">
                <label>Descripción:</label>
                <input class="form-control" id="tbFiltroDescripcion" type="text" />
            </div>
            <div class="col-lg-3">
                <button type="button" class="btn btn-success margin-top" id="btnNuevo">
                    <span class="glyphicon glyphicon-search"></span> Nuevo
                </button>
                <button type="button" class="btn btn-info margin-top" id="btnBuscar">
                    <span class="glyphicon glyphicon-search"></span> Buscar
                </button>

            </div>
        </fieldset>
    </div>
    <div class="row form-group">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm">Resultados Búsqueda:</legend>
            <div class="col-lg-12">
                <table id="tblEscenarios" class="table table-condensed table-hover table-striped text-center">
                    <thead class="bg-table-header">
                        <tr>
                            <th data-column-id="editar" data-formatter="editar" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Modificar</th>
                            @*<th data-column-id="baja" data-formatter="baja" data-align="center" data-header-align="center" data-sortable="false" data-width="6%">Quitar</th>*@
                            <th data-column-id="Padre" data-align="center" data-header-align="center" data-sortable="false">Escenario</th>
                            <th data-column-id="Hijo" data-align="center" data-header-align="center" data-sortable="false">SubEscenario</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </fieldset>
    </div>
</div>

<div id="modalNewEscenario" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header text-center modal-bg">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="text-center"><label id="modaltitle"></label></h3>
            </div>
            <div class="modal-body">
                <div class="row form-group">
                    <div class="col-lg-12 col-xs-12 col-sm-12 col-md-12">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
                            <label>¿Escenario Secundario?:</label>
                            <div class="material-switch pull-">
                                <input id="chkEscenarioPadre" name="isPadreEscenarioN" type="checkbox" />
                                <label for="chkEscenarioPadre" class="label-primary"></label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <label>Lista Escenarios:</label>
                            <select id="cboEscenariosPrincipales" class="form-control"></select>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <label>Descripción</label>
                            <input class="form-control" id="tbModalDescEscenario" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-4 col-xs-4 col-sm-4 col-md-4 pull-right">
                    <button class="btn btn-success form-control" id="btnGuardarNuevoEscenario">
                        <span class="glyphicon glyphicon-floppy-disk"></span> Guardar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

