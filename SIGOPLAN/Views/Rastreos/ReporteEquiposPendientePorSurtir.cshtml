@{
    ViewBag.Title = "ReporteEquiposPendientePorSurtir";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<link href="~/Content/style/datatables/datatables.css" rel="stylesheet" />
<script src="~/Scripts/Utilities/datatables/datatables.js"></script>
<script src="~/Scripts/js/Maquinaria/Inventario/SolicitudesPendientesSurtirJS.js"></script>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3">
            <label>CC</label>
            <select class="form-control" id="txtCentroCostos"></select>
        </div>
        <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3">
            <label>Tipo Equipo:</label>
            <select class="form-control" id="cboTipo"></select>
        </div>
        <div class="col-xs-3 col-xs-3 col-md-3 col-lg-3">
            <label>Grupo Equipo:</label>
            <select class="form-control" id="cboModalGrupoMaquinaria"></select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">

            <table id="tblSolicitudEquipo" class="display" cellspacing="0" width="100%">
                <thead class="bg-table-header">
                    <tr>
                        <th>PROYECTO</th>
                        <th>EQUIPO</th>
                        <th>Modelo y/o Capacidad</th>
                        <th>Cant</th>
                        <th>Prioridad</th>
                        <th>DIRECCION DE MAQUINARIA (ECONOMICO)</th>
                        <th>DEPTO. DE RENTAS DE MAQ.                    </th>
                        <th>FECHA DE SOLICITUD</th>
                        <th>FECHA REQUERIDO EN OBRA</th>
                        <th>ESTATUS</th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table id="tblSolicitudEquipoRe" class="display" cellspacing="0" width="100%">
                <thead class="bg-table-header">
                    <tr>
                        <th>PROYECTO</th>
                        <th>EQUIPO</th>
                        <th>Modelo y/o Capacidad</th>
                        <th>Cant</th>
                        <th>Prioridad</th>
                        <th>DIRECCION DE MAQUINARIA     (ECONOMICO)</th>
                        <th>DEPTO. DE RENTAS DE MAQ.                    </th>
                        <th>FECHA DE SOLICITUD</th>
                        <th>FECHA REQUERIDO EN OBRA</th>
                        <th>ESTATUS</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
