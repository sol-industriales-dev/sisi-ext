<!-- Razor -->
@{
    ViewBag.Title = "Catalógo Fletes";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!-- CSS -->
<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Content/style/datatables/dataTables.jqueryui.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />

<!-- HTML -->
<div class="row text-center margin-top">
    <h2>Catálogo de Fletes <i class="fas fa-shipping-fast"></i></h2>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="pull-right">
            <button class="form-control btn btn-primary" id="botonNuevoFlete">Nuevo</button>
        </div>
    </div>
    <div class="row">
        <fieldset class="fieldset-custm">
            <legend class="legend-custm"><label>Fletes:</label></legend>
            <div class="col-md-12 col-lg-12 margin-top">
                <table id="tablaFletes" class=" table table-fixed table-hover table-responsive table-striped">
                    <thead class="bg-table-header">
                </table>
            </div>
        </fieldset>
    </div>
</div>

<!-- Modal para agregar Banco -->
<div class="modal fade" id="modalNuevoFlete" role="dialog" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="text-center">
                    <h3>Agregar nuevo Flete</h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3">
                        <div class="input-group">
                            <span class="input-group-addon">No. Economico</span>
                            <select class="form-control" id="comboNoEconomico"></select>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6">
                        <div class="input-group">
                            <span class="input-group-addon">Area Cuenta</span>
                            <input id="inputAreaCuenta" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-3 col-lg-3">
                        <div class="input-group">
                            <span class="input-group-addon">Estatus</span>
                            <select class="form-control" id="comboEstatus">
                                <option value="True">Activo</option>
                                <option value="False">DesHabilitado</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button id="botonAgregarFlete" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para eliminar Flete -->
<div class="modal fade" id="modalEliminarFlete" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-bg">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class="text-center">
                    <h3>Baja de Flete</h3>
                </div>
            </div>
            <div class="modal-body">
                <p>
                    ¿Está seguro que desea dar de baja el flete?
                </p>
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default">
                    <i class="fas fa-times"></i> No
                </button>
                <button id="botonEliminarFlete" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Si
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Scripts -->
<script src="~/Scripts/Utilities/datatables/jquery.dataTables.js"></script>
<script src="~/Scripts/Utilities/datatables/dataTables.jqueryui.js"></script>
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
<script src="~/Scripts/js/Maquinaria/Rentabilidad/CatalogoFletes.js"></script>
