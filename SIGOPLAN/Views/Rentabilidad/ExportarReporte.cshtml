@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<!--CSS-->
<link href="~/Content/style/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/Scripts/js/Principal/Home/vendor/select2/select2.min.css" rel="stylesheet" />
<link href="~/Content/style/css/Maquinaria/Rentabilidad/Externos/bootstrap-toggle.min.css" rel="stylesheet" />
<link href="~/Content/style/css/Maquinaria/Rentabilidad/Corte.css" rel="stylesheet" />

<!-- -->
<h2 class="text-center">Reportes Kubrix    <i class='fa fa-print'></i></h2>


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center no-padding">
    <div class="panel-group">
        <div class="panel panel-primary panel-filtros">
            <div class="panel-heading">
                <div class="panel-title">
                    <a @**@ href="#filtrosBusqueda">FILTROS DE BUSQUEDA</a>
                    @*<button id="botonBuscar" class="btn btn-warning pull-right" style="margin-top:-6px;"><i class="fas fa-search"></i> Buscar</button>
                        <button id="botonReportes" class="btn btn-warning pull-right" style="margin-top:-6px;margin-right:5px;"><i class="fas fa-file"></i> Reportes</button>*@
                </div>
            </div>
            <div id="filtrosBusqueda" class="panel-collapse collapse in">
                <div class="panel-body" style="display: inline-block;">
                    <div class="row col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center no-padding">
                                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center">
                                    <label>Tipo Corte:</label>
                                    <select id="cbTipoCorte" class="text-center form-control" name="cbTipoCorte">
                                        <option value="0" selected>Semanal</option>
                                        <option value="1">Mensual</option>
                                        <option value="10">Flujo</option>
                                    </select>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center">
                                    <label>Fecha Corte:</label>
                                    <input class="text-center form-control btn btn-primary" type="text" id="inputCorte" autocomplete="off" readonly="readonly" style="color: #fff;background-color: #286090;border-color: #204d74;" placeholder="Fecha">
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 text-center hidden">
                                    <label>Fecha Guardado:</label>
                                    <select id="cboHoraCorte" class="form-control" name="cboHoraCorte"></select>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3 text-center" style="padding-left:0;display:none;">
                                    <label>División:</label>
                                    <select id="comboDivision" class="form-control" name="comboDivision"></select>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3 text-center no-padding-right" style="display:none;">
                                    <label>Responsable:</label>
                                    <select id="comboResponsable" class="form-control" name="comboResponsable"></select>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 text-center" style="display:none;">
                                    <label>Area Cuenta:</label><br />
                                    <span id="spanComboAC" class="form-control" style="position:absolute;overflow-x:hidden;">TODOS</span>
                                    <select id="comboAC" class="form-control" name="comboAC" multiple="multiple" style=""></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center" style="padding-left: 0;">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a  href="#filtrosBusqueda">Reporte Semanal</a>
                        @*<button id="botonBuscar" class="btn btn-warning pull-right" style="margin-top:-6px;"><i class="fas fa-search"></i> Buscar</button>
                            <button id="botonReportes" class="btn btn-warning pull-right" style="margin-top:-6px;margin-right:5px;"><i class="fas fa-file"></i> Reportes</button>*@
                    </div>
                </div>
                <div id="filtrosBusqueda" class="panel-collapse collapse in">
                    <div class="panel-body" style="display: inline-block;">
                        <div class="row text-center">
                            <div class="btn-group mr-2 text-center" role="group" aria-label="First group">
                                <button id="btnReporteSemanalActual" type="button" class="btn btn-info">Actual</button>
                                <button id="btnReporteSemanalAcumulado" type="button" class="btn btn-info">Acumulado</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a  href="#filtrosBusqueda">Reporte Por Subcuenta</a>
                    </div>
                </div>
                <div id="filtrosBusqueda" class="panel-collapse collapse in">
                    <div class="panel-body" style="display: inline-block;">
                        <div class="row text-center">
                            <div class="btn-group mr-2 text-center" role="group" aria-label="First group">
                                <button id="btnReporteSubcuentaActual" type="button" class="btn btn-info">Actual</button>
                                <button id="btnReporteSubcuentaAcumulado" type="button" class="btn btn-info">Acumulado</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a  href="#filtrosBusqueda">Guardado Flujo</a>
                    </div>
                </div>
                <div id="filtrosBusqueda" class="panel-collapse collapse in">
                    <div class="panel-body" style="display: inline-block;">
                        <div class="row text-center">
                            <div class="btn-group mr-2 text-center" role="group" aria-label="First group">
                                @*<button id="btnGuardarEstimados" type="button" class="btn btn-primary" style="display:none;">Kubrix</button>*@
                                <button id="btnGuardarEstimadosFlujo" type="button" class="btn btn-info">Estimados</button>
                                @*<button id="btnGuardarSoloEstimados" type="button" class="btn btn-primary" style="display:none;">Solo Estimados</button>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center no-padding-right">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a  href="#filtrosBusqueda">Envío Correo</a>
                    </div>
                </div>
                <div id="filtrosBusqueda" class="panel-collapse collapse in">
                    <div class="panel-body" style="display: inline-block;">
                        <div class="row text-center">
                            <div class="btn-group mr-2 text-center" role="group" aria-label="First group">
                                <button id="btnReporteCplan" type="button" class="btn btn-info">Costos</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-center" style="padding-left: 0;">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a  href="#filtrosBusqueda">Reporte Saldos</a>
                    </div>
                </div>
                <div id="filtrosBusqueda" class="panel-collapse collapse in">
                    <div class="panel-body" style="display: inline-block;">
                        <div class="row text-center">
                            <div class="btn-group mr-2 text-center" role="group" aria-label="First group">
                                <button id="btnReporteSaldosCplan" type="button" class="btn btn-info">Construplan</button>
                                <button id="btnReporteSaldosArrendadora" type="button" class="btn btn-info">Arrendadora</button>
                                <button id="btnReporteSaldosColombia" type="button" class="btn btn-info">Colombia</button>
                                <button id="btnReporteSaldosCplanEici" type="button" class="btn btn-info">EICI</button>
                                <button id="btnReporteSaldosCplanIntegradora" type="button" class="btn btn-info">Integradora</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a  href="#filtrosBusqueda">Reporte Clientes</a>
                    </div>
                </div>
                <div id="filtrosBusqueda" class="panel-collapse collapse in">
                    <div class="panel-body" style="display: inline-block;">
                        <div class="row text-center">
                            <div class="btn-group mr-2 text-center" role="group" aria-label="First group">
                                <button id="btnReporteClientes" type="button" class="btn btn-info">Construplan</button>
                                <button id="btnReporteClientesEici" type="button" class="btn btn-info">EICI</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center no-padding-right">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        <a  href="#filtrosBusqueda">Reporte Vencimientos</a>
                    </div>
                </div>
                <div id="filtrosBusqueda" class="panel-collapse collapse in">
                    <div class="panel-body" style="display: inline-block;">
                        <div class="row text-center">
                            <div class="btn-group mr-2 text-center" role="group" aria-label="First group">
                                <button id="btnReporteVencimientos" type="button" class="btn btn-info">Construplan</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center" style="display:none;">
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-2 text-center">
            <button id="btnReporteSemanal" class="btn btn-primary margin-top pull-right"><i class="fas fa-print"></i> Reporte Semanal</button>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-2 text-center">
            <button id="btnReporteSubcuentas" class="btn btn-primary margin-top pull-right"><i class="fas fa-print"></i> Reporte Subcuentas</button>
        </div>


        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-2 text-center">
            <button id="btnCargarComponentes" class="btn btn-primary margin-top pull-right"><i class="fas fa-save"></i> CargarCompoentes</button>
        </div>
    </div>
</div>


<!-- Scripts -->
<script src="~/Scripts/Utilities/datatables/datatables.min.js"></script>
<script src="~/Scripts/js/Maquinaria/Rentabilidad/Externos/bootstrap-toggle.min.js"></script>
<script src="~/Scripts/js/Principal/Home/js/bootstrap-tooltip.js"></script>
<script src="~/Scripts/js/Principal/Home/vendor/select2/select2.min.js"></script>
<script src="~/Scripts/moment-with-locales.min.js"></script>
<script src="~/Scripts/js/Maquinaria/Rentabilidad/ExportarReporteJS.js"></script>
