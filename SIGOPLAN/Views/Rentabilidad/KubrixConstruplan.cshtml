<div class="row">
    <div class="col-sm-12 no-gutter">
        <div class="seccion">
            <h3 class="col-sm-12 text-center tituloVista">REPORTE KUBRIX CONSTRUPLAN</h3>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 no-gutter">
        <div class="seccion filtros">
            <h4 class="tituloFiltro"><i class='fas fa-filter'></i>&nbsp;&nbsp;&nbsp;Filtros</h4>
            <button id='btnBuscar' type='button' class='btn btn-primary pull-right botonTitulo'><i class='fa fa-search'></i> Buscar</button>
            <input id="cboEjercicio" type="checkbox" data-toggle="toggle" data-on="Acumulado" data-off="Actual">     
            <div class="col-sm-5 pull-right">
                <label style="display: inline-flex; align-items: center;"><input class="tipoAgrupacion" type="checkbox" checked/>&nbsp;&nbsp;CONSOLIDADO</label>
                <label style="display: inline-flex; align-items: center;"><input class="tipoAgrupacion" type="checkbox" />&nbsp;&nbsp;CONSTRUPLAN</label>
                <label style="display: inline-flex; align-items: center;"><input class="tipoAgrupacion" type="checkbox" />&nbsp;&nbsp;ARRENDADORA</label>
            </div>         
            <hr style="margin-bottom:5px; width: 100%" />

            <div class="col-sm-2 elementoFiltro">
                <div class="col-sm-12 no-gutter text-align-center">
                    <label>Tipo Corte:</label>
                    <hr class="hrFiltro" />
                </div>
                <div class="col-sm-12 no-gutter" style="display:inline-flex;">
                    <select id="cboTipoCorte" class="text-center form-control" name="cboTipoCorte">
                        <option value="1" selected>SEMANAL</option>
                        <option value="2">MENSUAL</option>
                        <option value="3">FLUJO</option>
                    </select>
                </div>
            </div>

            <div class="col-sm-4 elementoFiltro">
                <div class="col-sm-12 no-gutter text-align-center">
                    <label>Fecha:</label>
                    <hr class="hrFiltro" />
                </div>
                <div class="col-sm-12 no-gutter" style="display:inline-flex;">
                    <select id="cboFechaCorte" class="form-control" name="cboFechaCorte"> </select>
                </div>
            </div>

            @*<div class="col-sm-3 elementoFiltro">
                <div class="col-sm-12 no-gutter text-align-center">
                    <label>División:</label>
                    <hr class="hrFiltro" />
                </div>
                <div class="col-sm-12 no-gutter" style="display:inline-flex;">
                    <select id="cboDivision" class="form-control" name="cboDivision"></select>
                </div>
            </div>*@

            @*<div class="col-sm-3 elementoFiltro">
                <div class="col-sm-12 no-gutter text-align-center">
                    <label>Responsable:</label>
                    <hr class="hrFiltro" />
                </div>
                <div class="col-sm-12 no-gutter" style="display:inline-flex;">
                    <select id="cboResponsable" class="form-control" name="cboResponsable"></select>
                </div>
            </div>*@

            <div class="col-sm-6 elementoFiltro">
                <div class="col-sm-12 no-gutter text-align-center">
                    <label>Centro Costos:</label>
                    <hr class="hrFiltro" />
                </div>
                <div class="col-sm-12 no-gutter" style="display:inline-flex;">
                    <select id="cboCC" class="form-control" multiple="multiple" name="cboCC"></select>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 no-gutter">
        <div class="seccion">
            <h4 class="tituloFiltro"><i class='fas fa-file'></i>&nbsp;&nbsp;&nbsp;Información</h4>
            @*<button id='btnModalAutorizar' type='button' class='btn btn-success pull-right botonTitulo'><i class='fa fa-user'></i> Autorizar</button>*@
