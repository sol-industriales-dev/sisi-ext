<style>
    #tblData tbody tr td {
        text-align: center;
        vertical-align: middle;
    }

    #tblData tbody tr .celdaNumerica {
        text-align: right;
    }

    #tblData tfoot tr td {
        border: none;
        text-align: center;
        vertical-align: middle;
    }

    #tblData tfoot tr .celdaNumerica {
        text-align: right;
    }

    #tblData tbody .rowSeleccionado {
        /*background-color: #eff0f1;*/
        /*background-color: #FFCF8B;*/
        background-color: #ffa;
    }
