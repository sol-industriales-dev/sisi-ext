@{
    ViewBag.Title = "Provision de máquinaria";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<link href="~/Content/style/bootstrap-switch.css" rel="stylesheet" />
<script src="~/Scripts/Utilities/bootstrap-switch.min.js"></script>
<link href="~/Content/style/css/Style-Reportes.css" rel="stylesheet" />
<script src="~/Scripts/js/Maquinaria/Reporte/RepProvisionMaquina.js"></script>
<div class="container-fluid">
    <div class="row form-group">
        <div class="col-lg-12 col-xs-12 col-sm-12 col-md-12">
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-3">
                <label>Centro Costos:</label>
                <select class="form-control" id="cboCC" value=""></select>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 form-group" style="z-index: 1">
                <label>Fecha de corte:</label>
                <input type="text" class="form-control" id="fechaCorte" />
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 form-group">
                <label>Tipo de cambio:</label>
                <input type="number" class="form-control" id="nTC" value="18">
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 form-group">
                <label>Consultar solo reportes activos</label>
                <input type="checkbox" id="cbTodoReporte" checked>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 pull-right">
                <div class="col-lg-2 col-xs-4 col-sm-4 col-md-4">
                    <button class="btn btn-success form-control" id="btnBuscarProvicional">
                        <span class="glyphicon glyphicon-search"></span> Buscar
                    </button>
                </div>
                <div class="col-lg-2 col-xs-4 col-sm-4 col-md-4 pull-right">
                    <button class="btn btn-success form-control" id="btnReporteProvicional">
                        <span class="glyphicon glyphicon-file"></span> Imprimir reporte
                    </button>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-lg-12">
                <fieldset class="">
                    <legend class="legend-custm">Equipo en renta:</legend>
                    <div class="col-lg-6">
                        <div class="table-responsive">
                            <table id="divProvisionTabla" class="table table-hover table-striped text-center">
                                <thead class="bg-table-header">
                                    <tr>
                                        <th data-column-id="NoEconomico" data-align="center" data-header-align="center" data-width="25%">ECONOMICO</th>
                                        <th data-column-id="Equipo" data-align="center" data-header-align="center" data-width="25%">FACTURA</th>
                                        <th data-column-id="Inicio" data-align="center" data-header-align="center" data-width="25%">INICIO</th>
                                        <th data-column-id="Termino" data-align="center" data-header-align="center" data-width="25%">TERMINO</th>
                                        <th data-column-id="strCostoRenta" data-align="center" data-header-align="center" data-width="25%">COSTO RENTA</th>
                                        <th data-column-id="strPU" data-align="center" data-header-align="center" data-width="25%">PU</th>
                                        <th data-column-id="HrsFac" data-align="center" data-header-align="center" data-width="25%"> HRS FAC</th>
                                        <th data-column-id="HrsCons" data-align="center" data-header-align="center" data-width="25%">HRS CONS</th>
                                        <th data-column-id="strImporteConsumido" data-align="center" data-header-align="center" data-width="25%">IMPORTE CONSUMIDO</th>
                                        <th data-column-id="strImporteTotal" data-align="center" data-header-align="center" data-width="25%">IMPORTE TOTAL</th>
                                        <th data-column-id="Moneda" data-align="center" data-header-align="center" data-width="25%">DIVISA</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="table-responsive">
                            <table id="divExtraTabla" class="table table-hover table-striped text-center">
                                <thead class="bg-table-header">
                                    <tr>
                                        <th data-column-id="NoEconomico" data-align="center" data-header-align="center" data-width="25%">ECONOMICO</th>
                                        <th data-column-id="FacturaExtra" data-align="center" data-header-align="center" data-width="25%">FACTURA EXTRA</th>
                                        <th data-column-id="HrsExtra" data-align="center" data-header-align="center" data-width="25%"> HRS ADICIONAL</th>
                                        <th data-column-id="strPUHrsExtra" data-align="center" data-header-align="center" data-width="25%">PU HR AD</th>
                                        <th data-column-id="strImporteConsumidoExtra" data-align="center" data-header-align="center" data-width="25%">IMPORTE CONSUM</th>
                                        <th data-column-id="strImporteTotalExtra" data-align="center" data-header-align="center" data-width="25%">IMPORTE TOTAL</th>
                                        <th data-column-id="Moneda" data-align="center" data-header-align="center" data-width="25%">DIVISA</th>
                                        <th data-column-id="strAnotacion" data-align="center" data-header-align="center" data-width="25%">ANOTACIONES</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </fieldset>
                <div class="col-lg-4">
                    <label>TOTAL</label>
                    <div class="col-lg-12 input-group">
                        <div class="col-lg-12">
                            <label>TOTAL DLLS</label>
                            <input type="text" class="form-control" id="txtTotalDlls" disabled />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <label>T.C.</label>
                        <input type="text" class="form-control" id="txtTotalTC" disabled />
                    </div>
                    <div class="col-lg-12">
                        <label>TOTAL PESOS</label>
                        <input type="text" class="form-control" id="txtTotalPesos" disabled />
                    </div>
                    <div class="col-lg-12">
                        <label>TOTAL(MN)</label>
                        <input type="text" class="form-control" id="txtTotalMN" disabled />
                    </div>
                </div>
                <div class="col-lg-4">
                    <label>TOTAL ADICIONAL</label>
                    <div class="col-lg-12 input-group">
                        <div class="col-lg-12">
                            <label>TOTAL DLLS</label>
                            <input type="text" class="form-control" id="txtExtraDlls" disabled />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <label>T.C.</label>
                        <input type="text" class="form-control" id="txtExtraTC" disabled />
                    </div>
                    <div class="col-lg-12">
                        <label>TOTAL PESOS</label>
                        <input type="text" class="form-control" id="txtExtraPesos" disabled />
                    </div>
                    <div class="col-lg-12" id="divToalProvisionar">
                        <label>TOTAL(MN)</label>
                        <input type="text" class="form-control" id="txtExtraMN" disabled />
                    </div>
                </div>
                <div class="col-lg-4">
                    <label>RESUMEN RENTA</label>
                    <div class="col-lg-12 input-group">
                        <div class="col-lg-12">
                            <label>TOTAL DLLS</label>
                            <input type="text" class="form-control" id="txtResumenDlls" disabled />
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <label>T.C.</label>
                        <input type="text" class="form-control" id="txtResumenTC" disabled />
                    </div>
                    <div class="col-lg-12">
                        <label>TOTAL PESOS</label>
                        <input type="text" class="form-control" id="txtResumenPesos" disabled />
                    </div>
                    <div class="col-lg-12" id="divToalProvisionar">
                        <label>TOTAL(MN)</label>
                        <input type="text" class="form-control" id="txtResumenMN" disabled />
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("reportViewerView", false)
</div>