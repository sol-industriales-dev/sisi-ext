<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, shrink-to-fit=no">
    <title>Acrobat Like Document Viewer In Asp.Net .NET Core</title>

    <link href="~/css/viewer.css" rel="stylesheet" />

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-icons.css" rel="stylesheet" />

    <!-- Drop zone css (for upload)-->
    <link href="~/scripts/dropzone/basic.css" rel="stylesheet" />
    <link href="~/scripts/dropzone/dropzone.css" rel="stylesheet" />

    <style>
        #divDocViewer {
            width: 100%;
            border-radius: 6px;
            border: 2px grey;
            background-color: whitesmoke;
        }

        /* IMP: This css is required to avoid bootstrap css shrinking the main viewer */

        .docPage {
            max-width: none;
        }

        .pageFooter {
            width: 99%;
            position: absolute;
            bottom: 20px;
            z-index: 999;
        }

            .pageFooter span {
                display: none;
                background-color: gray;
                opacity: 0.60;
                border-radius: 6px;
                border: solid 1px black;
                color: white;
                font-weight: bold;
                padding: 5px;
                margin: 5px;
                margin-left: 10px;
                margin-right: 10px;
                float: right;
            }

        .row {
            margin-right: 0;
            margin-left: 0
        }

        .col {
            padding-right: 0;
            padding-left: 0;
        }

        .card-body {
            padding: 0.25rem;
        }

        .bi {
            color: black;
            font-size: 1.5em;
            float: left;
            margin-right: 10px;
        }

        .btn {
            font-size: 1em;
            color: white;
        }

        .form-control {
            width: 100px;
        }

        /* end css */
        .loader {
            border: 5px solid #f3f3f3;
            border-top: 5px solid #3498db;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            animation: spin 2s linear infinite;
            float: right;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        @@media screen and (max-width: 1200px) {
            .bi {
                font-size: 1.25em;
            }

            .loader {
                border: 2px solid #f3f3f3;
                border-top: 2px solid #3498db;
                width: 20px;
                height: 20px;
            }
        }

        @@media screen and (max-width: 600px) {
            .bi {
                font-size: 1.0em;
            }

            .loader {
                border: 1px solid #f3f3f3;
                border-top: 1px solid #3498db;
                width: 15px;
                height: 15px;
            }
        }
    </style>

</head>

<body>

    <main id="divMain">
        <div class="row mb-12 text-center">
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <!-- Menu -->
                    @await Html.PartialAsync("_Menu")

                    <div class="card-body">
                        <div id="divDocViewer">
                            <div id="div_ctlDoc"></div>
                        </div>
                        <div class="pageFooter">
                            <span id="pageCounter"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


    <!--Modal: Upload-->
    @await Html.PartialAsync("_Upload")

    <!--Modal: Print-->
    @await Html.PartialAsync("_Print")

    <!-- Annotation properties modal -->
    @await Html.PartialAsync("_AnnProperties")

    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>

    <script src="~/scripts/splitter.js"></script>
    <script src="~/scripts/docViewer.js"></script>
    <script src="~/scripts/documentLinks.js"></script>

    <!-- Search optional -->
    <script src="~/scripts/search.js"></script>

    <!-- Annotation optional -->
    <script src="~/scripts/jquery-ui.min.js"></script>
    <script src="~/scripts/annotation.js"></script>
    <script src="~/scripts/annotation-helper.js"></script>
    <script src="~/scripts/raphael.js"></script>

    <!-- Drop Zone JS (For upload) -->
    <script type="text/javascript" src="~/scripts/dropzone/dropzone.js"></script>

    <!-- The main JavaScript file for viewer functions -->
    <script src="~/scripts/docViewer-helper.js"></script>


</body>
</html>